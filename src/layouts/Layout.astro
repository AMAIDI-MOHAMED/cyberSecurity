---
import Header from '../components/Header.astro';
import MobileMenu from '../components/MobileMenu.astro';
import Footer from '@/components/sections/Footer.astro';
import Breadcrumbs from '@/components/navigation/Breadcrumbs.astro';
import '@styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  type?: 'website' | 'article' | 'service' | 'organization';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  schema?: object;
}

const { 
  title, 
  description, 
  keywords,
  image,
  canonical,
  noindex = false,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  schema
} = Astro.props;

const path = Astro.url.pathname.replace(/\/$/, '');
const lang = path.startsWith('/fi') ? 'fi' : 'en';

// SEO defaults
const siteName = "Cyber Security Finland";
const siteUrl = "https://cybersecurity.fi";
const defaultDescription = lang === 'fi' 
  ? "Kyberturvallisuuden asiantuntijat Suomessa. ISO 27001, NIS2, GDPR ja DORA -vaatimustenmukaisuuspalvelut. Nopea toteutus, asiantunteva tuki."
  : "Cybersecurity experts in Finland. ISO 27001, NIS2, GDPR, and DORA compliance services. Fast implementation, expert support.";

const pageTitle = title ? `${title} | ${siteName}` : siteName;
const pageDescription = description || defaultDescription;
const pageImage = image ? (image.startsWith('http') ? image : `${siteUrl}${image}`) : `${siteUrl}/images/social.png`;
const pageUrl = canonical || `${siteUrl}${Astro.url.pathname}`;

// Generate hreflang links
const basePath = lang === 'fi' ? path.replace(/^\/fi/, '') || '/' : path;
const enUrl = `${siteUrl}${basePath}`;
const fiUrl = `${siteUrl}/fi${basePath === '/' ? '' : basePath}`;
---

<html lang={lang} class="scroll-pt-28">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Basic SEO -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    {keywords && <meta name="keywords" content={keywords} />}
    
    <!-- Robots -->
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />
    
    <!-- Hreflang -->
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="fi" href={fiUrl} />
    <link rel="alternate" hreflang="x-default" href={enUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={lang === 'fi' ? 'fi_FI' : 'en_US'} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {author && <meta property="article:author" content={author} />}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={pageImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/Logo Blue_F.svg" />
    <link rel="apple-touch-icon" href="/Logo Blue_F.svg" />
    
    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    
    <!-- DNS prefetch for better performance -->
    <link rel="dns-prefetch" href="//www.google-analytics.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    
    <!-- Structured Data -->
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
    
    <!-- Default Organization Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Cyber Security Finland",
        "url": "https://cybersecurity.fi",
        "logo": "https://cybersecurity.fi/Logo Blue_F.svg",
        "sameAs": [
          "https://www.linkedin.com/company/cyber-security-finland"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+358 44 5040308",
          "contactType": "customer service",
          "availableLanguage": ["English", "Finnish"]
        },
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "FI",
          "addressLocality": "Finland"
        },
        "description": "Expert cybersecurity and compliance services for Finnish businesses. ISO 27001, NIS2, GDPR, and DORA implementation with proven methodologies.",
        "serviceType": [
          "Cybersecurity Consulting",
          "ISO 27001 Implementation", 
          "NIS2 Compliance",
          "GDPR Compliance",
          "DORA Implementation",
          "Risk Management",
          "Information Security"
        ],
        "areaServed": {
          "@type": "Country",
          "name": "Finland"
        }
      }
    </script>
  </head>
  <body class="bg-off-white">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-white px-4 py-2 rounded shadow">Skip to content</a>
    <Header />
    <MobileMenu />
    {(() => {
      if (path === '' || path === '/' || path === '/fi') return null;
      return <div class="bg-white border-b border-slate-200"><div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2"><Breadcrumbs /></div></div>;
    })()}
    <main id="main" class="min-h-[60vh]">
      <slot />
    </main>
    <Footer />
  </body>
</html>

