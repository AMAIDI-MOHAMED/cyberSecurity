---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.upcoming.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.upcoming.description}</p>
      </div>
      
      <div class="space-y-8">
        {currentContent.upcoming.events.map((event) => (
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-8 rounded-lg border border-blue-200">
            <div class="grid md:grid-cols-3 gap-6">
              <div class="md:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                  <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">{event.type}</span>
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">{event.status}</span>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3">{event.title}</h3>
                <p class="text-gray-700 mb-4">{event.description}</p>
                <div class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span class="font-medium">{event.speaker}</span>
                </div>
              </div>
              <div class="text-center md:text-right">
                <div class="bg-white p-4 rounded-lg border border-blue-200">
                  <div class="text-2xl font-bold text-blue-600 mb-1">{event.date}</div>
                  <div class="text-gray-600">{event.time}</div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Past Events Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.past.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.past.description}</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {currentContent.past.events.map((event) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">{event.title}</h3>
            <div class="space-y-2 text-sm text-gray-600 mb-4">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {event.date}
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {event.duration}
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                {event.attendees}
              </div>
            </div>
            <div class="flex gap-2">
              <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">{event.recording}</span>
              <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{event.materials}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Event Series Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.series.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.series.description}</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {currentContent.series.ongoing.map((series) => (
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-lg border border-purple-200">
            <div class="flex items-center justify-between mb-4">
              <span class="bg-purple-600 text-white px-2 py-1 rounded text-xs font-medium">{series.status}</span>
            </div>
            <h3 class="text-xl font-bold text-purple-900 mb-3">{series.title}</h3>
            <p class="text-purple-800 mb-4">{series.description}</p>
            <div class="space-y-2 text-sm text-purple-700">
              <div class="font-medium">{series.schedule}</div>
              <div><strong>Seuraava:</strong> {series.next}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Registration Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.registration.title}</h2>
        <p class="text-xl text-gray-600">{currentContent.registration.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Event Benefits</h3>
          <ul class="space-y-3">
            {currentContent.registration.benefits.map((benefit) => (
              <li class="flex items-center text-gray-700">
                <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {benefit}
              </li>
            ))}
          </ul>
        </div>
        
        <div>
          <form class="bg-white p-6 rounded-lg shadow-lg">
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.name} *</label>
              <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.email} *</label>
              <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="mb-4">
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.company}</label>
              <input type="text" id="company" name="company" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="mb-4">
              <label for="role" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.role}</label>
              <input type="text" id="role" name="role" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="mb-4">
              <label for="events" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.events}</label>
              <textarea id="events" name="events" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
            </div>
            
            <div class="mb-6">
              <label for="questions" class="block text-sm font-medium text-gray-700 mb-2">{currentContent.registration.form.questions}</label>
              <textarea id="questions" name="questions" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
            </div>
            
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
              {currentContent.registration.form.submit}
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-4">{currentContent.cta.title}</h2>
      <p class="text-xl mb-8">{currentContent.cta.subtitle}</p>
      <a href={currentContent.cta.link} class="inline-block bg-white text-blue-600 font-semibold py-3 px-8 rounded-lg hover:bg-gray-100 transition duration-300">
        {currentContent.cta.button}
      </a>
    </div>
  </section>
</Layout>
