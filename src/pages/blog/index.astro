---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const title = "Blog";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Blog & Guides",
    subtitle: "Expert Insights, Practical Guides & Industry Resources",
    description: "Stay ahead of cybersecurity trends with our expert insights, comprehensive implementation guides, and practical resources. From compliance frameworks to emerging threats, we cover everything you need to know.",
    featuredSection: "Featured Content",
    guidesSection: "Implementation Guides",
    eventsSection: "Webinars & Events",
    caseStudiesSection: "Success Stories",
    trustSection: "Trust & Certification",
    readinessSection: "Assessment Tools",
    viewAll: "View All",
    latestPosts: "Latest Articles",
    categories: "Content Categories",
    subscribe: "Get Expert Insights",
    subscribeText: "Join 10,000+ security professionals getting weekly insights",
    emailPlaceholder: "Enter your email address",
    subscribeButton: "Subscribe Now"
  },
  fi: {
    title: "Blogi ja oppaat",
    subtitle: "Asiantuntijanäkemyksiä, käytännön oppaita ja toimialaresursseja",
    description: "Pysy kyberturvallisuustrendien kärjessä asiantuntijanäkemyksillemme, kattavilla toteutusoppaillamme ja käytännön resursseilla. Compliance-kehikoista nouseviin uhkiin - käsittelemme kaiken mitä tarvitset.",
    featuredSection: "Suositeltu sisältö",
    guidesSection: "Toteutusoppaat",
    eventsSection: "Webinaarit ja tapahtumat",
    caseStudiesSection: "Menestystarinat",
    trustSection: "Luottamus ja sertifiointi",
    readinessSection: "Arviointityökalut",
    viewAll: "Katso kaikki",
    latestPosts: "Uusimmat artikkelit",
    categories: "Sisältökategoriat",
    subscribe: "Saa asiantuntijanäkemyksiä",
    subscribeText: "Liity 10 000+ turvallisuusasiantuntijan joukkoon - viikoittaiset oivallukset",
    emailPlaceholder: "Syötä sähköpostiosoitteesi",
    subscribeButton: "Tilaa nyt"
  }
};

const currentContent = content[lang];

const blogCategories = [
  {
    icon: 'book',
    titleFi: 'Toteutusoppaat',
    titleEn: 'Implementation Guides',
    descFi: 'Yksityiskohtaiset, vaiheittaiset oppaat compliance-kehikoiden toteutukseen',
    descEn: 'Detailed, step-by-step guides for implementing compliance frameworks',
    href: '/blog/guides-and-templates',
    countFi: '25+ opasta',
    countEn: '25+ guides',
    color: 'blue'
  },
  {
    icon: 'users',
    titleFi: 'Webinaarit ja tapahtumat',
    titleEn: 'Webinars & Events',
    descFi: 'Asiantuntijawebinaarit, virtuaalitapahtumat ja koulutusmateriaalit',
    descEn: 'Expert webinars, virtual events and training materials',
    href: '/blog/webinars-and-events',
    countFi: 'Viikoittain',
    countEn: 'Weekly',
    color: 'green'
  },
  {
    icon: 'trending-up',
    titleFi: 'Menestystarinat',
    titleEn: 'Success Stories',
    descFi: 'Asiakastapaukset ja onnistuneet compliance-toteutukset',
    descEn: 'Customer cases and successful compliance implementations',
    href: '/blog/case-studies',
    countFi: '15+ tarinaa',
    countEn: '15+ stories',
    color: 'purple'
  },
  {
    icon: 'shield-check',
    titleFi: 'Luottamuskeskus',
    titleEn: 'Trust Center',
    descFi: 'Sertifioinnit, auditointiraportit ja turvallisuusperiaatteet',
    descEn: 'Certifications, audit reports and security principles',
    href: '/blog/trust-center',
    countFi: 'Reaaliaikainen',
    countEn: 'Real-time',
    color: 'indigo'
  },
  {
    icon: 'check-circle',
    titleFi: 'Valmiusarvioinnit',
    titleEn: 'Readiness Assessments',
    descFi: 'Ilmaiset itsearviointityökalut ja valmiuskartoitukset',
    descEn: 'Free self-assessment tools and readiness evaluations',
    href: '/blog/readiness-checks',
    countFi: '10+ työkalua',
    countEn: '10+ tools',
    color: 'orange'
  }
];

const featuredArticles = [
  {
    titleFi: 'NIS2-direktiivi: Suomen toteutus ja vaikutukset',
    titleEn: 'NIS2 Directive: Finland Implementation and Impact',
    descFi: 'Kattava analyysi NIS2-direktiivin kansallisesta toimeenpanosta ja vaikutuksista suomalaisiin yrityksiin',
    descEn: 'Comprehensive analysis of NIS2 directive national implementation and impact on Finnish companies',
    author: 'DataNova Team',
    date: '2024-12-15',
    readTime: '8 min',
    category: 'Regulation',
    href: '/regulatory/nis2-finland'
  },
  {
    titleFi: 'ISO 27001:2022 - Mitä muuttui ja miten valmistautua',
    titleEn: 'ISO 27001:2022 - What Changed and How to Prepare',
    descFi: 'Yksityiskohtainen vertailu vanhan ja uuden version välillä sekä käytännön neuvoja siirtymiseen',
    descEn: 'Detailed comparison between old and new versions plus practical advice for transition',
    author: 'Security Expert',
    date: '2024-12-10',
    readTime: '12 min',
    category: 'Standards',
    href: '/frameworks/iso-27001'
  },
  {
    titleFi: 'DORA-säännöstö: Digitaalinen resilienssisääntely rahoitusalalla',
    titleEn: 'DORA Regulation: Digital Operational Resilience in Finance',
    descFi: 'Rahoitusalan digitaalisen operatiivisen kestävyyden säännöstön vaatimukset ja toteutus',
    descEn: 'Requirements and implementation of digital operational resilience regulation in finance',
    author: 'Compliance Specialist',
    date: '2024-12-05',
    readTime: '10 min',
    category: 'Finance',
    href: '/regulatory/dora'
  }
];

const stats = [
  { valueFi: '10k+', valueEn: '10k+', labelFi: 'Kuukausittaista lukijaa', labelEn: 'Monthly readers' },
  { valueFi: '150+', valueEn: '150+', labelFi: 'Asiantuntija-artikkelia', labelEn: 'Expert articles' },
  { valueFi: '25+', valueEn: '25+', labelFi: 'Toteutusopasta', labelEn: 'Implementation guides' },
  { valueFi: '50+', valueEn: '50+', labelFi: 'Webinaaritaltiointia', labelEn: 'Webinar recordings' }
];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-50 to-blue-50 py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-6">
          <Icon name="edit" class="w-4 h-4 mr-2" />
          {currentContent.title}
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          {currentContent.subtitle}
        </h1>
        <p class="text-xl text-gray-600 max-w-4xl mx-auto mb-8">
          {currentContent.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="#categories" variant="primary">
            {currentContent.viewAll}
          </Button>
          <Button href="/contact" variant="secondary">
            {lang === 'fi' ? 'Pyydä asiantuntija-apua' : 'Get Expert Help'}
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">
              {lang === 'fi' ? stat.valueFi : stat.valueEn}
            </div>
            <div class="text-gray-600">
              {lang === 'fi' ? stat.labelFi : stat.labelEn}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          {currentContent.featuredSection}
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {lang === 'fi' 
            ? 'Uusimmat asiantuntija-artikkelit ja toteutusoppaat'
            : 'Latest expert articles and implementation guides'
          }
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {featuredArticles.map((article) => (
          <article class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                  {article.category}
                </span>
                <span class="text-sm text-gray-500">{article.readTime}</span>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2">
                {lang === 'fi' ? article.titleFi : article.titleEn}
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-3">
                {lang === 'fi' ? article.descFi : article.descEn}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                    <Icon name="user" class="w-4 h-4 text-blue-600" />
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">{article.author}</div>
                    <div class="text-xs text-gray-500">{article.date}</div>
                  </div>
                </div>
                <Button href={article.href} variant="secondary">
                  {lang === 'fi' ? 'Lue lisää' : 'Read More'}
                </Button>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Content Categories -->
  <section id="categories" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          {currentContent.categories}
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {lang === 'fi' 
            ? 'Löydä sisältö kategorian mukaan - oppaista webinaareihin'
            : 'Find content by category - from guides to webinars'
          }
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogCategories.map((category) => (
          <div class={`bg-gradient-to-br from-${category.color}-50 to-${category.color}-100 rounded-lg p-8 hover:shadow-lg transition-all hover:scale-105`}>
            <div class={`w-12 h-12 bg-${category.color}-100 rounded-lg flex items-center justify-center mb-6`}>
              <Icon name={category.icon} class={`w-6 h-6 text-${category.color}-600`} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {lang === 'fi' ? category.titleFi : category.titleEn}
            </h3>
            <p class="text-gray-600 mb-4">
              {lang === 'fi' ? category.descFi : category.descEn}
            </p>
            <div class={`text-sm font-medium text-${category.color}-600 mb-6`}>
              {lang === 'fi' ? category.countFi : category.countEn}
            </div>
            <Button href={category.href} variant="secondary" className="w-full">
              {lang === 'fi' ? 'Tutustu sisältöön' : 'Explore Content'}
            </Button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-indigo-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        {currentContent.subscribe}
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        {currentContent.subscribeText}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
        <input 
          type="email" 
          placeholder={currentContent.emailPlaceholder}
          class="flex-1 px-4 py-3 rounded-lg border-0 focus:ring-2 focus:ring-blue-300"
        />
        <Button variant="secondary">
          {currentContent.subscribeButton}
        </Button>
      </div>
      <p class="text-sm text-blue-200 mt-4">
        {lang === 'fi' 
          ? 'Ei roskapostia. Voit perua tilauksen milloin tahansa.'
          : 'No spam. You can unsubscribe at any time.'
        }
      </p>
    </div>
  </section>
</Layout>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.description}</p>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">{currentContent.featuredSection}</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Guides & Templates -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-blue-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.guidesSection}</h3>
          <p class="text-gray-600 mb-6">Comprehensive cybersecurity guides and ready-to-use templates for your organization.</p>
          <a href="/blog/guides-and-templates" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Webinars & Events -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-green-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.eventsSection}</h3>
          <p class="text-gray-600 mb-6">Join our webinars and events to learn from industry experts and stay ahead of threats.</p>
          <a href="/blog/webinars-and-events" class="inline-flex items-center text-green-600 hover:text-green-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Case Studies -->
        <div class="bg-gradient-to-br from-purple-50 to-violet-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.caseStudiesSection}</h3>
          <p class="text-gray-600 mb-6">Real-world examples of how organizations have successfully implemented cybersecurity solutions.</p>
          <a href="/blog/case-studies" class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Trust Center -->
        <div class="bg-gradient-to-br from-orange-50 to-amber-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-orange-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.trustSection}</h3>
          <p class="text-gray-600 mb-6">Transparent information about our security practices, compliance, and governance framework.</p>
          <a href="/blog/trust-center" class="inline-flex items-center text-orange-600 hover:text-orange-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Readiness Checks -->
        <div class="bg-gradient-to-br from-red-50 to-pink-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-red-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.readinessSection}</h3>
          <p class="text-gray-600 mb-6">Assess your organization's cybersecurity readiness with our comprehensive evaluation tools.</p>
          <a href="/blog/readiness-checks" class="inline-flex items-center text-red-600 hover:text-red-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Subscribe Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">{currentContent.subscribe}</h2>
      <p class="text-xl text-gray-600 mb-8">{currentContent.subscribeText}</p>
      
      <form class="max-w-md mx-auto">
        <div class="flex gap-4">
          <input 
            type="email" 
            placeholder={currentContent.emailPlaceholder}
            class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
          >
            {currentContent.subscribeButton}
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to strengthen your cybersecurity?</h2>
      <p class="text-xl mb-8">Explore our comprehensive resources and get started on your security journey today.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="px-8 py-3 bg-white text-blue-600 font-medium rounded-lg hover:bg-gray-100 transition-colors">
          Contact Us
        </a>
        <a href="/services" class="px-8 py-3 border-2 border-white text-white font-medium rounded-lg hover:bg-white hover:text-blue-600 transition-colors">
          Our Services
        </a>
      </div>
    </div>
  </section>
</Layout>

