---
import Layout from '@/layouts/Layout.astro';

const title = "Blog";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Blog",
    subtitle: "Insights, Guides, and Resources",
    description: "Stay updated with the latest cybersecurity insights, practical guides, and industry resources. Explore our comprehensive collection of articles, templates, and tools.",
    featuredSection: "Featured Content",
    guidesSection: "Guides & Templates",
    eventsSection: "Webinars & Events",
    caseStudiesSection: "Case Studies",
    trustSection: "Trust Center",
    readinessSection: "Readiness Checks",
    viewAll: "View All",
    latestPosts: "Latest Posts",
    categories: "Categories",
    subscribe: "Subscribe to Updates",
    subscribeText: "Get the latest cybersecurity insights delivered to your inbox",
    emailPlaceholder: "Enter your email address",
    subscribeButton: "Subscribe"
  },
  fi: {
    title: "Blogi",
    subtitle: "Oivalluksia, oppaita ja resursseja",
    description: "Pysy ajan tasalla uusimmilla kyberturvallisuusnäkemyksillä, käytännön oppailla ja toimialaresursseilla. Tutustu kattavaan kokoelmaamme artikkeleita, malleja ja työkaluja.",
    featuredSection: "Suositeltu sisältö",
    guidesSection: "Oppaat ja mallit",
    eventsSection: "Webinaarit ja tapahtumat",
    caseStudiesSection: "Tapaustutkimukset",
    trustSection: "Luottamuskeskus",
    readinessSection: "Valmiuskartoitukset",
    viewAll: "Katso kaikki",
    latestPosts: "Uusimmat artikkelit",
    categories: "Kategoriat",
    subscribe: "Tilaa päivitykset",
    subscribeText: "Saa uusimmat kyberturvallisuusnäkemykset suoraan sähköpostiisi",
    emailPlaceholder: "Syötä sähköpostiosoitteesi",
    subscribeButton: "Tilaa"
  }
};

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.description}</p>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">{currentContent.featuredSection}</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Guides & Templates -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-blue-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.guidesSection}</h3>
          <p class="text-gray-600 mb-6">Comprehensive cybersecurity guides and ready-to-use templates for your organization.</p>
          <a href="/blog/guides-and-templates" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Webinars & Events -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-green-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.eventsSection}</h3>
          <p class="text-gray-600 mb-6">Join our webinars and events to learn from industry experts and stay ahead of threats.</p>
          <a href="/blog/webinars-and-events" class="inline-flex items-center text-green-600 hover:text-green-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Case Studies -->
        <div class="bg-gradient-to-br from-purple-50 to-violet-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.caseStudiesSection}</h3>
          <p class="text-gray-600 mb-6">Real-world examples of how organizations have successfully implemented cybersecurity solutions.</p>
          <a href="/blog/case-studies" class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Trust Center -->
        <div class="bg-gradient-to-br from-orange-50 to-amber-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-orange-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.trustSection}</h3>
          <p class="text-gray-600 mb-6">Transparent information about our security practices, compliance, and governance framework.</p>
          <a href="/blog/trust-center" class="inline-flex items-center text-orange-600 hover:text-orange-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Readiness Checks -->
        <div class="bg-gradient-to-br from-red-50 to-pink-100 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-red-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{currentContent.readinessSection}</h3>
          <p class="text-gray-600 mb-6">Assess your organization's cybersecurity readiness with our comprehensive evaluation tools.</p>
          <a href="/blog/readiness-checks" class="inline-flex items-center text-red-600 hover:text-red-800 font-medium">
            {currentContent.viewAll}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Subscribe Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">{currentContent.subscribe}</h2>
      <p class="text-xl text-gray-600 mb-8">{currentContent.subscribeText}</p>
      
      <form class="max-w-md mx-auto">
        <div class="flex gap-4">
          <input 
            type="email" 
            placeholder={currentContent.emailPlaceholder}
            class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
          >
            {currentContent.subscribeButton}
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to strengthen your cybersecurity?</h2>
      <p class="text-xl mb-8">Explore our comprehensive resources and get started on your security journey today.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="px-8 py-3 bg-white text-blue-600 font-medium rounded-lg hover:bg-gray-100 transition-colors">
          Contact Us
        </a>
        <a href="/services" class="px-8 py-3 border-2 border-white text-white font-medium rounded-lg hover:bg-white hover:text-blue-600 transition-colors">
          Our Services
        </a>
      </div>
    </div>
  </section>
</Layout>
