  </section>

  <!-- Templates Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.templates.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.templates.description}</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h3 class="text-xl font-bold text-gray-900 mb-4">{currentContent.templates.policies.title}</h3>
          <p class="text-gray-600 mb-6">{currentContent.templates.policies.description}</p>
          <ul class="space-y-2">
            {currentContent.templates.policies.items.map((item) => (
              <li class="flex items-center text-gray-700">
                <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h3 class="text-xl font-bold text-gray-900 mb-4">{currentContent.templates.checklists.title}</h3>
