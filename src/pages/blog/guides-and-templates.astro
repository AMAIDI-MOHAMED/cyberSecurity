---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Guides Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.guides.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.guides.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-lg border border-blue-200">
          <div class="flex items-center justify-between mb-4">
            <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">{currentContent.guides.iso27001.level}</span>
            <span class="text-blue-600 text-sm">{currentContent.guides.iso27001.duration}</span>
          </div>
          <h3 class="text-2xl font-bold text-blue-900 mb-3">{currentContent.guides.iso27001.title}</h3>
          <p class="text-blue-800 mb-4">{currentContent.guides.iso27001.description}</p>
          <div class="flex flex-wrap gap-2">
            {currentContent.guides.iso27001.tags.map((tag) => (
              <span class="bg-blue-200 text-blue-800 px-2 py-1 rounded text-xs">{tag}</span>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-lg border border-green-200">
          <div class="flex items-center justify-between mb-4">
            <span class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium">{currentContent.guides.gdpr.level}</span>
            <span class="text-green-600 text-sm">{currentContent.guides.gdpr.duration}</span>
          </div>
          <h3 class="text-2xl font-bold text-green-900 mb-3">{currentContent.guides.gdpr.title}</h3>
          <p class="text-green-800 mb-4">{currentContent.guides.gdpr.description}</p>
          <div class="flex flex-wrap gap-2">
            {currentContent.guides.gdpr.tags.map((tag) => (
              <span class="bg-green-200 text-green-800 px-2 py-1 rounded text-xs">{tag}</span>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-lg border border-purple-200">
          <div class="flex items-center justify-between mb-4">
            <span class="bg-purple-600 text-white px-3 py-1 rounded-full text-sm font-medium">{currentContent.guides.soc2.level}</span>
            <span class="text-purple-600 text-sm">{currentContent.guides.soc2.duration}</span>
          </div>
          <h3 class="text-2xl font-bold text-purple-900 mb-3">{currentContent.guides.soc2.title}</h3>
          <p class="text-purple-800 mb-4">{currentContent.guides.soc2.description}</p>
          <div class="flex flex-wrap gap-2">
            {currentContent.guides.soc2.tags.map((tag) => (
              <span class="bg-purple-200 text-purple-800 px-2 py-1 rounded text-xs">{tag}</span>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-8 rounded-lg border border-orange-200">
          <div class="flex items-center justify-between mb-4">
            <span class="bg-orange-600 text-white px-3 py-1 rounded-full text-sm font-medium">{currentContent.guides.dora.level}</span>
            <span class="text-orange-600 text-sm">{currentContent.guides.dora.duration}</span>
          </div>
          <h3 class="text-2xl font-bold text-orange-900 mb-3">{currentContent.guides.dora.title}</h3>
          <p class="text-orange-800 mb-4">{currentContent.guides.dora.description}</p>
          <div class="flex flex-wrap gap-2">
            {currentContent.guides.dora.tags.map((tag) => (
              <span class="bg-orange-200 text-orange-800 px-2 py-1 rounded text-xs">{tag}</span>
            ))}
