  <!-- Tools Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.resources.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.resources.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {currentContent.resources.tools.map((tool) => (
          <div class="bg-gradient-to-br from-slate-50 to-slate-100 p-6 rounded-lg border border-slate-200 text-center">
            <div class="text-4xl mb-4">{tool.icon}</div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{tool.title}</h3>
            <p class="text-gray-600 text-sm">{tool.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Resources Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.featured.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.featured.description}</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {currentContent.featured.items.map((item) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center justify-between mb-3">
              <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium">{item.category}</span>
              <span class="text-gray-500 text-sm">{item.updated}</span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{item.title}</h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-4">{currentContent.cta.title}</h2>
      <p class="text-xl mb-8">{currentContent.cta.subtitle}</p>
      <a href={currentContent.cta.link} class="inline-block bg-white text-blue-600 font-semibold py-3 px-8 rounded-lg hover:bg-gray-100 transition duration-300">
        {currentContent.cta.button}
      </a>
    </div>
  </section>
</Layout>
