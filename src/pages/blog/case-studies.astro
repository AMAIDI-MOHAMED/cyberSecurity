    </div>
  </section>

  <!-- Methodologies Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.methodologies.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.methodologies.description}</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
