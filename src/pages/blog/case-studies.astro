---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Featured Case Studies Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.featured.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.featured.description}</p>
      </div>
      
      <div class="space-y-12">
        {currentContent.featured.studies.map((study, index) => (
          <div class={`grid md:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'md:grid-flow-col-dense' : ''}`}>
            <div class={index % 2 === 1 ? 'md:col-start-2' : ''}>
              <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-8 rounded-lg border border-blue-200">
                <div class="flex items-center gap-3 mb-4">
                  <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">{study.industry}</span>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{study.title}</h3>
                
                <div class="mb-6">
                  <h4 class="font-semibold text-gray-900 mb-2">Challenge:</h4>
                  <p class="text-gray-700">{study.challenge}</p>
                </div>
                
                <div class="mb-6">
                  <h4 class="font-semibold text-gray-900 mb-2">Solution:</h4>
                  <p class="text-gray-700">{study.solution}</p>
                </div>
                
                <div class="mb-6">
                  <h4 class="font-semibold text-gray-900 mb-2">Results:</h4>
                  <ul class="space-y-2">
                    {study.results.map((result) => (
                      <li class="flex items-center text-gray-700">
                        <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        {result}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
            
            <div class={index % 2 === 1 ? 'md:col-start-1' : ''}>
              <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-200">
                <h4 class="text-lg font-semibold text-gray-900 mb-6 text-center">Key Metrics</h4>
                <div class="space-y-6">
                  <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600 mb-2">{study.metrics.timeline}</div>
                    <div class="text-gray-600">Implementation Timeline</div>
                  </div>
                  <div class="text-center">
                    <div class="text-3xl font-bold text-green-600 mb-2">{study.metrics.improvement}</div>
                    <div class="text-gray-600">Improvement</div>
                  </div>
                  <div class="text-center">
                    <div class="text-2xl font-bold text-purple-600 mb-2">{study.metrics.certification}</div>
                    <div class="text-gray-600">Certification</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industry Solutions Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.industries.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.industries.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.industries.sectors.map((sector) => (
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300">
            <div class="text-4xl mb-4">{sector.icon}</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{sector.name}</h3>
            <p class="text-gray-600 mb-3">{sector.description}</p>
            <div class="text-blue-600 font-medium">{sector.count}</div>
          </div>
        ))}
