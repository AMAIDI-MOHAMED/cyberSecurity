      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Security Practices Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.security.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.security.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.security.practices.map((practice) => (
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-lg border border-blue-200">
            <div class="flex items-center justify-between mb-4">
              <div class="text-3xl">{practice.icon}</div>
              <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium">{practice.status}</span>
            </div>
            <h3 class="text-lg font-semibold text-blue-900 mb-3">{practice.title}</h3>
            <p class="text-blue-800 text-sm">{practice.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Compliance Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.compliance.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.compliance.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {currentContent.compliance.certifications.map((cert) => (
          <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">{cert.name}</h3>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">{cert.status}</span>
            </div>
            <p class="text-gray-600 mb-4">{cert.description}</p>
            <div class="space-y-2 text-sm text-gray-700">
              <div><strong>Valid until:</strong> {cert.validUntil}</div>
              <div><strong>Scope:</strong> {cert.scope}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Privacy Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">{currentContent.privacy.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{currentContent.privacy.description}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.privacy.policies.map((policy) => (
          <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-lg border border-green-200">
            <h3 class="text-lg font-semibold text-green-900 mb-3">{policy.title}</h3>
            <p class="text-green-800 text-sm mb-4">{policy.description}</p>
            <div class="text-xs text-green-600 bg-green-200 px-2 py-1 rounded">
