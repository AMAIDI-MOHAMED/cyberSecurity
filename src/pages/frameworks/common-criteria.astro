---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';
import Button from '@/components/ui/Button.astro';

const title = "Common Criteria";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "Common Criteria Security Evaluation and Certification",
  subtitle: "Achieve international security certification with our specialized Common Criteria implementation methodology for Finnish organizations.",
  description: "We help Finnish organizations implement Common Criteria requirements, building robust security evaluation frameworks that meet international standards for IT product security.",
  primaryCTA: { text: "Start Common Criteria Implementation", href: "/contact" },
  secondaryCTA: { text: "Download Common Criteria Guide", href: "/resources/guides/common-criteria-guide" }
};

const keyBenefits = [
  {
    title: "International Recognition",
    description: "Achieve globally recognized security certification accepted by 30+ countries worldwide.",
    icon: "globe"
  },
  {
    title: "Finnish Market Expertise",
    description: "Deep understanding of Finnish security requirements and international Common Criteria standards.",
    icon: "flag"
  },
  {
    title: "Security Evaluation",
    description: "Comprehensive security evaluation and testing aligned with international standards.",
    icon: "shield-check"
  },
  {
    title: "Market Access",
    description: "Enable access to government and enterprise markets requiring Common Criteria certification.",
    icon: "building-library"
  }
];

const commonCriteriaRequirements = [
  {
    requirement: "Security Target Development",
    description: "Develop comprehensive security target documentation defining security requirements",
    controls: ["Security Objectives", "Threat Analysis", "Security Requirements", "Assurance Requirements"],
    icon: "document-text"
  },
  {
    requirement: "Security Evaluation",
    description: "Conduct thorough security evaluation of IT products and systems",
    controls: ["Vulnerability Analysis", "Penetration Testing", "Security Testing", "Evaluation Reports"],
    icon: "magnifying-glass"
  },
  {
    requirement: "Assurance Evaluation",
    description: "Assess security assurance levels and implementation quality",
    controls: ["Development Process", "Documentation Review", "Testing Procedures", "Quality Assurance"],
    icon: "check-circle"
  },
  {
    requirement: "Certification Process",
    description: "Navigate the formal certification process with accredited laboratories",
    controls: ["Laboratory Selection", "Evaluation Coordination", "Certification Submission", "Ongoing Compliance"],
    icon: "badge-check"
  },
  {
    requirement: "Maintenance and Updates",
    description: "Maintain certification through product updates and security patches",
    controls: ["Change Management", "Security Updates", "Re-evaluation", "Continuous Monitoring"],
    icon: "arrow-path"
  }
];

const implementationPhases = [
  {
    phase: "Phase 1: Assessment & Planning",
    duration: "Weeks 1-8",
    activities: ["Gap Analysis", "Scope Definition", "Security Target Planning", "Resource Planning"],
    deliverables: ["Gap Analysis Report", "Project Charter", "Security Target Outline", "Resource Plan"]
  },
  {
    phase: "Phase 2: Security Target Development",
    duration: "Weeks 9-20",
    activities: ["Security Objectives", "Threat Analysis", "Security Requirements", "Assurance Requirements"],
    deliverables: ["Security Target Document", "Threat Model", "Security Requirements", "Assurance Plan"]
  },
  {
    phase: "Phase 3: Implementation & Testing",
    duration: "Weeks 21-36",
    activities: ["Security Implementation", "Testing Procedures", "Documentation", "Quality Assurance"],
    deliverables: ["Security Implementation", "Test Results", "Documentation Suite", "Quality Reports"]
  },
  {
    phase: "Phase 4: Evaluation & Certification",
    duration: "Weeks 37-48",
    activities: ["Laboratory Evaluation", "Certification Process", "Final Documentation", "Certification"],
    deliverables: ["Evaluation Report", "Common Criteria Certificate", "Final Documentation", "Operational Procedures"]
  }
];

const industryExamples = [
  {
    industry: "Cybersecurity Products",
    challenge: "Achieving Common Criteria certification for enterprise security solutions",
    solution: "Comprehensive security evaluation framework with rigorous testing procedures",
    outcome: "Common Criteria EAL4+ certification with enhanced market credibility"
  },
  {
    industry: "Government Systems",
    challenge: "Meeting security requirements for government IT infrastructure",
    solution: "Security target development aligned with government security standards",
    outcome: "Common Criteria certification enabling government market access"
  },
  {
    industry: "Financial Technology",
    challenge: "Implementing Common Criteria for fintech security products",
    solution: "Security evaluation framework addressing financial sector requirements",
    outcome: "Common Criteria certification with international market recognition"
  }
];

const relatedServices = [
  { title: "ISO 27001 Implementation", href: "/frameworks/iso-27001", description: "Information security management" },
  { title: "Security Testing", href: "/frameworks/security-testing", description: "Comprehensive security evaluation" },
  { title: "Product Security", href: "/frameworks/product-security", description: "IT product security assessment" },
  { title: "Certification Support", href: "/frameworks/certification-support", description: "Certification process guidance" }
];
---

<Layout title={title}>
  <HeroSection content={heroContent} />
  
  <!-- Key Benefits Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Why Choose Our Common Criteria Services</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          We deliver Common Criteria compliance with international security expertise, ensuring your organization can achieve globally recognized security certification.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {keyBenefits.map((benefit) => (
          <div class="bg-gradient-to-br from-slate-50 to-white p-8 rounded-xl border border-slate-200 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{benefit.title}</h3>
            <p class="text-slate-600 leading-relaxed">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Common Criteria Requirements Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Common Criteria Compliance Requirements</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Our Common Criteria implementation covers all key requirements, ensuring comprehensive compliance with international security evaluation standards.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {commonCriteriaRequirements.map((requirement) => (
          <div class="bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">{requirement.requirement}</h3>
            <p class="text-slate-600 mb-6">{requirement.description}</p>
            <h4 class="font-semibold text-slate-900 mb-3">Key Controls:</h4>
            <ul class="space-y-2">
              {requirement.controls.map((control) => (
                <li class="flex items-center text-slate-600">
                  <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {control}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Implementation Phases Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">48-Week Implementation Roadmap</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Structured approach ensuring successful Common Criteria compliance within 48 weeks while maintaining business operations.
        </p>
      </div>
      
      <div class="space-y-8">
        {implementationPhases.map((phase, index) => (
          <div class="bg-slate-50 p-8 rounded-xl border border-slate-200 shadow-lg">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold">
                  {index + 1}
                </div>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-4">
                  <h3 class="text-2xl font-bold text-slate-900">{phase.phase}</h3>
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                    {phase.duration}
                  </span>
                </div>
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <h4 class="font-semibold text-slate-900 mb-3">Key Activities</h4>
                    <ul class="space-y-2">
                      {phase.activities.map((activity) => (
                        <li class="flex items-center text-slate-600">
                          <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                          </svg>
                          {activity}
                        </li>
                      ))}
                    </ul>
                  </div>
                  <div>
                    <h4 class="font-semibold text-slate-900 mb-3">Deliverables</h4>
                    <ul class="space-y-2">
                      {phase.deliverables.map((deliverable) => (
                        <li class="flex items-center text-slate-600">
                          <svg class="w-4 h-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                          {deliverable}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industry Examples Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Industry-Specific Success Stories</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          See how we've helped organizations across different industries achieve Common Criteria certification.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {industryExamples.map((example) => (
          <div class="bg-white p-8 rounded-xl border border-slate-200">
            <div class="mb-4">
              <span class="inline-block bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                {example.industry}
              </span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">Challenge</h3>
            <p class="text-slate-600 mb-6">{example.challenge}</p>
            <h4 class="text-lg font-semibold text-slate-900 mb-3">Our Solution</h4>
            <p class="text-slate-600 mb-6">{example.solution}</p>
            <h4 class="text-lg font-semibold text-slate-900 mb-3">Outcome</h4>
            <p class="text-slate-600">{example.outcome}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Related Services Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Related Services</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Enhance your security evaluation posture with our complementary services and frameworks.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {relatedServices.map((service) => (
          <a href={service.href} class="group">
            <div class="bg-slate-50 p-6 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow group-hover:border-blue-300">
              <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-blue-600 transition-colors">
                {service.title}
              </h3>
              <p class="text-slate-600 text-sm">{service.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA 
    title="Ready to Achieve Common Criteria Certification?"
    description="Join Finnish organizations that have successfully implemented Common Criteria with our expert guidance. Let's discuss how we can help you achieve international security certification."
    primaryCTA={{ text: "Start Your Common Criteria Journey", href: "/contact" }}
    secondaryCTA={{ text: "Download Common Criteria Guide", href: "/resources/guides/common-criteria-guide" }}
  />
</Layout>
