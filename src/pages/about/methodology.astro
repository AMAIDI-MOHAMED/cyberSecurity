---
import Layout from '@/layouts/Layout.astro';

const title = "Methodology";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Our Methodology",
    subtitle: "Proven Approach to Cybersecurity Excellence",
    heroDescription: "Our systematic methodology combines industry best practices with practical experience to deliver measurable results and sustainable security improvements.",
    approach: {
      title: "Our Approach",
      subtitle: "Systematic and results-driven methodology"
    },
    phases: {
      title: "Implementation Phases",
      subtitle: "Structured approach to achieving your security goals"
    },
    frameworks: {
      title: "Framework Integration",
      subtitle: "Seamlessly integrate multiple compliance standards"
    },
    tools: {
      title: "Tools and Technologies",
      subtitle: "Leverage cutting-edge solutions for optimal results"
    }
  },
  fi: {
    title: "Metodologiamme",
    subtitle: "Todistettu Lähestymistapa Kyberturvallisuuden Erinomaisuuteen",
    heroDescription: "Systemaattinen metodologiamme yhdistää alan parhaat käytännöt käytännönkokemukseen tuottaakseen mitattavia tuloksia ja kestäviä turvallisuusparannuksia.",
    approach: {
      title: "Lähestymistapamme",
      subtitle: "Systemaattinen ja tuloksellinen metodologia"
    },
    phases: {
      title: "Toteutusvaiheet",
      subtitle: "Järjestelmällinen lähestymistapa turvallisuustavoitteidesi saavuttamiseen"
    },
    frameworks: {
      title: "Kehysten Integrointi",
      subtitle: "Integroi saumattomasti useita noudattamisstandardeja"
    },
    tools: {
      title: "Työkalut ja Teknologiat",
      subtitle: "Hyödynnä huippuluokan ratkaisuja optimaalisten tulosten saavuttamiseksi"
    }
  }
};

const methodologyPhases = [
  {
    phase: "1",
    title: "Assessment & Discovery",
    description: "Comprehensive evaluation of current security posture, risks, and compliance gaps",
    activities: ["Security maturity assessment", "Risk identification", "Gap analysis", "Stakeholder interviews"],
    duration: "2-4 weeks"
  },
  {
    phase: "2",
    title: "Strategy & Planning",
    description: "Develop comprehensive security strategy aligned with business objectives and compliance requirements",
    activities: ["Security roadmap creation", "Resource planning", "Timeline development", "Success metrics definition"],
    duration: "2-3 weeks"
  },
  {
    phase: "3",
    title: "Implementation & Execution",
    description: "Systematic implementation of security controls, policies, and procedures",
    activities: ["Control implementation", "Policy development", "Training delivery", "Process documentation"],
    duration: "8-16 weeks"
  },
  {
    phase: "4",
    title: "Validation & Optimization",
    description: "Verify effectiveness of implemented controls and optimize for continuous improvement",
    activities: ["Control testing", "Audit preparation", "Performance optimization", "Continuous monitoring setup"],
    duration: "2-4 weeks"
  }
];

const frameworkIntegration = [
  {
    name: "ISO 27001",
    description: "Information Security Management System foundation",
    benefits: ["Risk-based approach", "Continuous improvement", "International recognition"]
  },
  {
    name: "NIS2",
    description: "EU cybersecurity directive compliance",
    benefits: ["Regulatory alignment", "Incident reporting", "Supply chain security"]
  },
  {
    name: "DORA",
    description: "Digital Operational Resilience for financial services",
    benefits: ["ICT risk management", "Digital resilience", "Financial sector focus"]
  },
  {
    name: "GDPR",
    description: "Data protection and privacy compliance",
    benefits: ["Privacy by design", "Data governance", "Rights management"]
  },
  {
    name: "SOC 2",
    description: "Trust services criteria for service organizations",
    benefits: ["Third-party assurance", "Control effectiveness", "Customer confidence"]
  }
];

const toolsAndTechnologies = [
  {
    category: "Risk Assessment",
    tools: ["Qualys", "Rapid7", "Tenable", "Custom risk matrices"]
  },
  {
    category: "Compliance Management",
    tools: ["OneTrust", "TrustArc", "Custom compliance dashboards"]
  },
  {
    category: "Security Testing",
    tools: ["Burp Suite", "Metasploit", "Nmap", "Custom testing frameworks"]
  },
  {
    category: "Monitoring & Analytics",
    tools: ["Splunk", "ELK Stack", "Custom SIEM solutions"]
  }
];

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Approach Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.approach.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.approach.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Evidence-Based</h3>
          <p class="text-slate-600">Our recommendations are grounded in industry research, best practices, and real-world experience.</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Risk-Focused</h3>
          <p class="text-slate-600">We prioritize security measures based on actual risk exposure and business impact.</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Continuous Improvement</h3>
          <p class="text-slate-600">We establish processes for ongoing monitoring, assessment, and enhancement of security posture.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Phases Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.phases.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.phases.subtitle}</p>
      </div>
      
      <div class="space-y-8">
        {methodologyPhases.map((phase) => (
          <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold">
                  {phase.phase}
                </div>
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-2xl font-semibold text-slate-900">{phase.title}</h3>
                  <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    {phase.duration}
                  </span>
                </div>
                <p class="text-lg text-slate-600 mb-4">{phase.description}</p>
                <div>
                  <p class="text-sm font-medium text-slate-700 mb-2">Key Activities:</p>
                  <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    {phase.activities.map((activity) => (
                      <li class="flex items-center text-slate-600">
                        <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                        {activity}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Framework Integration Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.frameworks.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.frameworks.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {frameworkIntegration.map((framework) => (
          <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-3">{framework.name}</h3>
            <p class="text-slate-600 mb-4">{framework.description}</p>
            <div>
              <p class="text-sm font-medium text-slate-700 mb-2">Key Benefits:</p>
              <ul class="space-y-1">
                {framework.benefits.map((benefit) => (
                  <li class="flex items-center text-sm text-slate-600">
                    <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tools Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.tools.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.tools.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {toolsAndTechnologies.map((category) => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-4">{category.category}</h3>
            <div class="space-y-2">
              {category.tools.map((tool) => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                  <span class="text-slate-700">{tool}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Implement Our Methodology?</h2>
      <p class="text-xl mb-8">Let's discuss how our systematic approach can transform your security posture.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition-colors">
          Get Started
        </a>
        <a href="/about/certifications" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          View Our Certifications
        </a>
      </div>
    </div>
  </section>
</Layout>
