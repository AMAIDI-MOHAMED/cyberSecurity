---
import Layout from '@/layouts/Layout.astro';

const title = "Certifications and Partnerships";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Certifications and Partnerships",
    subtitle: "Trusted by Industry Leaders and Regulatory Bodies",
    heroDescription: "Our commitment to excellence is demonstrated through our certifications, accreditations, and strategic partnerships with leading organizations in cybersecurity and compliance.",
    certifications: {
      title: "Our Certifications",
      subtitle: "Industry-recognized credentials and accreditations"
    },
    partnerships: {
      title: "Strategic Partnerships",
      subtitle: "Collaborating with industry leaders to deliver exceptional value"
    },
    accreditations: {
      title: "Accreditations and Memberships",
      subtitle: "Recognized by leading industry organizations"
    }
  },
  fi: {
    title: "Sertifikaatit ja Kumppanuudet",
    subtitle: "Alan Johtajien ja Sääntelyelinten Luottama",
    heroDescription: "Erinomaisuuteen sitoutumisemme näkyy sertifikaattejemme, akkreditointiemme ja strategisten kumppanuuksiemme kautta johtavien kyberturvallisuus- ja noudattamisorganisaatioiden kanssa.",
    certifications: {
      title: "Sertifikaattimme",
      subtitle: "Alan tunnustamat pätevyydet ja akkreditointit"
    },
    partnerships: {
      title: "Strategiset Kumppanuudet",
      subtitle: "Yhteistyössä alan johtajien kanssa tuottaaksemme poikkeuksellista arvoa"
    },
    accreditations: {
      title: "Akkreditointit ja Jäsenyydet",
      subtitle: "Johtavien alan organisaatioiden tunnustama"
    }
  }
};

const companyCertifications = [
  {
    name: "ISO 27001:2013",
    type: "Information Security Management System",
    issuer: "DNV GL",
    validUntil: "2025-12-31",
    description: "International standard for information security management systems",
    logo: "/certifications/iso27001.png"
  },
  {
    name: "SOC 2 Type II",
    type: "Trust Services Criteria",
    issuer: "AICPA",
    validUntil: "2024-12-31",
    description: "Third-party assurance on security, availability, and confidentiality controls",
    logo: "/certifications/soc2.png"
  },
  {
    name: "Cyber Essentials Plus",
    type: "UK Government Security Standard",
    issuer: "IASME Consortium",
    validUntil: "2024-12-31",
    description: "Government-backed cybersecurity certification for organizations",
    logo: "/certifications/cyber-essentials.png"
  },
  {
    name: "GDPR Compliance",
    type: "Data Protection Regulation",
    issuer: "EU Commission",
    validUntil: "Ongoing",
    description: "Full compliance with European data protection regulations",
    logo: "/certifications/gdpr.png"
  }
];

const strategicPartnerships = [
  {
    name: "Microsoft",
    type: "Technology Partner",
    description: "Strategic partnership for cloud security solutions and Azure security services",
    benefits: ["Azure security expertise", "Joint go-to-market initiatives", "Technical collaboration"],
    logo: "/partners/microsoft.png"
  },
  {
    name: "AWS",
    type: "Cloud Security Partner",
    description: "Advanced consulting partner specializing in AWS security architecture and compliance",
    benefits: ["AWS security specialization", "Well-architected framework", "Security competency"],
    logo: "/partners/aws.png"
  },
  {
    name: "CrowdStrike",
    type: "Security Technology Partner",
    description: "Strategic alliance for endpoint detection and response solutions",
    benefits: ["Advanced threat detection", "Incident response support", "Joint security research"],
    logo: "/partners/crowdstrike.png"
  },
  {
    name: "OneTrust",
    type: "Privacy Technology Partner",
    description: "Collaboration on privacy management and compliance automation solutions",
    benefits: ["Privacy automation", "Compliance workflows", "Integrated solutions"],
    logo: "/partners/onetrust.png"
  },
  {
    name: "Qualys",
    type: "Vulnerability Management Partner",
    description: "Strategic partnership for comprehensive vulnerability assessment and management",
    benefits: ["Vulnerability scanning", "Compliance reporting", "Risk assessment tools"],
    logo: "/partners/qualys.png"
  },
  {
    name: "SANS Institute",
    type: "Training Partner",
    description: "Collaboration on cybersecurity training and certification programs",
    benefits: ["Professional development", "Certification programs", "Knowledge sharing"],
    logo: "/partners/sans.png"
  }
];

const industryMemberships = [
  {
    organization: "ISACA",
    type: "Professional Association",
    description: "Global association for IT governance, risk management, and cybersecurity professionals",
    benefits: ["Professional development", "Networking opportunities", "Industry insights"]
  },
  {
    organization: "Cloud Security Alliance",
    type: "Industry Consortium",
    description: "Leading organization dedicated to defining and raising awareness of best practices for secure cloud computing",
    benefits: ["Best practices", "Research collaboration", "Industry standards"]
  },
  {
    organization: "OWASP",
    type: "Open Source Foundation",
    description: "Non-profit foundation that works to improve the security of software through community-led open source projects",
    benefits: ["Security research", "Tool development", "Community collaboration"]
  },
  {
    organization: "Finnish Information Security Cluster",
    type: "Regional Association",
    description: "Finnish cybersecurity industry cluster promoting collaboration and innovation",
    benefits: ["Local networking", "Industry collaboration", "Regional initiatives"]
  }
];

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.certifications.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.certifications.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {companyCertifications.map((cert) => (
          <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <div class="text-blue-600 text-2xl font-bold">{cert.name.split(' ')[0]}</div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-slate-900 mb-2">{cert.name}</h3>
                <p class="text-blue-600 font-medium mb-2">{cert.type}</p>
                <p class="text-slate-600 mb-3">{cert.description}</p>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-slate-500">Issued by: {cert.issuer}</span>
                  <span class="text-slate-500">Valid until: {cert.validUntil}</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Partnerships Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.partnerships.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.partnerships.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {strategicPartnerships.map((partner) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-32 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <div class="text-white text-2xl font-bold">{partner.name}</div>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">{partner.type}</span>
              </div>
              <p class="text-slate-600 mb-4">{partner.description}</p>
              <div>
                <p class="text-sm font-medium text-slate-700 mb-2">Key Benefits:</p>
                <ul class="space-y-1">
                  {partner.benefits.map((benefit) => (
                    <li class="flex items-center text-sm text-slate-600">
                      <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                      {benefit}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industry Memberships Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.accreditations.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.accreditations.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {industryMemberships.map((membership) => (
          <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-3">{membership.organization}</h3>
            <p class="text-blue-600 font-medium mb-3">{membership.type}</p>
            <p class="text-slate-600 mb-4">{membership.description}</p>
            <div>
              <p class="text-sm font-medium text-slate-700 mb-2">Benefits:</p>
              <ul class="space-y-1">
                {membership.benefits.map((benefit) => (
                  <li class="flex items-center text-sm text-slate-600">
                    <div class="w-2 h-2 bg-blue-500 rounded-full mr-2"></div>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Indicators Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Why Choose a Certified Partner?</h2>
        <p class="text-xl text-slate-600">Our certifications and partnerships demonstrate our commitment to excellence</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Proven Expertise</h3>
          <p class="text-slate-600">Industry-recognized certifications validate our knowledge and capabilities</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Strategic Alliances</h3>
          <p class="text-slate-600">Partnerships with industry leaders provide access to cutting-edge solutions</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Continuous Innovation</h3>
          <p class="text-slate-600">Active participation in industry groups keeps us at the forefront of security trends</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Work with a Certified Partner?</h2>
      <p class="text-xl mb-8">Our certifications and partnerships ensure you receive the highest quality cybersecurity services.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition-colors">
          Get Started
        </a>
        <a href="/about/careers" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          Join Our Team
        </a>
      </div>
    </div>
  </section>
</Layout>
