---
import Layout from '@/layouts/Layout.astro';

const title = "Team and Certifications";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Team and Certifications",
    subtitle: "Meet Our Expert Cybersecurity Professionals",
    heroDescription: "Our team of certified cybersecurity experts brings decades of combined experience in compliance, risk management, and technical security to help your organization build resilient security programs.",
    team: {
      title: "Leadership Team",
      subtitle: "Experienced professionals leading our mission"
    },
    certifications: {
      title: "Professional Certifications",
      subtitle: "Our team maintains the highest industry standards"
    },
    expertise: {
      title: "Areas of Expertise",
      subtitle: "Comprehensive cybersecurity knowledge across multiple domains"
    }
  },
  fi: {
    title: "Tiimi ja Sertifikaatit",
    subtitle: "Tutustu Asiantuntijaamme Kyberturvallisuusprofessinaaleihin",
    heroDescription: "Sertifioitujen kyberturvallisuusasiantuntijoiden tiimimme tuo vuosikymmeniä yhdistettyä kokemusta noudattamisesta, riskien hallinnasta ja teknisestä turvallisuudesta auttaakseen organisaatiosi rakentamaan kestäviä turvallisuusohjelmia.",
    team: {
      title: "Johtotimi",
      subtitle: "Kokeneet ammattilaiset johtamassa tehtäväämme"
    },
    certifications: {
      title: "Ammattisertifikaatit",
      subtitle: "Tiimimme ylläpitää korkeimpia alan standardeja"
    },
    expertise: {
      title: "Asiantuntemuksen Alueet",
      subtitle: "Kattava kyberturvallisuustieto useilla alueilla"
    }
  }
};

const teamMembers = [
  {
    role: "Chief Executive Officer & Founder",
    description: "Our Chief Executive Officer brings over 15 years of cybersecurity expertise with deep knowledge in compliance frameworks and risk management. Having served as CISO at major financial institutions, they lead our organization with strategic vision in ISO 27001 implementation, enterprise risk management, and cybersecurity strategy development. Their certifications include CISSP, CISA, ISO 27001 Lead Auditor, and CRISC, ensuring our clients receive guidance from proven industry expertise."
  },
  {
    role: "Chief Technology Officer",
    description: "Our Chief Technology Officer is a former CISO with exceptional technical expertise in security architecture and threat assessment. They specialize in cloud security, incident response, and penetration testing methodologies. With certifications including CISSP, CEH, OSCP, AWS Security, and Azure Security, they ensure our technical solutions remain at the forefront of cybersecurity innovation."
  },
  {
    role: "Compliance Director",
    description: "Our Compliance Director is a legal and compliance expert specializing in EU cybersecurity regulations. Having served as legal counsel at European cybersecurity agencies, they bring invaluable expertise in NIS2, GDPR, and DORA compliance frameworks. Their certifications include CIPP/E, CIPM, ISO 27001 Lead Implementer, and NIS2 Expert, ensuring comprehensive regulatory compliance guidance."
  },
  {
    role: "Senior Security Consultant",
    description: "Our Senior Security Consultant is a former Big 4 auditor with extensive experience in security assessments and compliance audits across multiple industries. They specialize in SOC 2 preparations and audit readiness, bringing certifications including CISA, CRISC, SOC 2 Practitioner, and ISO 27001 Lead Auditor to deliver thorough and reliable audit support."
  },
  {
    role: "Head of Risk Management",
    description: "Our Head of Risk Management specializes in enterprise risk management and business continuity planning. As an expert in ISO 31000 and ISO 22301 frameworks, they provide comprehensive risk assessment and business continuity solutions. Their certifications include CRISC, ISO 31000 Risk Manager, and ISO 22301 Lead Implementer, ensuring robust risk management strategies."
  },
  {
    role: "Technical Security Lead",
    description: "Our Technical Security Lead is a cloud security specialist with expertise across AWS, Azure, and Google Cloud platforms. Having served as a senior security engineer at major technology companies, they bring deep knowledge in DevSecOps and cloud security architectures. Their certifications include CCSP, AWS Security, Azure Security, and Google Cloud Security, ensuring comprehensive cloud security solutions."
  }
];

const certificationCategories = [
  {
    category: "Information Security",
    certifications: ["CISSP", "CISM", "CISA", "CCSP", "SSCP"]
  },
  {
    category: "Risk Management",
    certifications: ["CRISC", "ISO 31000 Risk Manager", "ISO 27005 Risk Manager"]
  },
  {
    category: "Compliance & Audit",
    certifications: ["ISO 27001 Lead Auditor", "ISO 27001 Lead Implementer", "SOC 2 Practitioner"]
  },
  {
    category: "Privacy & Data Protection",
    certifications: ["CIPP/E", "CIPM", "CIPT", "GDPR Practitioner"]
  },
  {
    category: "Technical Security",
    certifications: ["CEH", "OSCP", "OSCE", "GPEN", "GXPN"]
  },
  {
    category: "Cloud Security",
    certifications: ["AWS Security", "Azure Security", "Google Cloud Security", "CCSP"]
  }
];

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.team.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.team.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {teamMembers.map((member) => (
          <div class="bg-white border border-slate-200 rounded-lg shadow-md overflow-hidden">
            <div class="h-32 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <div class="text-white text-2xl font-bold">
                <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-slate-900 mb-3">{member.role}</h3>
              <p class="text-slate-600 leading-relaxed">{member.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.certifications.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.certifications.subtitle}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {certificationCategories.map((category) => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-4">{category.category}</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
              {category.certifications.map((cert) => (
                <div class="flex flex-col items-center text-center">
                  {/* SVG logos for each certification */}
                  {cert === 'CISSP' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#1e40af" stroke="#1e3a8a" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">CISSP</text>
                    </svg>
                  )}
                  {cert === 'CISM' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#059669" stroke="#047857" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">CISM</text>
                    </svg>
                  )}
                  {cert === 'CISA' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#dc2626" stroke="#b91c1c" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">CISA</text>
                    </svg>
                  )}
                  {cert === 'CCSP' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#7c3aed" stroke="#6d28d9" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">CCSP</text>
                    </svg>
                  )}
                  {cert === 'SSCP' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#0891b2" stroke="#0e7490" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">SSCP</text>
                    </svg>
                  )}
                  {cert === 'CRISC' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#ea580c" stroke="#c2410c" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="14" font-weight="bold">CRISC</text>
                    </svg>
                  )}
                  {cert === 'ISO 31000 Risk Manager' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#0f172a" stroke="#334155" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">ISO 31000</text>
                    </svg>
                  )}
                  {cert === 'ISO 27005 Risk Manager' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#374151" stroke="#1f2937" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">ISO 27005</text>
                    </svg>
                  )}
                  {cert === 'ISO 27001 Lead Auditor' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#166534" stroke="#15803d" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">27001 Auditor</text>
                    </svg>
                  )}
                  {cert === 'ISO 27001 Lead Implementer' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#059669" stroke="#047857" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">27001 Impl.</text>
                    </svg>
                  )}
                  {cert === 'SOC 2 Practitioner' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#1d4ed8" stroke="#1e40af" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">SOC 2</text>
                    </svg>
                  )}
                  {cert === 'CIPP/E' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#0066cc" stroke="#0052a3" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">CIPP/E</text>
                    </svg>
                  )}
                  {cert === 'CIPM' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#7c2d12" stroke="#92400e" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">CIPM</text>
                    </svg>
                  )}
                  {cert === 'CIPT' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#7c3aed" stroke="#6d28d9" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">CIPT</text>
                    </svg>
                  )}
                  {cert === 'GDPR Practitioner' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#0066cc" stroke="#0052a3" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">GDPR</text>
                    </svg>
                  )}
                  {cert === 'CEH' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#dc2626" stroke="#b91c1c" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">CEH</text>
                    </svg>
                  )}
                  {cert === 'OSCP' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#1f2937" stroke="#374151" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">OSCP</text>
                    </svg>
                  )}
                  {cert === 'OSCE' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#450a0a" stroke="#7f1d1d" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">OSCE</text>
                    </svg>
                  )}
                  {cert === 'GPEN' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#059669" stroke="#047857" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">GPEN</text>
                    </svg>
                  )}
                  {cert === 'GXPN' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#7c2d12" stroke="#92400e" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">GXPN</text>
                    </svg>
                  )}
                  {cert === 'AWS Security' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#ff9900" stroke="#e68900" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">AWS</text>
                    </svg>
                  )}
                  {cert === 'Azure Security' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#0078d4" stroke="#106ebe" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">Azure</text>
                    </svg>
                  )}
                  {cert === 'Google Cloud Security' && (
                    <svg class="w-12 h-12 mb-2" viewBox="0 0 80 80" fill="none">
                      <circle cx="40" cy="40" r="38" fill="#4285f4" stroke="#3367d6" stroke-width="2"/>
                      <text x="40" y="45" text-anchor="middle" fill="white" font-size="10" font-weight="bold">Google</text>
                    </svg>
                  )}
                  <span class="text-slate-700 text-sm font-medium mt-2">{cert}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Expertise Areas Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.expertise.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.expertise.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Compliance</h3>
          <p class="text-slate-600 text-sm">ISO 27001, NIS2, DORA, GDPR, SOC 2</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Risk Management</h3>
          <p class="text-slate-600 text-sm">Assessment, mitigation, and monitoring</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Technical Security</h3>
          <p class="text-slate-600 text-sm">Architecture, testing, and implementation</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Consulting</h3>
          <p class="text-slate-600 text-sm">Strategic guidance and implementation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Work with Our Expert Team?</h2>
      <p class="text-xl mb-8">Let's discuss how our certified professionals can help secure your organization.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition-colors">
          Get Started
        </a>
        <a href="/about/methodology" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          Learn About Our Methodology
        </a>
      </div>
    </div>
  </section>
</Layout>

