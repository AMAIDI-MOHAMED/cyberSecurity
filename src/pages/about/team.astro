---
import Layout from '@/layouts/Layout.astro';

const title = "Team and Certifications";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Team and Certifications",
    subtitle: "Meet Our Expert Cybersecurity Professionals",
    heroDescription: "Our team of certified cybersecurity experts brings decades of combined experience in compliance, risk management, and technical security to help your organization build resilient security programs.",
    team: {
      title: "Leadership Team",
      subtitle: "Experienced professionals leading our mission"
    },
    certifications: {
      title: "Professional Certifications",
      subtitle: "Our team maintains the highest industry standards"
    },
    expertise: {
      title: "Areas of Expertise",
      subtitle: "Comprehensive cybersecurity knowledge across multiple domains"
    }
  },
  fi: {
    title: "Tiimi ja Sertifikaatit",
    subtitle: "Tutustu Asiantuntijaamme Kyberturvallisuusprofessinaaleihin",
    heroDescription: "Sertifioitujen kyberturvallisuusasiantuntijoiden tiimimme tuo vuosikymmeniä yhdistettyä kokemusta noudattamisesta, riskien hallinnasta ja teknisestä turvallisuudesta auttaakseen organisaatiosi rakentamaan kestäviä turvallisuusohjelmia.",
    team: {
      title: "Johtotimi",
      subtitle: "Kokeneet ammattilaiset johtamassa tehtäväämme"
    },
    certifications: {
      title: "Ammattisertifikaatit",
      subtitle: "Tiimimme ylläpitää korkeimpia alan standardeja"
    },
    expertise: {
      title: "Asiantuntemuksen Alueet",
      subtitle: "Kattava kyberturvallisuustieto useilla alueilla"
    }
  }
};

const teamMembers = [
  {
    name: "Dr. Sarah Johnson",
    role: "Chief Executive Officer & Founder",
    expertise: "ISO 27001, Risk Management, Strategy",
    bio: "15+ years in cybersecurity with expertise in compliance frameworks and risk management. Former CISO at major financial institutions.",
    certifications: ["CISSP", "CISA", "ISO 27001 Lead Auditor", "CRISC"],
    image: "/team/sarah-johnson.jpg"
  },
  {
    name: "Michael Chen",
    role: "Chief Technology Officer",
    expertise: "Technical Security, Penetration Testing",
    bio: "Former CISO with deep technical expertise in security architecture and threat assessment. Specializes in cloud security and incident response.",
    certifications: ["CISSP", "CEH", "OSCP", "AWS Security", "Azure Security"],
    image: "/team/michael-chen.jpg"
  },
  {
    name: "Anna Virtanen",
    role: "Compliance Director",
    expertise: "NIS2, GDPR, DORA Compliance",
    bio: "Legal and compliance expert specializing in EU cybersecurity regulations. Former legal counsel at European cybersecurity agencies.",
    certifications: ["CIPP/E", "CIPM", "ISO 27001 Lead Implementer", "NIS2 Expert"],
    image: "/team/anna-virtanen.jpg"
  },
  {
    name: "Robert Martinez",
    role: "Senior Security Consultant",
    expertise: "SOC 2, Audit Preparation",
    bio: "Former Big 4 auditor with extensive experience in security assessments and compliance audits across multiple industries.",
    certifications: ["CISA", "CRISC", "SOC 2 Practitioner", "ISO 27001 Lead Auditor"],
    image: "/team/robert-martinez.jpg"
  },
  {
    name: "Elena Petrova",
    role: "Head of Risk Management",
    expertise: "Risk Assessment, Business Continuity",
    bio: "Specialist in enterprise risk management and business continuity planning. Expert in ISO 31000 and ISO 22301 frameworks.",
    certifications: ["CRISC", "ISO 31000 Risk Manager", "ISO 22301 Lead Implementer"],
    image: "/team/elena-petrova.jpg"
  },
  {
    name: "David Kim",
    role: "Technical Security Lead",
    expertise: "Cloud Security, DevSecOps",
    bio: "Cloud security specialist with expertise in AWS, Azure, and Google Cloud. Former senior security engineer at major tech companies.",
    certifications: ["CCSP", "AWS Security", "Azure Security", "Google Cloud Security"],
    image: "/team/david-kim.jpg"
  }
];

const certificationCategories = [
  {
    category: "Information Security",
    certifications: ["CISSP", "CISM", "CISA", "CCSP", "SSCP"]
  },
  {
    category: "Risk Management",
    certifications: ["CRISC", "ISO 31000 Risk Manager", "ISO 27005 Risk Manager"]
  },
  {
    category: "Compliance & Audit",
    certifications: ["ISO 27001 Lead Auditor", "ISO 27001 Lead Implementer", "SOC 2 Practitioner"]
  },
  {
    category: "Privacy & Data Protection",
    certifications: ["CIPP/E", "CIPM", "CIPT", "GDPR Practitioner"]
  },
  {
    category: "Technical Security",
    certifications: ["CEH", "OSCP", "OSCE", "GPEN", "GXPN"]
  },
  {
    category: "Cloud Security",
    certifications: ["AWS Security", "Azure Security", "Google Cloud Security", "CCSP"]
  }
];

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.team.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.team.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <div class="bg-white border border-slate-200 rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <div class="text-white text-4xl font-bold">{member.name.split(' ').map(n => n[0]).join('')}</div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-slate-900 mb-2">{member.name}</h3>
              <p class="text-blue-600 font-medium mb-3">{member.role}</p>
              <p class="text-slate-600 mb-4">{member.bio}</p>
              <div class="mb-4">
                <p class="text-sm font-medium text-slate-700 mb-2">Expertise:</p>
                <p class="text-sm text-slate-600">{member.expertise}</p>
              </div>
              <div>
                <p class="text-sm font-medium text-slate-700 mb-2">Certifications:</p>
                <div class="flex flex-wrap gap-2">
                  {member.certifications.map((cert) => (
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">{cert}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.certifications.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.certifications.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {certificationCategories.map((category) => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-4">{category.category}</h3>
            <div class="space-y-2">
              {category.certifications.map((cert) => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-slate-700">{cert}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Expertise Areas Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.expertise.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.expertise.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Compliance</h3>
          <p class="text-slate-600 text-sm">ISO 27001, NIS2, DORA, GDPR, SOC 2</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Risk Management</h3>
          <p class="text-slate-600 text-sm">Assessment, mitigation, and monitoring</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Technical Security</h3>
          <p class="text-slate-600 text-sm">Architecture, testing, and implementation</p>
        </div>
        
        <div class="text-center p-6 border border-slate-200 rounded-lg">
          <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Consulting</h3>
          <p class="text-slate-600 text-sm">Strategic guidance and implementation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Work with Our Expert Team?</h2>
      <p class="text-xl mb-8">Let's discuss how our certified professionals can help secure your organization.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition-colors">
          Get Started
        </a>
        <a href="/about/methodology" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          Learn About Our Methodology
        </a>
      </div>
    </div>
  </section>
</Layout>
