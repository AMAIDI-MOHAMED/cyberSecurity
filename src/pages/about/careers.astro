---
import Layout from '@/layouts/Layout.astro';

const title = "Careers";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const content = {
  en: {
    title: "Careers",
    subtitle: "Join Our Mission to Secure the Digital World",
    heroDescription: "Build your career with a team of cybersecurity experts who are passionate about protecting organizations and advancing the industry. We offer challenging opportunities, continuous learning, and a collaborative environment.",
    culture: {
      title: "Our Culture",
      subtitle: "What makes CyberSecurity.fi a great place to work"
    },
    benefits: {
      title: "Benefits & Perks",
      subtitle: "We take care of our team members"
    },
    opportunities: {
      title: "Open Positions",
      subtitle: "Join our growing team of cybersecurity professionals"
    },
    growth: {
      title: "Professional Growth",
      subtitle: "Continuous learning and career development opportunities"
    }
  },
  fi: {
    title: "Ura",
    subtitle: "Liity Tehtäväämme Suojella Digitaalista Maailmaa",
    heroDescription: "Rakenna uraasi kyberturvallisuusasiantuntijoiden tiimin kanssa, jotka ovat intohimoisia organisaatioiden suojaamisesta ja alan kehittämisestä. Tarjoamme haastavia mahdollisuuksia, jatkuvaa oppimista ja yhteistyökeskeisen ympäristön.",
    culture: {
      title: "Kulttuurimme",
      subtitle: "Mikä tekee CyberSecurity.fi:stä hienon työpaikan"
    },
    benefits: {
      title: "Edut ja Bonukset",
      subtitle: "Huolehdimme tiimijäsenistämme"
    },
    opportunities: {
      title: "Avoimet Paikat",
      subtitle: "Liity kasvavaan kyberturvallisuusprofessinaalien tiimiimme"
    },
    growth: {
      title: "Ammatillinen Kasvu",
      subtitle: "Jatkuvan oppimisen ja uran kehitysmahdollisuudet"
    }
  }
};

const openPositions = [
  {
    title: "Senior Cybersecurity Consultant",
    location: "Helsinki, Finland",
    type: "Full-time",
    department: "Consulting",
    experience: "5+ years",
    description: "Lead complex cybersecurity projects and mentor junior consultants",
    requirements: [
      "CISSP, CISM, or equivalent certification",
      "Experience with ISO 27001, NIS2, and DORA",
      "Strong project management skills",
      "Excellent communication abilities"
    ]
  },
  {
    title: "Security Architect",
    location: "Stockholm, Sweden",
    type: "Full-time",
    department: "Technical",
    experience: "7+ years",
    description: "Design and implement enterprise security architectures",
    requirements: [
      "Deep technical security expertise",
      "Experience with cloud security (AWS, Azure, GCP)",
      "Knowledge of security frameworks and standards",
      "Strong analytical and problem-solving skills"
    ]
  },
  {
    title: "Compliance Specialist",
    location: "Helsinki, Finland",
    type: "Full-time",
    department: "Compliance",
    experience: "3+ years",
    description: "Specialize in EU cybersecurity regulations and compliance frameworks",
    requirements: [
      "Expertise in NIS2, DORA, and GDPR",
      "Legal or compliance background preferred",
      "Strong attention to detail",
      "Excellent research and writing skills"
    ]
  },
  {
    title: "Penetration Tester",
    location: "Remote / Helsinki",
    type: "Full-time",
    department: "Technical",
    experience: "3+ years",
    description: "Conduct security assessments and penetration testing",
    requirements: [
      "OSCP, CEH, or equivalent certification",
      "Experience with testing tools and methodologies",
      "Strong ethical hacking skills",
      "Excellent reporting abilities"
    ]
  },
  {
    title: "Business Development Manager",
    location: "Helsinki, Finland",
    type: "Full-time",
    department: "Sales",
    experience: "5+ years",
    description: "Drive business growth and develop client relationships",
    requirements: [
      "Experience in B2B sales or consulting",
      "Knowledge of cybersecurity industry",
      "Strong networking and relationship skills",
      "Results-driven mindset"
    ]
  }
];

const companyBenefits = [
  {
    category: "Health & Wellness",
    benefits: [
      "Comprehensive health insurance",
      "Mental health support",
      "Gym membership allowance",
      "Flexible working hours"
    ]
  },
  {
    category: "Learning & Development",
    benefits: [
      "Professional certification support",
      "Conference attendance",
      "Training budget",
      "Mentorship programs"
    ]
  },
  {
    category: "Work-Life Balance",
    benefits: [
      "25+ vacation days",
      "Remote work options",
      "Flexible scheduling",
      "Parental leave support"
    ]
  },
  {
    category: "Financial Benefits",
    benefits: [
      "Competitive salary",
      "Performance bonuses",
      "Stock options",
      "Pension contributions"
    ]
  }
];

const growthOpportunities = [
  {
    title: "Certification Support",
    description: "Full financial support for industry certifications including CISSP, CISM, CISA, and more",
    icon: "certificate"
  },
  {
    title: "Conference Attendance",
    description: "Attend leading cybersecurity conferences like Black Hat, RSA, and local industry events",
    icon: "presentation"
  },
  {
    title: "Internal Training",
    description: "Regular internal knowledge sharing sessions and technical deep-dives",
    icon: "users"
  },
  {
    title: "Career Pathing",
    description: "Clear career progression paths with regular performance reviews and goal setting",
    icon: "trending-up"
  }
];

const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-6">{currentContent.title}</h1>
      <p class="text-2xl font-light mb-8">{currentContent.subtitle}</p>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">{currentContent.heroDescription}</p>
    </div>
  </section>

  <!-- Culture Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.culture.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.culture.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Continuous Learning</h3>
          <p class="text-slate-600">We believe in lifelong learning and provide extensive opportunities for professional development and skill enhancement.</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Collaborative Environment</h3>
          <p class="text-slate-600">Work with talented professionals in a supportive, team-oriented culture that values diverse perspectives and innovation.</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-3">Impact & Purpose</h3>
          <p class="text-slate-600">Make a real difference in protecting organizations and individuals from cyber threats while advancing the industry.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.benefits.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.benefits.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {companyBenefits.map((category) => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-slate-900 mb-4">{category.category}</h3>
            <ul class="space-y-2">
              {category.benefits.map((benefit) => (
                <li class="flex items-center text-slate-600">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Open Positions Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.opportunities.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.opportunities.subtitle}</p>
      </div>
      
      <div class="space-y-6">
        {openPositions.map((position) => (
          <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-md">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-4">
              <div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">{position.title}</h3>
                <div class="flex flex-wrap gap-3 text-sm">
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full">{position.location}</span>
                  <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full">{position.type}</span>
                  <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full">{position.department}</span>
                  <span class="px-3 py-1 bg-orange-100 text-orange-800 rounded-full">{position.experience}</span>
                </div>
              </div>
              <div class="mt-4 lg:mt-0">
                <a href="/contact" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                  Apply Now
                </a>
              </div>
            </div>
            <p class="text-slate-600 mb-4">{position.description}</p>
            <div>
              <p class="text-sm font-medium text-slate-700 mb-2">Requirements:</p>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {position.requirements.map((req) => (
                  <li class="flex items-center text-sm text-slate-600">
                    <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                    {req}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Growth Opportunities Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.growth.title}</h2>
        <p class="text-xl text-slate-600">{currentContent.growth.subtitle}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {growthOpportunities.map((opportunity) => (
          <div class="text-center p-6 bg-white rounded-lg shadow-md">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">{opportunity.title}</h3>
            <p class="text-slate-600 text-sm">{opportunity.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Ready to Join Our Team?</h2>
      <p class="text-xl mb-8">Don't see a position that fits? We're always looking for talented cybersecurity professionals.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition-colors">
          Send Your Resume
        </a>
        <a href="/about/contact" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
