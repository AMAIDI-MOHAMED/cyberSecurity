---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang === 'fi' ? 'Tuki ja työkalut' : 'Support & Tools';
const description = lang === 'fi' 
  ? 'Kattava valikoima tukipalveluja, työkaluja ja resursseja. Ilmaiset mallit, tarkistuslistat ja asiantuntijatuki.'
  : 'Comprehensive range of support services, tools and resources. Free templates, checklists and expert support.';

const supportCategories = [
  {
    icon: 'book',
    titleFi: 'Tietopankki',
    titleEn: 'Knowledge Base',
    descFi: 'Kattava dokumentaatio, ohjeet ja usein kysytyt kysymykset',
    descEn: 'Comprehensive documentation, guides and frequently asked questions',
    href: '/support/knowledge-base',
    features: [
      { fi: 'Asennusoppaat', en: 'Installation guides' },
      { fi: 'Ongelmanratkaisu', en: 'Troubleshooting' },
      { fi: 'Usein kysytyt kysymykset', en: 'Frequently asked questions' },
      { fi: 'Video-ohjeet', en: 'Video tutorials' }
    ]
  },
  {
