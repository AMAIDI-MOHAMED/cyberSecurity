    titleFi: 'Artikkelit ja viite',
    titleEn: 'Articles & Reference',
    descFi: 'Asiantuntija-artikkelit ja viitemateriaali compliance-työhön',
    descEn: 'Expert articles and reference materials for compliance work',
    href: '/support/articles',
    features: [
      { fi: 'Toteutusartikkelit', en: 'Implementation articles' },
      { fi: 'Parhaiden käytäntöjen oppaat', en: 'Best practices guides' },
      { fi: 'Säädösten selitykset', en: 'Regulation explanations' },
      { fi: 'Tekninen dokumentaatio', en: 'Technical documentation' }
    ]
  },
  {
    icon: 'download',
    titleFi: 'Ladattavat resurssit',
    titleEn: 'Downloadable Resources',
    descFi: 'Ilmaiset mallit, tarkistuslistat ja työkalut Excel/PDF-muodossa',
    descEn: 'Free templates, checklists and tools in Excel/PDF format',
    href: '/support/sample-spreadsheets',
    features: [
      { fi: 'Excel-työkalut ja -mallit', en: 'Excel tools and templates' },
      { fi: 'PDF-tarkistuslistat', en: 'PDF checklists' },
      { fi: 'Riskinarviointityökalut', en: 'Risk assessment tools' },
      { fi: 'Audit-valmistelumallit', en: 'Audit preparation templates' }
    ]
  },
  {
    icon: 'file-plus',
    titleFi: 'Valkoiset kirjat',
    titleEn: 'White Papers',
    descFi: 'Syvälliset tutkimukset ja analyysit kyberturvallisuusaiheista',
    descEn: 'In-depth research and analysis on cybersecurity topics',
    href: '/support/whitepapers',
    features: [
      { fi: 'Toimialakohtaiset analyysit', en: 'Industry-specific analyses' },
      { fi: 'Säädösvaikutustutkimukset', en: 'Regulatory impact studies' },
      { fi: 'Teknologiatrendit', en: 'Technology trends' },
      { fi: 'Uhka-analyysit', en: 'Threat analyses' }
    ]
  }
];

const tools = [
  {
    icon: 'check-square',
    titleFi: 'ISO 27001 Tarkistuslista',
    titleEn: 'ISO 27001 Checklist',
    descFi: 'Kattava 114-kohtainen tarkistuslista ISO 27001 toteutukseen',
    descEn: 'Comprehensive 114-point checklist for ISO 27001 implementation',
    format: 'Excel',
