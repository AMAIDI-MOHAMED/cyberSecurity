---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const title = "Regulatory Center";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "Cybersecurity Regulatory Center",
  subtitle: "Stay informed about the latest cybersecurity regulations, compliance requirements, and industry standards.",
  description: "Navigate the complex landscape of cybersecurity regulations with our comprehensive regulatory center. Get expert insights, compliance guides, and implementation resources.",
  primaryCTA: { text: "Explore Regulations", href: "#regulations" },
  secondaryCTA: { text: "Get Compliance Help", href: "/contact?compliance=true" }
};

const regulations = [
  {
    title: "NIS2 in Finland",
    description: "Comprehensive guide to the NIS2 Directive implementation in Finland, requirements, and compliance timeline.",
    status: "Active",
    statusColor: "bg-green-100 text-green-800",
    href: "/regulatory/nis2-finland",
    lastUpdated: "Updated: March 2024",
    keyPoints: [
      "Applies to essential and important entities",
      "Mandatory incident reporting within 24 hours",
      "Risk management measures required",
      "Penalties up to 2% of annual turnover"
    ]
  },
  {
    title: "DORA for Financial Services",
    description: "Digital Operational Resilience Act requirements for financial institutions and their ICT service providers.",
    status: "Active",
    statusColor: "bg-green-100 text-green-800",
    href: "/regulatory/dora",
    lastUpdated: "Updated: January 2024",
    keyPoints: [
      "Applies to all financial entities in EU",
      "ICT risk management framework required",
      "Incident reporting obligations",
      "Third-party risk management"
    ]
  },
  {
    title: "GDPR and Privacy",
    description: "General Data Protection Regulation compliance guide with practical implementation steps.",
    status: "Active",
    statusColor: "bg-green-100 text-green-800",
    href: "/regulatory/gdpr",
    lastUpdated: "Updated: December 2023",
    keyPoints: [
      "Data protection by design and default",
      "Consent management requirements",
      "Data breach notification rules",
      "Individual privacy rights"
    ]
  },
  {
    title: "ISO 27001 and NIS2 Alignment",
    description: "How to align ISO 27001 implementation with NIS2 compliance requirements for maximum efficiency.",
    status: "Guide",
    statusColor: "bg-blue-100 text-blue-800",
    href: "/regulatory/iso-to-nis2-mapping",
    lastUpdated: "Updated: February 2024",
    keyPoints: [
      "Control mapping between standards",
      "Gap analysis methodology",
      "Integrated implementation approach",
      "Audit efficiency strategies"
    ]
  },
  {
    title: "eIDAS and Digital Trust",
    description: "Electronic identification and trust services regulation for digital identity and signatures.",
    status: "Active",
    statusColor: "bg-green-100 text-green-800",
    href: "/regulatory/eidas",
    lastUpdated: "Updated: November 2023",
    keyPoints: [
      "Digital identity requirements",
      "Qualified electronic signatures",
      "Trust service providers",
      "Cross-border recognition"
    ]
  },
  {
    title: "Cyber Resilience Act (CRA)",
    description: "Upcoming EU regulation for cybersecurity requirements for products with digital elements.",
    status: "Upcoming",
    statusColor: "bg-yellow-100 text-yellow-800",
    href: "/regulatory/cyber-resilience-act",
    lastUpdated: "Updated: January 2024",
    keyPoints: [
      "Product cybersecurity requirements",
      "CE marking obligations",
      "Vulnerability disclosure",
      "Market surveillance"
    ]
  }
];
---

<Layout title={title}>
  <HeroSection content={heroContent} />
  
  <section id="regulations" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Regulatory Landscape</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Stay up-to-date with the evolving cybersecurity regulatory environment. 
          Our experts monitor changes and provide actionable compliance guidance.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {regulations.map(regulation => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-slate-900 mb-2">{regulation.title}</h3>
                <div class="flex items-center gap-2 mb-2">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${regulation.statusColor}`}>
                    {regulation.status}
                  </span>
                  <span class="text-sm text-slate-500">{regulation.lastUpdated}</span>
                </div>
              </div>
            </div>
            
            <p class="text-slate-600 mb-4">{regulation.description}</p>
            
            <div class="mb-6">
              <h4 class="text-sm font-medium text-slate-900 mb-2">Key Points:</h4>
              <ul class="space-y-1">
                {regulation.keyPoints.map(point => (
                  <li class="flex items-start text-sm text-slate-700">
                    <svg class="w-3 h-3 text-teal-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {point}
                  </li>
                ))}
              </ul>
            </div>
            
            <a 
              href={regulation.href}
              class="block w-full text-center bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 transition-colors"
            >
              Read Full Guide
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Regulatory Services</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          We help organizations navigate complex regulatory requirements with expert guidance and practical solutions.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2 text-center">Compliance Assessment</h3>
          <p class="text-slate-600 text-center mb-4">
            Comprehensive assessment of your current compliance status against applicable regulations.
          </p>
          <ul class="text-sm text-slate-700 space-y-2">
            <li>• Gap analysis and risk assessment</li>
            <li>• Compliance roadmap development</li>
            <li>• Regulatory impact analysis</li>
            <li>• Implementation planning</li>
          </ul>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2 text-center">Implementation Support</h3>
          <p class="text-slate-600 text-center mb-4">
            Hands-on support to implement compliance measures and meet regulatory requirements.
          </p>
          <ul class="text-sm text-slate-700 space-y-2">
            <li>• Policy and procedure development</li>
            <li>• Control implementation</li>
            <li>• Staff training and awareness</li>
            <li>• Documentation and evidence</li>
          </ul>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2 text-center">Ongoing Monitoring</h3>
          <p class="text-slate-600 text-center mb-4">
            Continuous monitoring and updates to maintain compliance as regulations evolve.
          </p>
          <ul class="text-sm text-slate-700 space-y-2">
            <li>• Regulatory change monitoring</li>
            <li>• Compliance health checks</li>
            <li>• Incident response support</li>
            <li>• Audit preparation and support</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <CTA 
    title="Need Regulatory Compliance Help?"
    description="Our regulatory experts can help you navigate complex compliance requirements and implement effective solutions."
    primaryCTA={{ text: "Schedule Consultation", href: "/contact?compliance=true" }}
    secondaryCTA={{ text: "Download Compliance Guide", href: "/resources/compliance-guide" }}
  />
</Layout>
