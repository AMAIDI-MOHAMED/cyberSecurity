---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang === 'fi' ? "Julkisen sektorin kyberturva" : "Public Sector Cybersecurity";
const description = lang === 'fi' 
  ? "Kattavat kyberturva- ja yhteensopivuuspalvelut julkisen sektorin organisaatioille Suomessa. Autamme virastoja ja kunnallisia organisaatioita suojaamaan kansalaisten tietoja ja varmistamaan digitaalisen palvelun jatkuvuuden."
  : "Comprehensive cybersecurity and compliance services for public sector organizations in Finland. We help government agencies and municipal organizations protect citizen data and ensure digital service continuity.";

const challenges = [
  {
    title: lang === 'fi' ? "NIS2 Yhteensopivuus" : "NIS2 Compliance",
    description: lang === 'fi' 
      ? "EU:n verkko- ja tietojärjestelmien turvallisuuden direktiivin vaatimusten täyttäminen"
      : "Meeting EU Network and Information Security Directive requirements",
    icon: "shield"
  },
  {
    title: lang === 'fi' ? "Kansalaisten tietojen suoja" : "Citizen Data Protection",
    description: lang === 'fi' 
      ? "Arkaluontoisten henkilötietojen ja julkisten tietojen turvallinen käsittely"
      : "Secure handling of sensitive personal data and public information",
    icon: "user"
  },
  {
    title: lang === 'fi' ? "Digitaalisten palvelujen jatkuvuus" : "Digital Service Continuity",
    description: lang === 'fi' 
      ? "Kriittisten julkisten palvelujen toiminnan varmistaminen kyberuhkien varalta"
      : "Ensuring critical public services continue operating during cyber threats",
    icon: "server"
  },
  {
    title: lang === 'fi' ? "Toimittajien riskienhallinta" : "Vendor Risk Management",
    description: lang === 'fi' 
      ? "Kolmannen osapuolen palveluntarjoajien kyberturvariskien hallinta"
      : "Managing cybersecurity risks from third-party service providers",
    icon: "network"
  }
];

const solutions = [
  {
    title: lang === 'fi' ? "NIS2 Ohjelma" : "NIS2 Program",
    description: lang === 'fi' 
      ? "Kattava NIS2 yhteensopivuusohjelma julkisen sektorin organisaatioille"
      : "Comprehensive NIS2 compliance program for public sector organizations",
    icon: "check"
  },
  {
    title: lang === 'fi' ? "ISO 27001 Sertifiointi" : "ISO 27001 Certification",
    description: lang === 'fi' 
      ? "Tietoturvajärjestelmän sertifiointi julkisen sektorin standardeilla"
      : "Information security management system certification with public sector standards",
    icon: "certificate"
  },
  {
    title: lang === 'fi' ? "Kriittisten palvelujen suojaus" : "Critical Service Protection",
    description: lang === 'fi' 
      ? "Kriittisten julkisten palvelujen kyberturvan vahvistaminen"
      : "Strengthening cybersecurity for critical public services",
    icon: "shield"
  },
  {
    title: lang === 'fi' ? "Toimittajien auditointi" : "Vendor Auditing",
    description: lang === 'fi' 
      ? "Kolmannen osapuolen palveluntarjoajien kyberturva-auditointi"
      : "Cybersecurity auditing of third-party service providers",
    icon: "magnifyingGlass"
  }
];

const benefits = [
  lang === 'fi' ? "Täytä NIS2 ja muut sääntelyvaatimukset" : "Meet NIS2 and other regulatory requirements",
  lang === 'fi' ? "Suojaa kansalaisten henkilötiedot" : "Protect citizen personal data",
  lang === 'fi' ? "Varmista julkisten palvelujen jatkuvuus" : "Ensure public service continuity",
  lang === 'fi' ? "Paranna kansalaisten luottamusta" : "Enhance citizen trust",
  lang === 'fi' ? "Vahvista digitaalisen transformaation" : "Strengthen digital transformation"
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          {lang === 'fi' 
            ? "Kattavat kyberturva- ja yhteensopivuuspalvelut julkisen sektorin organisaatioille Suomessa"
            : "Comprehensive cybersecurity and compliance services for public sector organizations in Finland"
          }
        </p>
        <p class="text-lg text-slate-500 mb-10">
          {lang === 'fi'
            ? "Julkisen sektorin organisaatiot kohtaavat ainutlaatuisia kyberturvahaasteita. Autamme virastoja, kuntia ja julkisia organisaatioita suojaamaan kansalaisten tietoja, täyttämään sääntelyvaatimukset ja varmistamaan digitaalisten palvelujen jatkuvuuden."
            : "Public sector organizations face unique cybersecurity challenges. We help government agencies, municipalities, and public organizations protect citizen data, meet regulatory requirements, and ensure digital service continuity."
          }
        </p>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">
            {lang === 'fi' ? 'Kelle tämä on tarkoitettu?' : 'Who is this for?'}
          </h2>
          <p class="text-slate-600 mb-4">
            {lang === 'fi'
              ? "Valtion virastot, kunnat, kaupungit, sairaanhoitopiirit, yliopistot ja muut julkisen sektorin organisaatiot, jotka haluavat vahvistaa kyberturvaansa ja täyttää sääntelyvaatimukset."
              : "Government agencies, municipalities, cities, hospital districts, universities, and other public sector organizations looking to strengthen their cybersecurity and meet regulatory requirements."
            }
          </p>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {lang === 'fi' ? 'Mitä saavutat?' : 'What will you achieve?'}
          </h3>
          <p class="text-slate-600">
            {lang === 'fi'
              ? "NIS2 yhteensopivuus, kansalaisten tietojen suoja, ISO 27001 sertifiointi ja kestävä kyberturva."
              : "NIS2 compliance, citizen data protection, ISO 27001 certification, and resilient cybersecurity."
            }
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Challenges Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Suurimmat haasteet' : 'Key Challenges'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Julkisen sektorin organisaatiot kohtaavat ainutlaatuisia kyberturvahaasteita, jotka vaativat erikoistunutta osaamista."
            : "Public sector organizations face unique cybersecurity challenges that require specialized expertise."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {challenges.map((challenge) => (
          <div class="bg-slate-50 p-8 rounded-xl">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              <Icon name={challenge.icon} className="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{challenge.title}</h3>
            <p class="text-slate-600">{challenge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Ratkaisumme' : 'Our Solutions'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Kattavat palvelut, jotka auttavat julkisen sektorin organisaatioita vahvistamaan kyberturvaansa ja täyttämään sääntelyvaatimukset."
            : "Comprehensive services that help public sector organizations strengthen their cybersecurity and meet regulatory requirements."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {solutions.map((solution) => (
          <div class="bg-white p-8 rounded-xl shadow-sm">
            <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mb-6">
              <Icon name={solution.icon} className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{solution.title}</h3>
            <p class="text-slate-600">{solution.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Edut' : 'Benefits'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Miksi julkisen sektorin organisaatiot valitsevat meidät kyberturvapalveluihinsa."
            : "Why public sector organizations choose us for their cybersecurity services."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="check" className="w-8 h-8 text-blue-600" />
            </div>
            <p class="text-slate-700 font-medium">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">
        {lang === 'fi' ? 'Valmiit vahvistamaan kyberturvaasi?' : 'Ready to strengthen your cybersecurity?'}
      </h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">
        {lang === 'fi'
          ? "Ota yhteyttä meihin ja aloitetaan julkisen sektorin organisaatiosi kyberturvan vahvistaminen."
          : "Contact us and let's start strengthening your public sector organization's cybersecurity."
        }
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Ota yhteyttä' : 'Get in Touch'}
        </Button>
        <Button href="/services/regulatory-compliance" variant="secondary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Lue lisää NIS2:sta' : 'Learn More About NIS2'}
        </Button>
      </div>
    </div>
  </section>
</Layout>
