---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang === 'fi' ? "SaaS & Teknologia" : "SaaS & Technology";
const description = lang === 'fi' 
  ? "Kattavat kyberturva- ja yhteensopivuuspalvelut ohjelmistoyrityksille ja teknologiayrityksille. Autamme suojaamaan tuotekehityksen, asiakastiedot ja pilvipalvelut."
  : "Comprehensive cybersecurity and compliance services for software companies and technology organizations. We help protect product development, customer data, and cloud services.";

const challenges = [
  {
    title: lang === 'fi' ? "Tuotekehityksen suojaus" : "Product Security",
    description: lang === 'fi' 
      ? "Ohjelmistojen ja API:en turvallisuuden varmistaminen kehitysprosessissa"
      : "Ensuring security of software and APIs throughout the development process",
    icon: "code"
  },
  {
    title: lang === 'fi' ? "Pilvipalvelujen turvallisuus" : "Cloud Security",
    description: lang === 'fi' 
      ? "AWS, Azure ja muiden pilvipalvelujen kyberturvan vahvistaminen"
      : "Strengthening cybersecurity for AWS, Azure, and other cloud services",
    icon: "cloud"
  },
  {
    title: lang === 'fi' ? "Asiakastietojen suoja" : "Customer Data Protection",
    description: lang === 'fi' 
      ? "GDPR ja muiden tietosuoja-asetusten vaatimusten täyttäminen"
      : "Meeting GDPR and other data protection regulation requirements",
    icon: "user"
  },
  {
    title: lang === 'fi' ? "DevSecOps integraatio" : "DevSecOps Integration",
    description: lang === 'fi' 
      ? "Tietoturvan integroiminen kehitys- ja käyttöönotto-prosesseihin"
      : "Integrating security into development and deployment processes",
    icon: "gear"
  }
];

const solutions = [
  {
    title: lang === 'fi' ? "Tuotekehityksen turvallisuus" : "Product Security",
    description: lang === 'fi' 
      ? "Ohjelmistojen turvallisuuden auditointi ja testaus"
      : "Software security auditing and testing",
    icon: "shield"
  },
  {
    title: lang === 'fi' ? "Pilvipalvelujen auditointi" : "Cloud Security Audit",
    description: lang === 'fi' 
      ? "Pilvipalvelujen kyberturvan kattava auditointi"
      : "Comprehensive cybersecurity audit of cloud services",
    icon: "cloud"
  },
  {
    title: lang === 'fi' ? "GDPR Yhteensopivuus" : "GDPR Compliance",
    description: lang === 'fi' 
      ? "Tietosuoja-asetusten vaatimusten täyttäminen"
      : "Meeting data protection regulation requirements",
    icon: "document"
  },
  {
    title: lang === 'fi' ? "DevSecOps Ohjelma" : "DevSecOps Program",
    description: lang === 'fi' 
      ? "Tietoturvan integroiminen DevOps-prosesseihin"
      : "Integrating security into DevOps processes",
    icon: "arrowPath"
  }
];

const benefits = [
  lang === 'fi' ? "Suojaa tuotekehitysprosessi" : "Protect product development process",
  lang === 'fi' ? "Vahvista pilvipalvelujen turvallisuutta" : "Strengthen cloud service security",
  lang === 'fi' ? "Täytä GDPR vaatimukset" : "Meet GDPR requirements",
  lang === 'fi' ? "Paranna asiakkaiden luottamusta" : "Enhance customer trust",
  lang === 'fi' ? "Vahvista kilpailuetua" : "Strengthen competitive advantage"
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-purple-50 via-white to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          {lang === 'fi' 
            ? "Kattavat kyberturva- ja yhteensopivuuspalvelut ohjelmistoyrityksille ja teknologiayrityksille"
            : "Comprehensive cybersecurity and compliance services for software companies and technology organizations"
          }
        </p>
        <p class="text-lg text-slate-500 mb-10">
          {lang === 'fi'
            ? "Teknologiayritykset ja SaaS-palveluntarjoajat kohtaavat ainutlaatuisia kyberturvahaasteita. Autamme organisaatioita suojaamaan tuotekehitysprosessinsa, asiakastietojaan ja pilvipalveluitaan, samalla kun täytämme sääntelyvaatimukset."
            : "Technology companies and SaaS providers face unique cybersecurity challenges. We help organizations protect their product development process, customer data, and cloud services while meeting regulatory requirements."
          }
        </p>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">
            {lang === 'fi' ? 'Kelle tämä on tarkoitettu?' : 'Who is this for?'}
          </h2>
          <p class="text-slate-600 mb-4">
            {lang === 'fi'
              ? "Ohjelmistoyritykset, SaaS-palveluntarjoajat, teknologiastartupit, IT-palveluyritykset ja muut teknologiayritykset, jotka haluavat vahvistaa kyberturvaansa."
              : "Software companies, SaaS providers, technology startups, IT service companies, and other technology organizations looking to strengthen their cybersecurity."
            }
          </p>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {lang === 'fi' ? 'Mitä saavutat?' : 'What will you achieve?'}
          </h3>
          <p class="text-slate-600">
            {lang === 'fi'
              ? "Tuotekehityksen turvallisuus, pilvipalvelujen suoja, GDPR yhteensopivuus ja kestävä kyberturva."
              : "Product development security, cloud service protection, GDPR compliance, and resilient cybersecurity."
            }
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Challenges Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Suurimmat haasteet' : 'Key Challenges'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Teknologiayritykset kohtaavat ainutlaatuisia kyberturvahaasteita, jotka vaativat erikoistunutta osaamista."
            : "Technology companies face unique cybersecurity challenges that require specialized expertise."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {challenges.map((challenge) => (
          <div class="bg-slate-50 p-8 rounded-xl">
            <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mb-6">
              <Icon name={challenge.icon} className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{challenge.title}</h3>
            <p class="text-slate-600">{challenge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Ratkaisumme' : 'Our Solutions'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Kattavat palvelut, jotka auttavat teknologiayrityksiä vahvistamaan kyberturvaansa ja täyttämään sääntelyvaatimukset."
            : "Comprehensive services that help technology companies strengthen their cybersecurity and meet regulatory requirements."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {solutions.map((solution) => (
          <div class="bg-white p-8 rounded-xl shadow-sm">
            <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mb-6">
              <Icon name={solution.icon} className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{solution.title}</h3>
            <p class="text-slate-600">{solution.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Edut' : 'Benefits'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Miksi teknologiayritykset valitsevat meidät kyberturvapalveluihinsa."
            : "Why technology companies choose us for their cybersecurity services."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="check" className="w-8 h-8 text-purple-600" />
            </div>
            <p class="text-slate-700 font-medium">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">
        {lang === 'fi' ? 'Valmiit vahvistamaan kyberturvaasi?' : 'Ready to strengthen your cybersecurity?'}
      </h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">
        {lang === 'fi'
          ? "Ota yhteyttä meihin ja aloitetaan teknologiayrityksesi kyberturvan vahvistaminen."
          : "Contact us and let's start strengthening your technology company's cybersecurity."
        }
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Ota yhteyttä' : 'Get in Touch'}
        </Button>
        <Button href="/services/product-security" variant="secondary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Lue lisää tuotekehityksen turvallisuudesta' : 'Learn More About Product Security'}
        </Button>
      </div>
    </div>
  </section>
</Layout>
