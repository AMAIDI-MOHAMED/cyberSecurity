---
import Layout from '@/layouts/Layout.astro';

const title = "Contact Submissions - Admin";

// This page would typically be protected with authentication
// For now, it's a basic example of how to display submissions
---

<Layout title={title}>
  <section class="py-20 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Contact Form Submissions</h1>
        <p class="text-gray-600 mt-2">Manage incoming contact form submissions</p>
      </div>

      <div class="bg-white rounded-lg shadow-sm">
        <div class="p-6">
          <div id="submissionsContainer">
            <div class="text-center py-8">
              <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-teal-600 mx-auto"></div>
              <p class="text-gray-500 mt-2">Loading submissions...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
document.addEventListener('DOMContentLoaded', async function() {
  const container = document.getElementById('submissionsContainer');
  
  try {
    const response = await fetch('/api/contact-admin');
    const result = await response.json();
    
    if (result.success && result.data) {
      if (result.data.length === 0) {
        container.innerHTML = `
          <div class="text-center py-8">
            <p class="text-gray-500">No contact submissions yet.</p>
          </div>
        `;
      } else {
        const submissionsHTML = result.data.map(submission => `
          <div class="border-b border-gray-200 last:border-b-0 p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">${escapeHtml(submission.full_name)}</h3>
                <p class="text-sm text-gray-600">${escapeHtml(submission.email)}</p>
                ${submission.company_name ? `<p class="text-sm text-gray-600">${escapeHtml(submission.company_name)}</p>` : ''}
                ${submission.phone_number ? `<p class="text-sm text-gray-600">${escapeHtml(submission.phone_number)}</p>` : ''}
              </div>
              <div class="text-right">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  ${submission.status === 'new' ? 'bg-blue-100 text-blue-800' : 
                    submission.status === 'in_progress' ? 'bg-yellow-100 text-yellow-800' : 
                    submission.status === 'resolved' ? 'bg-green-100 text-green-800' : 
                    'bg-gray-100 text-gray-800'}">
                  ${submission.status}
                </span>
                <p class="text-sm text-gray-500 mt-1">${new Date(submission.submitted_at).toLocaleDateString()}</p>
              </div>
            </div>
            ${submission.service_of_interest ? `
              <div class="mb-3">
                <span class="text-sm font-medium text-gray-700">Service of Interest: </span>
                <span class="text-sm text-gray-600">${escapeHtml(submission.service_of_interest)}</span>
              </div>
            ` : ''}
            <div>
              <p class="text-sm font-medium text-gray-700 mb-2">Message:</p>
              <p class="text-gray-600">${escapeHtml(submission.message).replace(/\n/g, '<br>')}</p>
            </div>
          </div>
        `).join('');
        
        container.innerHTML = submissionsHTML;
      }
    } else {
      container.innerHTML = `
        <div class="text-center py-8">
          <p class="text-red-500">Error loading submissions: ${result.error || 'Unknown error'}</p>
          <p class="text-sm text-gray-500 mt-2">Make sure Supabase is configured correctly.</p>
        </div>
      `;
    }
  } catch (error) {
    console.error('Error loading submissions:', error);
    container.innerHTML = `
      <div class="text-center py-8">
        <p class="text-red-500">Error loading submissions</p>
        <p class="text-sm text-gray-500 mt-2">Check console for details</p>
      </div>
    `;
  }
});

function escapeHtml(unsafe) {
  return unsafe
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;")
    .replace(/"/g, "&quot;")
    .replace(/'/g, "&#039;");
}
</script>
