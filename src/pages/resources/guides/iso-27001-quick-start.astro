---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const title = "ISO 27001 Quick Start Guide";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "ISO 27001 Quick Start Guide",
  subtitle: "25-page implementation roadmap",
  description: "Comprehensive step-by-step guide to implementing ISO 27001 information security management system in your organization. Download this essential resource to kickstart your certification journey.",
  primaryCTA: { text: "Download PDF", href: "/downloads/iso-27001-quick-start-guide.pdf" },
  secondaryCTA: { text: "Contact Expert", href: "/contact" }
};
---

<Layout title={title} description="Download our free ISO 27001 Quick Start Guide - a comprehensive 25-page implementation roadmap for information security management systems.">
  <HeroSection content={heroContent} />
  
  <!-- Guide Overview -->
  <section class="py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">What's Inside</h2>
          <div class="space-y-6">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Complete Implementation Plan</h3>
                <p class="text-gray-600">Step-by-step roadmap from planning to certification</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Control Implementation</h3>
                <p class="text-gray-600">Practical guidance for all 93 ISO 27001 controls</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Risk Assessment Templates</h3>
                <p class="text-gray-600">Ready-to-use templates and methodologies</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Timeline & Milestones</h3>
                <p class="text-gray-600">Realistic project timelines and key milestones</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Guide Contents</h2>
          <div class="bg-gray-50 rounded-lg p-6">
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">1.</span>
                <span class="text-gray-700">Introduction to ISO 27001</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">2.</span>
                <span class="text-gray-700">Planning Your ISMS Implementation</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">3.</span>
                <span class="text-gray-700">Risk Assessment Methodology</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">4.</span>
                <span class="text-gray-700">Implementing Security Controls</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">5.</span>
                <span class="text-gray-700">Documentation Requirements</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">6.</span>
                <span class="text-gray-700">Internal Audit Process</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">7.</span>
                <span class="text-gray-700">Management Review</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">8.</span>
                <span class="text-gray-700">Certification Process</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">9.</span>
                <span class="text-gray-700">Templates & Checklists</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-blue-600 font-semibold">10.</span>
                <span class="text-gray-700">Common Implementation Pitfalls</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Download Section -->
  <section class="py-24 bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Ready to Start Your ISO 27001 Journey?</h2>
      <p class="text-lg text-gray-700 mb-8">Download our comprehensive guide and take the first step towards ISO 27001 certification.</p>
      
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        
        <h3 class="text-xl font-semibold text-gray-900 mb-4">ISO 27001 Quick Start Guide</h3>
        <p class="text-gray-600 mb-6">25 pages • PDF format • Updated December 2024</p>
        
        <a 
          href="/downloads/iso-27001-quick-start-guide.pdf" 
          class="inline-flex items-center justify-center px-8 py-4 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold transition-colors duration-300 transform hover:scale-105"
          download
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download Free Guide
        </a>
        
        <p class="text-sm text-gray-500 mt-4">
          No email required • Instant download • 100% free
        </p>
      </div>
      
      <div class="mt-8">
        <p class="text-gray-600 mb-4">Need help with implementation?</p>
        <a 
          href="/contact" 
          class="inline-flex items-center px-6 py-3 text-blue-600 hover:text-blue-700 font-medium transition-colors duration-300"
        >
          Contact Our ISO 27001 Experts
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <CTA />
</Layout>
