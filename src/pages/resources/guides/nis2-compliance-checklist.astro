---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const title = "NIS2 Compliance Checklist";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "NIS2 Compliance Checklist",
  subtitle: "Complete requirement assessment tool",
  description: "Comprehensive checklist covering all NIS2 directive requirements. Use this essential tool to assess your organization's compliance status and prepare for the upcoming deadline.",
  primaryCTA: { text: "Download PDF", href: "/downloads/nis2-compliance-checklist.pdf" },
  secondaryCTA: { text: "Get Expert Help", href: "/contact" }
};
---

<Layout title={title} description="Download our free NIS2 Compliance Checklist - a complete requirement assessment tool for NIS2 directive compliance.">
  <HeroSection content={heroContent} />
  
  <!-- Checklist Overview -->
  <section class="py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why You Need This Checklist</h2>
          <div class="space-y-6">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Complete Coverage</h3>
                <p class="text-gray-600">All NIS2 requirements in one comprehensive checklist</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Gap Analysis</h3>
                <p class="text-gray-600">Identify compliance gaps in your current security posture</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Action Planning</h3>
                <p class="text-gray-600">Clear action items and implementation guidance</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Timeline Tracking</h3>
                <p class="text-gray-600">Monitor progress towards compliance deadline</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Checklist Sections</h2>
          <div class="bg-gray-50 rounded-lg p-6">
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Governance and Risk Management</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Cybersecurity Measures</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Business Continuity</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Supply Chain Security</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Incident Handling</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Crisis Management</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Network Security Monitoring</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Information Sharing</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Reporting Requirements</span>
              </li>
              <li class="flex items-start space-x-3">
                <span class="text-green-600 font-semibold">✓</span>
                <span class="text-gray-700">Supervision and Enforcement</span>
              </li>
            </ul>
          </div>
          
          <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.865-.833-2.635 0L4.179 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-yellow-800">Compliance Deadline</h4>
                <p class="text-yellow-700 text-sm">NIS2 directive must be implemented by October 17, 2024</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Download Section -->
  <section class="py-24 bg-gradient-to-br from-green-50 to-emerald-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Start Your NIS2 Compliance Assessment</h2>
      <p class="text-lg text-gray-700 mb-8">Download our comprehensive checklist and begin evaluating your organization's NIS2 readiness today.</p>
      
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        
        <h3 class="text-xl font-semibold text-gray-900 mb-4">NIS2 Compliance Checklist</h3>
        <p class="text-gray-600 mb-6">18 pages • PDF format • Updated December 2024</p>
        
        <a 
          href="/downloads/nis2-compliance-checklist.pdf" 
          class="inline-flex items-center justify-center px-8 py-4 text-white bg-green-600 hover:bg-green-700 rounded-lg font-semibold transition-colors duration-300 transform hover:scale-105"
          download
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download Free Checklist
        </a>
        
        <p class="text-sm text-gray-500 mt-4">
          No email required • Instant download • 100% free
        </p>
      </div>
      
      <div class="mt-8">
        <p class="text-gray-600 mb-4">Need expert guidance on NIS2 compliance?</p>
        <a 
          href="/contact" 
          class="inline-flex items-center px-6 py-3 text-green-600 hover:text-green-700 font-medium transition-colors duration-300"
        >
          Get Professional NIS2 Consultation
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <CTA />
</Layout>
