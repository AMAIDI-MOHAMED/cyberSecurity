---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang==='fi' ? 'ISO 27001 vs NIS2: Strateginen linjaus' : 'ISO 27001 vs NIS2: Strategic Alignment Strategies';
const description = lang==='fi' ? 'Hyödynnä nykyistä ISO 27001 ‑kehystä NIS2‑yhteensopivuuden nopeuttamiseksi.' : 'Leverage existing ISO 27001 frameworks to accelerate NIS2 compliance.';

const mappings = [
  { iso:'A.5 Leadership & Policies', nis:'Art.21 Governance & Policies' },
  { iso:'A.6 Organization of IS', nis:'Art.21 Roles and Responsibilities' },
  { iso:'A.8 Asset Management', nis:'Art.21 Risk Management' },
  { iso:'A.17 Business Continuity', nis:'Art.21 Business Continuity' },
  { iso:'A.15 Supplier Relationships', nis:'Art.21 Supply Chain Security' }
];
---

<Layout title={title} description={description}>
  <section class="bg-gradient-to-br from-slate-50 via-white to-indigo-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">{title}</h1>
        <p class="text-xl text-slate-600">{description}</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {mappings.map(m => (
          <div class="p-6 rounded-xl border border-slate-200 bg-slate-50">
            <div class="text-sm text-slate-500">ISO 27001</div>
            <div class="text-slate-900 font-semibold">{m.iso}</div>
            <div class="mt-2 text-sm text-slate-500">NIS2</div>
            <div class="text-slate-900">{m.nis}</div>
          </div>
        ))}
      </div>
      <p class="mt-8 text-slate-600">{lang==='fi' ? 'Käytännössä ISO 27001 ‑kontrollit kattavat suuren osan NIS2‑vaatimuksista—tarvitaan täydennyksiä toimittajahallintaan, raportointiin ja varautumiseen.' : 'In practice, ISO 27001 controls cover most NIS2 requirements—supplement with supplier risk, reporting and resilience.'}</p>
    </div>
  </section>
</Layout>


