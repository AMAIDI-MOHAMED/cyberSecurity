---
import Layout from '@/layouts/Layout.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';
const title = lang === 'fi' ? 'Kaikki resurssit' : 'All Resources';
const description = lang === 'fi' ? 'Resurssisivu on siirretty. Päivitetty luettelo löytyy pääresurssisivulta.' : 'The comprehensive resources list has moved. View updated resources on the main resources page.';
---

<Layout title={title} description={description}>
  <section class="py-24">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold tracking-tight mb-6">{title}</h1>
      <p class="text-lg text-slate-600 mb-8">{description}</p>
      <a href="/resources" class="inline-flex items-center justify-center px-6 py-3 text-center font-medium text-white bg-teal-800 hover:bg-teal-700 rounded-lg transition-colors duration-300">
        {lang === 'fi' ? 'Siirry resurssisivulle' : 'Go to Resources'}
      </a>
    </div>
  </section>
</Layout>
