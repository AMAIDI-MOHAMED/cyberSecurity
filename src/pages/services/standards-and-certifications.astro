---
import Layout from '@/layouts/Layout.astro';

const title = 'Standards & Certifications';
const tagline = 'Achieve industry-recognized security standards';
const items = [
  {
    title: 'ISO 27001 Services',
    href: '/services/standards-and-certifications/iso-27001-services',
    description: 'Gap analysis, ISMS build, internal audit, and end-to-end certification readiness support.'
  },
  {
    title: 'ISO 27701 (PIMS)',
    href: '/services/standards-and-certifications/iso-27701-pims',
    description: 'Extend ISMS to privacy; GDPR-aligned certification readiness.'
  },
  {
    title: 'ISO 27017/27018',
    href: '/services/standards-and-certifications/iso-27017-27018',
    description: 'Cloud security and PII protection controls for CSPs/customers.'
  },
  {
    title: 'ISO 22301',
    href: '/services/standards-and-certifications/iso-22301',
    description: 'Business continuity management, exercises, and certification readiness.'
  },
  {
    title: 'ISO/IEC 20000-1',
    href: '/services/standards-and-certifications/iso-iec-20000-1',
    description: 'IT service management alignment for MSSP processes and SLAs.'
  },
  {
    title: 'SOC 2 Readiness',
    href: '/services/standards-and-certifications/soc-2-readiness',
    description: 'Map controls to Trust Services Criteria, collect evidence, and prepare for Type I/II audits.'
  },
  {
    title: 'CSA STAR (Levels 1–3)',
    href: '/services/standards-and-certifications/csa-star',
    description: 'Self-assessment, ISO 27001 integration, continuous assurance.'
  },
  {
    title: 'Common Criteria',
    href: '/services/standards-and-certifications/common-criteria',
    description: 'Security Targets, Protection Profiles, and evaluation guidance for Common Criteria certification.'
  },
  {
    title: 'SOC 1 / ISAE 3402',
    href: '/services/standards-and-certifications/soc-1-isae-3402',
    description: 'Controls for financial reporting; evidence and auditor support.'
  },
  {
    title: 'ISAE 3000 Assurance',
    href: '/services/standards-and-certifications/isae-3000-assurance',
    description: 'Independent attestation over security/privacy control suites.'
  },
  {
    title: 'TISAX (Automotive)',
    href: '/services/standards-and-certifications/tisax-automotive',
    description: 'Scope definition, assessment support, and label attainment.'
  },
  {
    title: 'BSI C5 (Cloud)',
    href: '/services/standards-and-certifications/bsi-c5-cloud',
    description: 'Control mapping, testing, and attestation reporting.'
  },
  {
    title: 'IEC 62443 (OT/ICS)',
    href: '/services/standards-and-certifications/iec-62443-ot-ics',
    description: 'Maturity assessments and remediation for industrial systems.'
  },
  {
    title: 'Cyber Essentials / Plus',
    href: '/services/standards-and-certifications/cyber-essentials-plus',
    description: 'Rapid hardening, testing, and certification preparation.'
  },
  {
    title: 'CMMC / NIST 800-171',
    href: '/services/standards-and-certifications/cmmc-nist-800-171',
    description: 'Gap analysis, SPRS scoring, POA&M, enclave strategies.'
  },
  {
    title: 'HITRUST CSF',
    href: '/services/standards-and-certifications/hitrust-csf',
    description: 'Readiness, control mapping, and validated assessment support.'
  },
  {
    title: 'DPO/Privacy Office-as-a-Service',
    href: '/services/standards-and-certifications/dpo-privacy-office',
    description: 'Outsourced DPO; DPIAs, RoPAs, privacy governance, and breach liaison.'
  },
  {
    title: 'CISO-as-a-Service',
    href: '/services/standards-and-certifications/ciso-as-a-service',
    description: 'Virtual CISO; strategy, roadmap, metrics, stakeholder reporting.'
  },
  {
    title: 'Compliance-as-a-Service',
    href: '/services/standards-and-certifications/compliance-as-a-service',
    description: 'Compliance Manager; ISMS/BCMS operation, evidence, audits, attestations.'
  },
  {
    title: 'GRC Platform Managed Service',
    href: '/services/standards-and-certifications/grc-platform-managed-service',
    description: 'GRC Platform Admin; workflows, integrations, reporting, user support.'
  },
  {
    title: 'ISO 27001 Implementation & Auditing',
    href: '/services/standards-and-certifications/iso-27001-implementation-auditing',
    description: 'ISMS Manager/Internal Auditor; scope and risk, SoA, control implementation, evidence, internal audits, certification support.'
  },
  {
    title: 'Anti-Fraud Services',
    href: '/services/standards-and-certifications/anti-fraud-services',
    description: 'Head of Fraud/Risk; BEC/invoice controls, detection, response.'
  }
];
---

<Layout title={title} description={tagline}>
  <section class="bg-gradient-to-br from-teal-50 via-white to-blue-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl md:text-4xl font-bold text-slate-900">{title}</h1>
      <p class="mt-3 text-slate-600 text-lg">{tagline}</p>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        {items.map((s) => (
          <a href={s.href} class="group block rounded-xl border border-slate-200 p-6 bg-white hover:bg-slate-50 transition-colors">
            <h3 class="text-lg font-semibold text-slate-900 group-hover:text-teal-700">{s.title}</h3>
            <p class="mt-2 text-slate-600 text-sm">{s.description}</p>
            <span class="inline-flex items-center mt-4 text-teal-700 font-medium">Read more →</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

