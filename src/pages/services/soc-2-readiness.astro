---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang === 'fi' ? "SOC 2 Valmistelu" : "SOC 2 Readiness";
const description = lang === 'fi' 
  ? "Ammattimaiset SOC 2 Type II sertifiointipalvelut. Autamme SaaS- ja teknologiayrityksiä saavuttamaan luotettavuus- ja tietoturvastandardit."
  : "Professional SOC 2 Type II certification services. We help SaaS and technology companies achieve trust and security standards.";

const trustServices = [
  {
    title: lang === 'fi' ? "Tietoturva" : "Security",
    description: lang === 'fi' 
      ? "Suojaa järjestelmiä ja tietoja luvattomalta käytöltä"
      : "Protect systems and data from unauthorized access",
    icon: "shield",
    criteria: [
      lang === 'fi' ? "Käyttäjien hallinta" : "User access management",
      lang === 'fi' ? "Salaus ja tietoturva" : "Encryption and security",
      lang === 'fi' ? "Tietoturvavalvonta" : "Security monitoring"
    ]
  },
  {
    title: lang === 'fi' ? "Saatavuus" : "Availability",
    description: lang === 'fi' 
      ? "Varmista palvelun jatkuva saatavuus ja suorituskyky"
      : "Ensure continuous service availability and performance",
    icon: "clock",
    criteria: [
      lang === 'fi' ? "Suunnitelmallinen ylläpito" : "Planned maintenance",
      lang === 'fi' ? "Vikatilanteiden hallinta" : "Incident management",
      lang === 'fi' ? "Suorituskyvyn seuranta" : "Performance monitoring"
    ]
  },
  {
    title: lang === 'fi' ? "Käsittely" : "Processing",
    description: lang === 'fi' 
      ? "Varmista tietojen oikeellinen käsittely ja eheys"
      : "Ensure accurate data processing and integrity",
    icon: "check",
    criteria: [
      lang === 'fi' ? "Tietojen validointi" : "Data validation",
      lang === 'fi' ? "Virheiden käsittely" : "Error handling",
      lang === 'fi' ? "Tietojen varmuuskopiointi" : "Data backup"
    ]
  },
  {
    title: lang === 'fi' ? "Luottamuksellisuus" : "Confidentiality",
    description: lang === 'fi' 
      ? "Suojaa arkaluontoista tietoa luvattomalta paljastumiselta"
      : "Protect sensitive information from unauthorized disclosure",
    icon: "lock",
    criteria: [
      lang === 'fi' ? "Tietojen luokittelu" : "Data classification",
      lang === 'fi' ? "Salassapitosopimukset" : "Non-disclosure agreements",
      lang === 'fi' ? "Tietojen salaus" : "Data encryption"
    ]
  },
  {
    title: lang === 'fi' ? "Yksityisyys" : "Privacy",
    description: lang === 'fi' 
      ? "Noudata tietosuojaa ja henkilötietojen käsittelyä"
      : "Comply with privacy and personal data processing",
    icon: "user",
    criteria: [
      lang === 'fi' ? "GDPR yhteensopivuus" : "GDPR compliance",
      lang === 'fi' ? "Henkilötietojen hallinta" : "Personal data management",
      lang === 'fi' ? "Yksityisyyden suoja" : "Privacy protection"
    ]
  }
];

const readinessSteps = [
  {
    step: "1",
    title: lang === 'fi' ? "Alustava arviointi" : "Initial Assessment",
    description: lang === 'fi' 
      ? "Arvioidaan nykyinen tietoturvataso SOC 2 vaatimusten suhteen"
      : "Assess current security posture against SOC 2 requirements"
  },
  {
    step: "2",
    title: lang === 'fi' ? "Gap Analysis" : "Gap Analysis",
    description: lang === 'fi' 
      ? "Tunnistetaan puutteet ja suunnitellaan korjauskeinot"
      : "Identify gaps and plan remediation measures"
  },
  {
    step: "3",
    title: lang === 'fi' ? "Toteutus" : "Implementation",
    description: lang === 'fi' 
      ? "Toteutetaan tarvittavat tietoturvatoimenpiteet"
      : "Implement required security measures"
  },
  {
    step: "4",
    title: lang === 'fi' ? "Sisäinen auditointi" : "Internal Audit",
    description: lang === 'fi' 
      ? "Suoritetaan sisäinen auditointi ja korjataan puutteet"
      : "Conduct internal audit and fix gaps"
  },
  {
    step: "5",
    title: lang === 'fi' ? "Ulkoinen auditointi" : "External Audit",
    description: lang === 'fi' 
      ? "Läpäistään ulkoinen SOC 2 auditointi"
      : "Pass external SOC 2 audit"
  }
];

const benefits = [
  lang === 'fi' ? "Vahvista asiakkaiden luottamusta" : "Strengthen customer trust",
  lang === 'fi' ? "Erota kilpailijoista" : "Differentiate from competitors",
  lang === 'fi' ? "Täytä sääntelyvaatimukset" : "Meet regulatory requirements",
  lang === 'fi' ? "Paranna tietoturvaa" : "Improve security posture",
  lang === 'fi' ? "Nopeuta myyntiprosessia" : "Accelerate sales process"
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-purple-50 via-white to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          {lang === 'fi' 
            ? "Saavuta SOC 2 Type II sertifiointi ja vahvista asiakkaiden luottamus. Autamme SaaS- ja teknologiayrityksiä rakentamaan vahvan tietoturvan perustan."
            : "Achieve SOC 2 Type II certification and strengthen customer trust. We help SaaS and technology companies build a strong cybersecurity foundation."
          }
        </p>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">
            {lang === 'fi' ? 'Miksi SOC 2?' : 'Why SOC 2?'}
          </h2>
          <p class="text-slate-600 mb-4">
            {lang === 'fi'
              ? "SOC 2 on AICPA:n kehittämä standardi, joka vahvistaa organisaation tietoturvan, saatavuuden ja tietojen käsittelyn. Se on kriittinen SaaS-yrityksille ja teknologiayrityksille."
              : "SOC 2 is a standard developed by AICPA that validates an organization's security, availability, and data processing. It's critical for SaaS companies and technology organizations."
            }
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Services Criteria -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Luottamuspalvelukriteerit' : 'Trust Service Criteria'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "SOC 2 perustuu viiteen luottamuspalvelukriteeriin, jotka määrittelevät tietoturvan standardit."
            : "SOC 2 is based on five trust service criteria that define security standards."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {trustServices.map((service) => (
          <div class="bg-gradient-to-br from-slate-50 to-white p-8 rounded-xl border border-slate-200 hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mb-6">
              <Icon name={service.icon} className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{service.title}</h3>
            <p class="text-slate-600 mb-6">{service.description}</p>
            <ul class="space-y-2">
              {service.criteria.map((criterion) => (
                <li class="flex items-center text-sm text-slate-600">
                  <Icon name="check" className="w-4 h-4 text-green-500 mr-2" />
                  {criterion}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Readiness Process -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'Valmisteluprosessi' : 'Readiness Process'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Selkeä ja strukturoitu prosessi SOC 2 sertifiointiin."
            : "Clear and structured process for SOC 2 certification."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        {readinessSteps.map((step) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-xl font-bold">
              {step.step}
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">{step.title}</h3>
            <p class="text-slate-600 text-sm">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {lang === 'fi' ? 'SOC 2 Edut' : 'SOC 2 Benefits'}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {lang === 'fi'
            ? "Saavuta konkreettisia hyötyjä SOC 2 sertifioinnin avulla."
            : "Achieve concrete benefits with SOC 2 certification."
          }
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="check" className="w-8 h-8 text-green-600" />
            </div>
            <p class="text-slate-700 font-medium">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">
        {lang === 'fi' ? 'Valmiit aloittamaan SOC 2 matkanne?' : 'Ready to start your SOC 2 journey?'}
      </h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">
        {lang === 'fi'
          ? "Ota yhteyttä meihin ja aloitetaan SOC 2 valmisteluprosessi."
          : "Contact us and let's start your SOC 2 readiness process."
        }
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Ota yhteyttä' : 'Get in Touch'}
        </Button>
        <Button href="/contact?consultation=true" variant="secondary" className="text-lg px-8 py-3">
          {lang === 'fi' ? 'Varaa konsultaatio' : 'Book Consultation'}
        </Button>
      </div>
    </div>
  </section>
</Layout>
