---
import Layout from '@/layouts/Layout.astro';

const title = 'ePrivacy & Cookie Compliance Services';
const description = 'Comprehensive ePrivacy and cookie compliance solutions: consent management, cookie audits, tracking governance, and digital marketing compliance for EU regulations.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-orange-50 via-white to-amber-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
          ePrivacy & Cookie Compliance Services
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-8">
          Comprehensive ePrivacy and cookie compliance solutions including consent management, cookie audits, tracking governance, and digital marketing compliance for EU regulations.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 transition-colors">
            Start Cookie Compliance
          </a>
          <a href="/services" class="inline-flex items-center px-8 py-3 border border-slate-300 text-base font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 transition-colors">
            View Our Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-16 bg-white">
