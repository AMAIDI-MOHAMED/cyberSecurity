---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = "IEC 62443 (OT/ICS) Security";
const description = "Comprehensive maturity assessments and remediation for industrial automation and control systems (OT/ICS) based on IEC 62443 standards.";

const features = [
  {
    title: "Maturity Assessment",
    description: "Comprehensive evaluation of your OT/ICS security posture against IEC 62443 maturity levels",
    icon: "chart"
  },
  {
    title: "Gap Analysis & Remediation",
    description: "Detailed gap analysis with prioritized remediation roadmap for industrial control systems",
    icon: "wrench"
  },
  {
    title: "Zone & Conduit Design",
    description: "Strategic segmentation and secure communication design for industrial networks",
    icon: "network"
  },
  {
    title: "Risk Assessment",
    description: "OT-specific risk assessments considering safety, availability, and security requirements",
    icon: "shield"
  },
  {
    title: "Control Implementation",
    description: "Implementation of IEC 62443 security controls tailored for operational technology",
    icon: "cog"
  },
  {
    title: "Certification Support",
    description: "Expert guidance through IEC 62443 certification process and compliance validation",
    icon: "award"
  }
];

const benefits = [
  "Protect critical industrial infrastructure",
  "Meet international OT security standards",
  "Reduce operational disruption risks",
  "Demonstrate security maturity to stakeholders",
  "Comply with industrial cybersecurity regulations"
];

const deliverables = [
  "IEC 62443 maturity assessment report",
  "OT/ICS security gap analysis",
  "Zone and conduit architecture design",
  "Security requirements specification",
  "Remediation roadmap and timeline",
  "Control implementation guidelines",
  "Incident response procedures for OT",
  "Ongoing monitoring and maintenance plan"
];

const industries = [
  "Manufacturing",
  "Energy & Utilities", 
  "Oil & Gas",
  "Chemical Processing",
  "Water Treatment",
  "Transportation",
  "Critical Infrastructure"
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-orange-50 via-white to-red-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          Expert IEC 62443 compliance services to secure your industrial automation and control systems (OT/ICS) infrastructure
        </p>
        <p class="text-lg text-slate-500 mb-10">
          IEC 62443 is the leading international standard for industrial cybersecurity. Our specialized team provides comprehensive maturity assessments, gap analysis, and remediation strategies to protect your critical operational technology from cyber threats.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="/contact?service=iec-62443" variant="primary">
            Get OT Security Assessment
          </Button>
          <Button href="/contact?consultation=true" variant="secondary">
            Book Consultation
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-slate-900 mb-8">Overview</h2>
        <div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-xl p-8 border border-orange-200">
          <p class="text-lg text-slate-700 mb-6">
            IEC 62443 is the international standard for security of industrial automation and control systems (IACS). It provides a comprehensive framework for securing operational technology (OT) environments across manufacturing, energy, utilities, and critical infrastructure sectors.
          </p>
          <p class="text-lg text-slate-700">
            Our expert team specializes in OT/ICS cybersecurity, offering maturity assessments, remediation planning, and implementation support to help organizations achieve IEC 62443 compliance while maintaining operational safety and availability.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our IEC 62443 Services</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Comprehensive OT/ICS security services covering all aspects of IEC 62443 compliance
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white p-8 rounded-xl shadow-lg border border-slate-100">
            <div class="flex items-center mb-4">
              <Icon name={feature.icon} class="h-8 w-8 text-orange-600" />
              <h3 class="text-xl font-bold text-slate-900 ml-3">{feature.title}</h3>
            </div>
            <p class="text-slate-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Industries We Serve</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-8">
          Specialized IEC 62443 expertise across critical industrial sectors
        </p>
      </div>
      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
        {industries.map((industry) => (
          <div class="bg-gradient-to-br from-orange-50 to-red-50 p-6 rounded-lg border border-orange-200 text-center">
            <h3 class="font-semibold text-slate-900">{industry}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Deliverables Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">What You Get</h2>
          <ul class="space-y-4">
            {deliverables.map((deliverable) => (
              <li class="flex items-start">
                <Icon name="check" class="h-6 w-6 text-green-600 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-slate-700">{deliverable}</span>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Key Benefits</h2>
          <ul class="space-y-4">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <Icon name="star" class="h-6 w-6 text-orange-600 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-slate-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-orange-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-4">Secure Your Industrial Systems</h2>
      <p class="text-xl mb-8">Contact us today to start your IEC 62443 compliance journey</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact?service=iec-62443" variant="white">
          Get Started
        </Button>
        <Button href="/contact?consultation=true" variant="outline-white">
          Schedule Assessment
        </Button>
      </div>
    </div>
  </section>
</Layout>
