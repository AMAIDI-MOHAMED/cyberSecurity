---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/icons/Icon.astro';

const title = 'Common Criteria';
const description = 'Security Targets, Protection Profiles, and evaluation guidance for Common Criteria certification.';

const services = [
  {
    title: 'Security Targets (ST)',
    description: 'Comprehensive Security Target development for your IT products',
    features: [
      'Security objective identification',
      'Threat and risk analysis',
      'Security functional requirements',
      'Security assurance requirements'
    ],
    icon: 'target'
  },
  {
    title: 'Protection Profiles (PP)',
    description: 'Industry-standard Protection Profile development and compliance',
    features: [
      'PP compliance assessment',
      'Custom PP development',
      'Security requirements mapping',
      'Industry alignment verification'
    ],
    icon: 'shield'
  },
  {
    title: 'Evaluation Guidance',
    description: 'Expert guidance throughout the Common Criteria evaluation process',
    features: [
      'Evaluation lab selection',
      'Evaluation process support',
      'Evidence preparation',
      'Evaluator interaction management'
    ],
    icon: 'clipboard-check'
  },
  {
    title: 'Certification Support',
    description: 'End-to-end support for successful Common Criteria certification',
    features: [
      'Certification body liaison',
      'Documentation review',
      'Compliance verification',
      'Certification maintenance'
    ],
    icon: 'certificate'
  }
];

const evaluationLevels = [
  { level: 'EAL1', description: 'Functionally tested' },
  { level: 'EAL2', description: 'Structurally tested' },
  { level: 'EAL3', description: 'Methodically tested and checked' },
  { level: 'EAL4', description: 'Methodically designed, tested, and reviewed' },
  { level: 'EAL5', description: 'Semiformally designed and tested' },
  { level: 'EAL6', description: 'Semiformally verified design and tested' },
  { level: 'EAL7', description: 'Formally verified design and tested' }
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-green-50 to-emerald-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">
            Start Evaluation
          </Button>
          <Button href="#services" variant="secondary">
            Learn More
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Our Common Criteria Services
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Expert guidance for every aspect of Common Criteria certification
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="bg-gradient-to-br from-gray-50 to-green-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-6">
              <Icon name={service.icon} class="w-6 h-6 text-green-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {service.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {service.description}
            </p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-start text-sm text-gray-600">
                  <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Evaluation Assurance Levels -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Evaluation Assurance Levels (EAL)
        </h2>
        <p class="text-lg text-gray-600">
          We support certification at all EAL levels
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {evaluationLevels.map((eal) => (
          <div class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                <span class="text-green-600 font-bold text-sm">{eal.level.slice(-1)}</span>
              </div>
              <h3 class="font-semibold text-gray-900">{eal.level}</h3>
            </div>
            <p class="text-gray-600 text-sm">{eal.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-600 to-emerald-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Ready for Common Criteria Certification?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Get expert guidance for successful evaluation and certification
      </p>
      <Button href="/contact" variant="secondary">
        Contact Our Experts
      </Button>
    </div>
  </section>
</Layout>

