
---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/icons/Icon.astro';
const title = "TISAX (Automotive)";
const description = "Scope definition, assessment support, and label attainment.";
const services = [
  {
    title: 'Scope Definition & Readiness',
    description: 'Define scope and assess readiness for TISAX assessment.',
    features: [
      'Scope definition workshops',
      'Readiness assessment',
      'Gap analysis',
      'Remediation roadmap'
    ],
    icon: 'search'
  },
  {
    title: 'Assessment Preparation & Support',
    description: 'Prepare for TISAX assessment and support through the process.',
    features: [
      'Assessment planning',
      'Documentation review',
      'Stakeholder training',
      'Evidence collection'
    ],
    icon: 'clipboard-check'
  },
  {
    title: 'Label Attainment & Auditor Liaison',
    description: 'Achieve TISAX label and coordinate with auditors.',
    features: [
      'Remediation support',
      'Audit liaison',
      'Certification preparation',
      'Label attainment guidance'
    ],
    icon: 'certificate'
  }
];
const benefits = [
  'Automotive industry expertise',
  'Accelerated label attainment',
  'Comprehensive documentation',
  'Expert guidance throughout the process',
  'Ongoing compliance support'
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{title}</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">{description}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">Get TISAX Support</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our TISAX Services</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">Comprehensive support for every stage of your TISAX assessment journey</p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <Icon name={service.icon} class="w-6 h-6 text-blue-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-start text-sm text-gray-600">
                  <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Our TISAX Services?</h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <div class="flex items-center bg-white p-4 rounded-lg shadow-sm">
            <Icon name="check-circle" class="w-5 h-5 text-green-500 mr-3" />
            <span class="text-gray-700">{benefit}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-indigo-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready for TISAX Assessment?</h2>
      <p class="text-xl text-blue-100 mb-8">Get expert guidance and accelerate your label attainment</p>
      <Button href="/contact" variant="secondary">Contact Our Experts</Button>
    </div>
  </section>
</Layout>
