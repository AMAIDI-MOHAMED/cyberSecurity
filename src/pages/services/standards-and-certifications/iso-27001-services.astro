---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/icons/Icon.astro';

const title = 'ISO 27001 Services';
const description = 'Gap analysis, ISMS build, internal audit, and end-to-end certification readiness support.';

const services = [
  {
    title: 'Gap Analysis',
    description: 'Comprehensive assessment of your current security posture against ISO 27001 requirements',
    features: [
      'Current state assessment',
      'Compliance gap identification',
      'Risk analysis and prioritization',
      'Detailed remediation roadmap'
    ],
    icon: 'search'
  },
  {
    title: 'ISMS Implementation',
    description: 'Complete Information Security Management System design and implementation',
    features: [
      'ISMS framework design',
      'Policy and procedure development',
      'Security control implementation',
      'Documentation and training'
    ],
    icon: 'shield'
  },
  {
    title: 'Internal Audits',
    description: 'Regular internal audit services to maintain compliance and identify improvements',
    features: [
      'Audit planning and execution',
      'Non-conformity identification',
      'Corrective action recommendations',
      'Continuous improvement support'
    ],
    icon: 'clipboard-check'
  },
  {
    title: 'Certification Readiness',
    description: 'End-to-end support to ensure successful external certification audit',
    features: [
      'Pre-audit readiness assessment',
      'Documentation review and optimization',
      'Staff training and preparation',
      'Certification body liaison'
    ],
    icon: 'certificate'
  }
];

const benefits = [
  'Faster certification timeline',
  'Reduced audit costs',
  'Expert guidance throughout the process',
  'Comprehensive documentation',
  'Ongoing support and maintenance'
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">
            Get Started Today
          </Button>
          <Button href="#services" variant="secondary">
            Learn More
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Our ISO 27001 Services
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Comprehensive support for every stage of your ISO 27001 certification journey
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <Icon name={service.icon} class="w-6 h-6 text-blue-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {service.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {service.description}
            </p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-start text-sm text-gray-600">
                  <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Why Choose Our ISO 27001 Services?
        </h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <div class="flex items-center bg-white p-4 rounded-lg shadow-sm">
            <Icon name="check-circle" class="w-5 h-5 text-green-500 mr-3" />
            <span class="text-gray-700">{benefit}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-indigo-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Ready to Start Your ISO 27001 Journey?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Get expert guidance and accelerate your certification timeline
      </p>
      <Button href="/contact" variant="secondary">
        Contact Our Experts
      </Button>
    </div>
  </section>
</Layout>

