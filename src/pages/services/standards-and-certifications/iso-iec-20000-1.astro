---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/ui/Button.astro';

const title = 'ISO/IEC 20000-1';
const description = 'IT service management alignment for MSSP processes and SLAs.';

const services = [
  {
    title: 'MSSP Process Alignment',
    description: 'Align your managed security service provider processes with ISO/IEC 20000-1 standards',
    features: [
      'Security operations center (SOC) process optimization',
      'Incident response workflow standardization',
      'Threat monitoring service alignment',
      'Security event management processes'
    ]
  },
  {
    title: 'SLA Framework Development',
    description: 'Develop comprehensive service level agreements that meet ISO/IEC 20000-1 requirements',
    features: [
      'Security service level objectives (SLOs)',
      'Response time guarantees',
      'Availability and uptime commitments',
      'Performance measurement frameworks'
    ]
  },
  {
    title: 'Service Management Implementation',
    description: 'Complete IT service management system implementation for security services',
    features: [
      'Service catalog development',
      'Change management processes',
      'Configuration management database (CMDB)',
      'Problem and incident management'
    ]
  },
  {
    title: 'Continuous Improvement',
    description: 'Establish continuous service improvement processes for managed security services',
    features: [
      'Service performance monitoring',
      'Customer satisfaction measurement',
      'Process optimization initiatives',
      'Regular service reviews and updates'
    ]
  }
];

const msspBenefits = [
  {
    title: 'Enhanced Service Quality',
    description: 'Standardized processes ensure consistent, high-quality security service delivery'
  },
  {
    title: 'Improved SLA Compliance',
    description: 'Meet and exceed service level agreements with structured management processes'
  },
  {
    title: 'Better Risk Management',
    description: 'Integrated risk management across all IT and security service operations'
  },
  {
    title: 'Customer Confidence',
    description: 'Demonstrate commitment to service excellence through international certification'
  }
];

const keyProcesses = [
  'Service Level Management',
  'Availability Management', 
  'Capacity Management',
  'Information Security Management',
  'Incident Management',
  'Problem Management',
  'Change Management',
  'Release Management',
  'Configuration Management',
  'Supplier Management',
  'Service Continuity Management',
  'Service Reporting'
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="inline-flex items-center px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium mb-6">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h6a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h6a2 2 0 002-2v-4a2 2 0 00-2-2m8-8a2 2 0 012 2v4a2 2 0 01-2 2"></path>
          </svg>
          IT Service Management Excellence
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {title}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">
            Start ITSM Alignment
          </Button>
          <Button href="#services" variant="secondary">
            Learn More
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          MSSP Service Management Solutions
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Comprehensive IT service management alignment for managed security service providers
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="bg-gradient-to-br from-gray-50 to-indigo-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {service.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {service.description}
            </p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-start text-sm text-gray-600">
                  <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Key Processes -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          ISO/IEC 20000-1 Key Processes
        </h2>
        <p class="text-lg text-gray-600">
          Comprehensive coverage of all required service management processes
        </p>
      </div>
      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4">
        {keyProcesses.map((process) => (
          <div class="bg-white p-4 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-indigo-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 text-sm font-medium">{process}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- MSSP Benefits -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Benefits for MSSPs
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Why ISO/IEC 20000-1 certification is essential for managed security service providers
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {msspBenefits.map((benefit) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              {benefit.title}
            </h3>
            <p class="text-gray-600 text-sm">
              {benefit.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Implementation Approach -->
  <section class="py-20 bg-gradient-to-r from-indigo-600 to-purple-700">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-white mb-6">
            Our Implementation Approach
          </h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center mr-4 mt-1">
                <span class="text-purple-800 font-bold text-sm">1</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Assessment & Gap Analysis</h3>
                <p class="text-purple-100">Evaluate current MSSP processes against ISO/IEC 20000-1 requirements</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center mr-4 mt-1">
                <span class="text-purple-800 font-bold text-sm">2</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Process Design & Documentation</h3>
                <p class="text-purple-100">Design and document service management processes tailored for security services</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center mr-4 mt-1">
                <span class="text-purple-800 font-bold text-sm">3</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">SLA Development & Integration</h3>
                <p class="text-purple-100">Create comprehensive SLAs that align with service management objectives</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center mr-4 mt-1">
                <span class="text-purple-800 font-bold text-sm">4</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Implementation & Training</h3>
                <p class="text-purple-100">Deploy processes, train staff, and establish monitoring mechanisms</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center mr-4 mt-1">
                <span class="text-purple-800 font-bold text-sm">5</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">Certification & Continuous Improvement</h3>
                <p class="text-purple-100">Support certification process and establish ongoing improvement cycles</p>
              </div>
            </div>
          </div>
        </div>
        <div class="lg:text-center">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-8">
            <svg class="w-20 h-20 text-purple-200 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
            <h3 class="text-2xl font-bold text-white mb-4">Ready to Enhance Your MSSP Services?</h3>
            <p class="text-purple-100 mb-6">
              Achieve ISO/IEC 20000-1 certification and demonstrate your commitment to service excellence
            </p>
            <Button href="/contact" variant="secondary">
              Start Your Journey
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Benefits Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Why Choose ISO/IEC 20000-1?</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Transform your IT service delivery with internationally recognized IT Service Management standards and proven best practices.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Service Quality</h3>
          <p class="text-slate-600">Deliver consistent, high-quality IT services that meet business requirements and customer expectations.</p>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Operational Efficiency</h3>
          <p class="text-slate-600">Streamline IT processes, reduce waste, and improve resource utilization across your IT organization.</p>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Cost Optimization</h3>
          <p class="text-slate-600">Reduce IT costs through better service management, improved efficiency, and strategic resource allocation.</p>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Customer Satisfaction</h3>
          <p class="text-slate-600">Improve customer satisfaction through reliable service delivery and effective service level management.</p>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Risk Management</h3>
          <p class="text-slate-600">Identify and manage IT service risks with structured approaches to service continuity and availability.</p>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Compliance & Governance</h3>
          <p class="text-slate-600">Meet regulatory requirements and establish strong IT governance with documented, auditable processes.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-indigo-600 to-purple-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Transform Your IT Service Delivery</h2>
      <p class="text-xl text-indigo-100 mb-8 max-w-3xl mx-auto">
        Implement ISO/IEC 20000-1 to achieve service management excellence and deliver value to your business.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 transition-colors">
          Start ITSM Transformation
        </a>
        <a href="/about" class="inline-flex items-center px-8 py-3 border border-white text-base font-medium rounded-md text-white hover:bg-indigo-700 transition-colors">
          Learn More About Us
        </a>
      </div>
    </div>
  </section>
</Layout>