---
import Layout from '@/layouts/Layout.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import Button from '@/components/ui/Button.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const title = lang === 'fi' ? 'Maksukontrollit ja palautumisen playbookit' : 'Payment Controls and Recovery Playbooks';
const description = lang === 'fi' ? 'Vahvista maksuprosessit ja varaudu palautumiseen – pankkikontaktit, STOP‑maksu, rikosilmoitukset.' : 'Harden payment processes and prepare recovery – bank contacts, payment stop, police report.';

const tracks = [
  { 
    icon:'document', 
    fi:'Prosessi‑ ja järjestelmäkontrollit', 
    en:'Process and system controls',
    fiDesc: 'Nelisilmäperiaate, maksulimittien ja muutoshallinta',
    enDesc: 'Four-eyes principle, payment limits and change management'
  },
  { 
    icon:'user', 
    fi:'Koulutus ja todennus', 
    en:'Training and verification',
    fiDesc: 'Henkilöstökoulutus ja puhelinvahvistusprosessit',
    enDesc: 'Staff training and phone verification processes'
  },
  { 
    icon:'alert', 
    fi:'Incident‑playbookit', 
    en:'Incident playbooks',
    fiDesc: 'Valmiit toimintamallit petostapausten käsittelyyn',
    enDesc: 'Ready action models for fraud incident handling'
  }
];

const recoverySteps = [
  {
    icon: 'stop-circle',
    titleFi: 'Maksun pysäytys',
    titleEn: 'Payment Stop',
    descFi: 'Välitön maksun pysäytys pankin kautta',
    enDesc: 'Immediate payment stop through bank',
    actionsFi: ['Pankin yhteyshenkilön soitto', 'Maksun tunnistetietojen välitys', 'Kirjallinen vahvistus'],
    actionsEn: ['Call bank contact person', 'Provide payment identifiers', 'Written confirmation']
  },
  {
    icon: 'search',
    titleFi: 'Tapauksen selvitys',
    titleEn: 'Incident Investigation',
    descFi: 'Petoksen laajuuden ja vaikutusten selvitys',
    enDesc: 'Fraud scope and impact assessment',
    actionsFi: ['Tapahtumien rekonstruointi', 'Vaikutusten arviointi', 'Todistusaineiston keruu'],
    actionsEn: ['Event reconstruction', 'Impact assessment', 'Evidence collection']
  },
  {
    icon: 'phone',
    titleFi: 'Viranomaisilmoitus',
    titleEn: 'Authority Notification',
    descFi: 'Poliisin ja muiden viranomaisten informointi',
    enDesc: 'Police and other authorities notification',
    actionsFi: ['Rikosilmoituksen teko', 'Pankin ilmoitus', 'Vakuutusyhtiön kontakti'],
    actionsEn: ['Police report filing', 'Bank notification', 'Insurance company contact']
  },
  {
    icon: 'refresh-cw',
    titleFi: 'Palautuminen',
    titleEn: 'Recovery',
    descFi: 'Kontrollien vahvistaminen ja oppiminen',
    enDesc: 'Control strengthening and lessons learned',
    actionsFi: ['Haavoittuvuuksien korjaus', 'Kontrollien päivitys', 'Henkilöstön koulutus'],
    actionsEn: ['Vulnerability remediation', 'Control updates', 'Staff retraining']
  }
];

const preventiveControls = [
  {
    titleFi: 'Tekninen suojaus',
    titleEn: 'Technical Protection',
    itemsFi: ['SPF/DKIM/DMARC konfigurointi', 'Anti-spoofing suodattimet', 'MFA kaikille tileille', 'ERP-integraatiot'],
    itemsEn: ['SPF/DKIM/DMARC configuration', 'Anti-spoofing filters', 'MFA for all accounts', 'ERP integrations']
  },
  {
    titleFi: 'Prosessikontrollit',
    titleEn: 'Process Controls',
    itemsFi: ['Nelisilmäperiaate maksuille', 'Toimittajatietojen lukitseminen', 'Maksulimittien asettaminen', 'Muutosprosessien valvonta'],
    itemsEn: ['Four-eyes payment approval', 'Vendor data locking', 'Payment limit setting', 'Change process monitoring']
  },
  {
    titleFi: 'Henkilöstökontrollit',
    titleEn: 'Human Controls',
    itemsFi: ['Säännöllinen petoskoulutus', 'Puhelinvahvistusprosessit', 'Raportointikanavat', 'Simulaatiot ja testit'],
    itemsEn: ['Regular fraud training', 'Phone verification processes', 'Reporting channels', 'Simulations and tests']
  }
];
---

<Layout title={title} description={description}>
  <section class="bg-gradient-to-br from-emerald-50 via-white to-teal-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">{title}</h1>
        <p class="text-xl text-slate-600">{description}</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{lang==='fi' ? 'Maksukontrollien rakentaminen' : 'Building Payment Controls'}</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">{lang==='fi' ? 'Kolmiulotteinen lähestymistapa maksupetosriskien hallintaan.' : 'Three-dimensional approach to payment fraud risk management.'}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {tracks.map(t => (
          <div class="bg-gradient-to-br from-slate-50 to-white p-8 rounded-xl border border-slate-200 hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-emerald-100 rounded-xl flex items-center justify-center mb-6"><Icon name={t.icon} className="w-8 h-8 text-emerald-600" /></div>
            <h3 class="text-lg font-bold text-slate-900 mb-2">{lang==='fi'?t.fi:t.en}</h3>
            <p class="text-slate-600 text-sm">{lang==='fi'?t.fiDesc:t.enDesc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{lang==='fi' ? 'Palautumisplaybookit' : 'Recovery Playbooks'}</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">{lang==='fi' ? 'Valmiit toimintamallit maksupetostapausten nopeaan ja tehokkaaseen käsittelyyn.' : 'Ready action models for fast and effective payment fraud incident handling.'}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {recoverySteps.map((step, index) => (
          <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-emerald-600 rounded-lg flex items-center justify-center mb-4 text-white font-bold">{index + 1}</div>
            <div class="w-8 h-8 mb-3">
              <Icon name={step.icon} className="w-8 h-8 text-emerald-600" />
            </div>
            <h3 class="text-lg font-bold text-slate-900 mb-2">{lang==='fi' ? step.titleFi : step.titleEn}</h3>
            <p class="text-slate-600 text-sm mb-4">{lang==='fi' ? step.descFi : step.enDesc}</p>
            <ul class="space-y-1">
              {(lang==='fi' ? step.actionsFi : step.actionsEn).map(action => (
                <li class="flex items-start text-xs">
                  <Icon name="check" className="w-3 h-3 text-green-600 mt-0.5 mr-2 flex-shrink-0" />
                  <span class="text-slate-600">{action}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{lang==='fi' ? 'Ennaltaehkäisevät kontrollit' : 'Preventive Controls'}</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">{lang==='fi' ? 'Kattava kontrollien valikoima maksupetosriskien ennaltaehkäisyyn.' : 'Comprehensive control suite for payment fraud risk prevention.'}</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {preventiveControls.map((control, index) => (
          <div class="bg-gradient-to-br from-slate-50 to-white p-8 rounded-xl border border-slate-200">
            <div class="w-12 h-12 bg-emerald-600 rounded-lg flex items-center justify-center mb-4 text-white font-bold">{index + 1}</div>
            <h3 class="text-xl font-bold text-slate-900 mb-4">{lang==='fi' ? control.titleFi : control.titleEn}</h3>
            <ul class="space-y-2">
              {(lang==='fi' ? control.itemsFi : control.itemsEn).map(item => (
                <li class="flex items-start">
                  <Icon name="check" className="w-5 h-5 text-green-600 mt-0.5 mr-3 flex-shrink-0" />
                  <span class="text-slate-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">{lang==='fi' ? 'Tilaa maksuprosessien kovennus' : 'Schedule a payments hardening'}</h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">{lang==='fi' ? 'Rakennamme kontrollit ja palautumisplaybookit organisaatiollesi.' : 'We’ll build controls and recovery playbooks for your organization.'}</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3">{lang==='fi' ? 'Ota yhteyttä' : 'Get in Touch'}</Button>
        <Button href="/contact?consultation=true" variant="secondary" className="text-lg px-8 py-3">{lang==='fi' ? 'Varaa konsultaatio' : 'Book Consultation'}</Button>
      </div>
    </div>
  </section>
</Layout>



