---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';
import Button from '@/components/ui/Button.astro';

const title = "Home";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "Finland's Premier Cybersecurity & Compliance Partner",
  subtitle: "Expert guidance for ISO 27001, NIS2, DORA, and SOC 2 compliance across Nordic and EU markets.",
  description: "We help Finnish organizations and international companies operating in the EU navigate complex cybersecurity regulations while building robust, resilient security programs that protect your business and meet regulatory requirements.",
  primaryCTA: { text: "Book a Consultation", href: "/contact" },
  secondaryCTA: { text: "View Our Services", href: "/services" }
};

const keyServices = [
  {
    title: "ISO 27001 Implementation",
    description: "Complete ISMS implementation with Finnish market expertise and rapid certification pathways.",
    icon: "shield-check",
    href: "/frameworks/iso-27001"
  },
  {
    title: "NIS2 Compliance",
    description: "EU Network and Information Security Directive compliance for critical infrastructure and essential services.",
    icon: "globe",
    href: "/frameworks/nis2"
  },
  {
    title: "DORA Resilience",
    description: "Digital Operational Resilience Act compliance for financial services and fintech organizations.",
    icon: "banknotes",
    href: "/frameworks/dora"
  },
  {
    title: "SOC 2 Readiness",
    description: "Service Organization Control 2 preparation for SaaS and technology companies.",
    icon: "cloud",
    href: "/frameworks/soc-2"
  },
  {
    title: "Risk Assessment",
    description: "Comprehensive cybersecurity risk assessments tailored to Finnish regulatory environment.",
    icon: "chart-line",
    href: "/frameworks/risk-assessments"
  },
  {
    title: "Anti-Fraud Controls",
    description: "Advanced fraud prevention and detection systems for financial and e-commerce operations.",
    icon: "exclamation-triangle",
    href: "/frameworks/fraud-risk-assessment"
  }
];

const industries = [
  { 
    name: "Financial Services", 
    icon: "bank", 
    href: "/industries/financial-services-fintech",
    image: "/images/industries/financial-services.svg",
    description: "Banking, insurance, and fintech compliance"
  },
  { 
    name: "Public Sector", 
    icon: "building", 
    href: "/industries/public-sector-finland",
    image: "/images/industries/public-sector.svg",
    description: "Government and public administration"
  },
  { 
    name: "Healthcare", 
    icon: "heart", 
    href: "/industries/healthcare-life-sciences",
    image: "/images/industries/healthcare.svg",
    description: "Healthcare and life sciences"
  },
  { 
    name: "Manufacturing", 
    icon: "cog", 
    href: "/industries/manufacturing-industrial",
    image: "/images/industries/manufacturing.svg",
    description: "Industrial and manufacturing"
  },
  { 
    name: "Critical Infrastructure", 
    icon: "bolt", 
    href: "/industries/critical-infrastructure-energy",
    image: "/images/industries/critical-infrastructure.svg",
    description: "Energy and critical systems"
  },
  { 
    name: "SaaS & Technology", 
    icon: "code", 
    href: "/industries/saas-technology",
    image: "/images/industries/saas-technology.svg",
    description: "Software and technology companies"
  }
];

const trustSignals = [
  { number: "98%", label: "Certification Success Rate", description: "First-time ISO 27001 success" },
  { number: "500+", label: "Organizations Served", description: "Across Nordic and EU markets" },
  { number: "15+", label: "Years Experience", description: "In cybersecurity and compliance" },
  { number: "24/7", label: "Expert Support", description: "Available when you need us" }
];

const latestResources = [
  {
    title: "NIS2 Implementation Guide for Finnish Organizations",
    excerpt: "Complete roadmap for achieving NIS2 compliance in the Finnish regulatory context.",
    href: "/resources/guides/nis2-implementation-finland",
    category: "Guide"
  },
  {
    title: "ISO 27001 vs NIS2: Strategic Alignment Strategies",
    excerpt: "How to leverage existing ISO 27001 frameworks to accelerate NIS2 compliance.",
    href: "/resources/guides/iso27001-nis2-alignment",
    category: "Strategy"
  },
  {
    title: "DORA Compliance Checklist for Financial Services",
    excerpt: "Essential steps for financial institutions to meet DORA requirements by 2025.",
    href: "/resources/guides/dora-compliance-checklist",
    category: "Checklist"
  }
];
---

<Layout title={title}>
  <!-- Hero Section -->
  <HeroSection content={heroContent} />
  
  <!-- Simplified background pattern -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden opacity-50">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-teal-50 to-cyan-50"></div>
    
    <!-- Minimal floating elements -->
    <div class="absolute top-1/4 right-1/4 w-16 h-16 bg-teal-200 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute bottom-1/3 left-1/4 w-12 h-12 bg-cyan-200 rounded-full opacity-15 animate-pulse" style="animation-delay: 2s;"></div>
  </div>
  
  <!-- Key Services Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Comprehensive Cybersecurity Solutions</h2>
        <p class="text-xl text-slate-600 max-w-4xl mx-auto">
          We deliver end-to-end cybersecurity and compliance services designed specifically for the Finnish and EU regulatory landscape.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {keyServices.map((service, index) => (
          <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1" style={`animation-delay: ${index * 150}ms`}>
            <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">{service.title}</h3>
            <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>
            <a href={service.href} class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
              Learn more 
              <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="py-20 bg-slate-50 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Industries We Serve</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Specialized expertise across regulated industries with deep understanding of sector-specific compliance requirements.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {industries.map((industry, index) => (
          <a href={industry.href} class="group bg-white rounded-xl p-6 hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-slate-200" style={`animation-delay: ${index * 150}ms`}>
            <div class="w-full h-48 bg-gradient-to-br from-slate-100 to-slate-200 rounded-lg mb-4 overflow-hidden">
              <img 
                src={industry.image} 
                alt={`${industry.name} industry`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-teal-100 to-cyan-200 absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500" style="display: none;">
                <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            </div>
            <div class="text-center">
              <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-teal-600 transition-colors duration-300">{industry.name}</h3>
              <p class="text-sm text-slate-600">{industry.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Signals Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Why Organizations Choose Us</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Proven track record of delivering cybersecurity excellence with Finnish market expertise and international standards.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {trustSignals.map((signal, index) => (
          <div class="text-center group" style={`animation-delay: ${index * 100}ms`}>
            <div class="text-5xl font-bold text-teal-600 mb-3 group-hover:text-teal-700 transition-colors duration-300">
              {signal.number}
            </div>
            <div class="text-xl font-semibold text-slate-900 mb-2 group-hover:text-teal-600 transition-colors duration-300">{signal.label}</div>
            <div class="text-slate-600">{signal.description}</div>
            <!-- Simple underline -->
            <div class="w-0 h-0.5 bg-teal-600 mx-auto mt-2 group-hover:w-16 transition-all duration-300"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Resources Section -->
  <section class="py-20 bg-slate-50 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Latest Insights and Resources</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Stay ahead with our latest cybersecurity insights, guides, and regulatory updates.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestResources.map((resource, index) => (
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-slate-200" style={`animation-delay: ${index * 150}ms`}>
            <div class="mb-4">
              <span class="inline-block px-3 py-1 text-sm font-semibold text-teal-600 bg-teal-100 rounded-full">
                {resource.category}
              </span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">{resource.title}</h3>
            <p class="text-slate-600 mb-6 leading-relaxed">{resource.excerpt}</p>
            <a href={resource.href} class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
              Read more 
              <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <Button href="/resources" variant="secondary">
          View All Resources
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-slate-900 via-teal-900 to-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to Transform Your Cybersecurity?</h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">
        Join hundreds of organizations that trust us with their cybersecurity and compliance needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3 hover:scale-105 transition-transform duration-300 bg-teal-600 hover:bg-teal-700 text-white border-0">
          Get Started
        </Button>
        <Button href="/contact?assessment=true" variant="secondary" className="text-lg px-8 py-3 hover:scale-105 transition-transform duration-300 bg-white hover:bg-gray-100 text-slate-900 border border-slate-300">
          NIS2 Readiness Check
        </Button>
      </div>
    </div>
  </section>

  <!-- Simplified CSS for clean animations -->
  <style>
    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Simple card hover effects */
    .hover\:shadow-lg:hover {
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    /* Enhanced transitions */
    button, a[href] {
      transition: all 0.3s ease;
    }

    /* Responsive animations - respect user preferences */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }

    /* Performance optimizations */
    .transform {
      transform-style: preserve-3d;
      backface-visibility: hidden;
    }

    /* Subtle animations on load */
    .fade-in {
      opacity: 0;
      animation: fadeIn 0.6s ease-out forwards;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    /* Staggered delays for cards */
    .fade-in:nth-child(1) { animation-delay: 0ms; }
    .fade-in:nth-child(2) { animation-delay: 150ms; }
    .fade-in:nth-child(3) { animation-delay: 300ms; }
    .fade-in:nth-child(4) { animation-delay: 450ms; }
    .fade-in:nth-child(5) { animation-delay: 600ms; }
    .fade-in:nth-child(6) { animation-delay: 750ms; }
  </style>

  <!-- Simplified JavaScript for basic interactions -->
  <script>
    // Simple fade-in animation on page load
    document.addEventListener('DOMContentLoaded', () => {
      // Add fade-in class to sections for smooth loading
      const sections = document.querySelectorAll('section');
      sections.forEach((section, index) => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'all 0.6s ease-out';
        
        setTimeout(() => {
          section.style.opacity = '1';
          section.style.transform = 'translateY(0)';
        }, index * 100);
      });

      // Simple hover effects for cards
      const cards = document.querySelectorAll('[class*="hover:"]');
      cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          card.style.transform = 'translateY(-4px)';
        });
        card.addEventListener('mouseleave', () => {
          card.style.transform = 'translateY(0)';
        });
      });
    });
  </script>
</Layout>
