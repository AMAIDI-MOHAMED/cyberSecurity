---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';
import Button from '@/components/ui/Button.astro';

const title = "Home";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "Cybersecurity Compliance Made Simple for Finnish Businesses",
  subtitle: "Fast-track your ISO 27001, NIS2, and GDPR compliance with our proven 90-day programs. Expert guidance, complete documentation, and ongoing support included.",
  description: "",
  primaryCTA: { text: "Get Free Compliance Assessment", href: "/contact" },
  secondaryCTA: { text: "Download ISO 27001 Toolkit", href: "/downloads" }
};

const keyServices = [
  {
    title: "Compliance Frameworks",
    description: "Transform regulatory requirements into competitive advantages. Expert implementation of ISO 27001, SOC 2, GDPR, NIS2, and DORA frameworks with proven fast-track methodologies.",
    icon: "shield-check",
    href: "/services"
  },
  {
    title: "Risk Management",
    description: "Identify, assess, and mitigate cybersecurity risks effectively. Comprehensive risk assessments, third-party risk management, and business continuity planning tailored to your organization.",
    icon: "chart-line",
    href: "/services"
  },
  {
    title: "Governance & Policy",
    description: "Establish robust cybersecurity governance structures. Strategic policy development, CISO-as-a-Service, and board-level risk reporting to ensure organizational security maturity.",
    icon: "building-library",
    href: "/services"
  },
  {
    title: "Specialized Services",
    description: "Expert services for unique cybersecurity challenges. Anti-fraud services, digital trust solutions, audit preparation, and specialized compliance support for complex requirements.",
    icon: "star",
    href: "/services"
  }
];

const industries = [
  { 
    name: "Financial Services & Fintech", 
    icon: "bank", 
    href: "/industries/financial-services-fintech",
    image: "/images/industries/financial-services.svg",
    description: "Specialized DORA, PCI DSS, and operational resilience expertise for banks, payment processors, and fintech companies."
  },
  { 
    name: "SaaS & Technology", 
    icon: "code", 
    href: "/industries/saas-technology",
    image: "/images/industries/saas-technology.svg",
    description: "ISO 27001, SOC 2, and cloud security frameworks tailored for software companies and technology service providers."
  },
  { 
    name: "Healthcare & Life Sciences", 
    icon: "heart", 
    href: "/industries/healthcare-life-sciences",
    image: "/images/industries/healthcare.svg",
    description: "GDPR, medical device regulations, and patient data protection compliance for healthcare organizations and life sciences companies."
  },
  { 
    name: "Critical Infrastructure", 
    icon: "bolt", 
    href: "/industries/critical-infrastructure-energy",
    image: "/images/industries/critical-infrastructure.svg",
    description: "NIS2 directive implementation, operational technology security, and resilience planning for essential service providers."
  },
  { 
    name: "Public Sector", 
    icon: "building", 
    href: "/industries/public-sector-finland",
    image: "/images/industries/public-sector.svg",
    description: "Government-specific compliance frameworks, public procurement requirements, and citizen data protection standards."
  },
  { 
    name: "Manufacturing & Industrial", 
    icon: "cog", 
    href: "/industries/manufacturing-industrial",
    image: "/images/industries/manufacturing.svg",
    description: "Industrial IoT security, supply chain protection, and operational continuity for manufacturing and industrial organizations."
  }
];

const latestResources = [
  {
    title: "ISO 27001 Quick Start Guide",
    excerpt: "25-page implementation roadmap",
    href: "/downloads",
    category: "Guide"
  },
  {
    title: "NIS2 Compliance Checklist",
    excerpt: "Complete requirement assessment tool",
    href: "/downloads",
    category: "Checklist"
  },
  {
    title: "GDPR Privacy Impact Assessment Template",
    excerpt: "Ready-to-use PIA framework",
    href: "/downloads",
    category: "Template"
  }
];
---

<Layout title={title}>
  <!-- Hero Section -->
  <HeroSection content={heroContent} showPromoBanner={true} showTypewriter={true} showAnimation={true} />
  
  <!-- Simplified background pattern -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden opacity-50">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-teal-50 to-cyan-50"></div>
    
    <!-- Minimal floating elements -->
    <div class="absolute top-1/4 right-1/4 w-16 h-16 bg-teal-200 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute bottom-1/3 left-1/4 w-12 h-12 bg-cyan-200 rounded-full opacity-15 animate-pulse" style="animation-delay: 2s;"></div>
  </div>
  
  <!-- Key Services Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Our Core Service Areas</h2>
        <p class="text-xl text-slate-600 max-w-4xl mx-auto">
          We provide comprehensive cybersecurity and compliance services tailored for small and medium businesses facing resource constraints and compliance challenges.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {keyServices.map((service, index) => (
          <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1" style={`animation-delay: ${index * 150}ms`}>
            <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">{service.title}</h3>
            <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>
            <a href={service.href} class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
              Learn more 
              <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Packages Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Featured Fast-Track Packages</h2>
        <p class="text-xl text-slate-600 max-w-4xl mx-auto">
          Get Compliant Faster with Our Proven Programs
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">ISO 27001 Fast-Track</h3>
          <p class="text-slate-600 mb-4 leading-relaxed">Timeline: 90-120 days</p>
          <ul class="text-sm text-slate-600 space-y-2 mb-6">
            <li>• Complete ISMS implementation</li>
            <li>• Policy library (50+ documents)</li>
            <li>• Staff training and awareness</li>
            <li>• Certification audit support</li>
            <li>• 12-month ongoing support</li>
          </ul>
          <a href="/packages/iso-27001-fast-track" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Learn more 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">NIS2 Sprint Program</h3>
          <p class="text-slate-600 mb-4 leading-relaxed">Timeline: 60-90 days</p>
          <ul class="text-sm text-slate-600 space-y-2 mb-6">
            <li>• NIS2 gap analysis and compliance roadmap</li>
            <li>• Risk management framework implementation</li>
            <li>• Incident response procedures</li>
            <li>• Supply chain security measures</li>
            <li>• Regulatory reporting setup</li>
          </ul>
          <a href="/packages/nis2-sprint" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Learn more 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">SOC 2 Readiness-in-12 Weeks</h3>
          <p class="text-slate-600 mb-4 leading-relaxed">Timeline: 84 days</p>
          <ul class="text-sm text-slate-600 space-y-2 mb-6">
            <li>• Type I and Type II preparation</li>
            <li>• Control implementation and testing</li>
            <li>• Evidence collection framework</li>
            <li>• Audit preparation and support</li>
            <li>• Continuous monitoring setup</li>
          </ul>
          <a href="/packages/soc2-readiness-12-weeks" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Learn more 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="group bg-white p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class="w-16 h-16 bg-teal-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-teal-200 transition-colors duration-300">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">DORA Program-in-a-Box</h3>
          <p class="text-slate-600 mb-4 leading-relaxed">Timeline: 75-105 days</p>
          <ul class="text-sm text-slate-600 space-y-2 mb-6">
            <li>• ICT risk management framework</li>
            <li>• Third-party risk oversight program</li>
            <li>• Operational resilience testing</li>
            <li>• Incident reporting mechanisms</li>
            <li>• Business continuity enhancement</li>
          </ul>
          <a href="/packages/dora-program-in-a-box" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Learn more 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="py-20 bg-slate-50 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Industries We Serve</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Specialized expertise across regulated industries with deep understanding of sector-specific compliance requirements.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {industries.map((industry, index) => (
          <a href={industry.href} class="group bg-white rounded-xl p-6 hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-slate-200" style={`animation-delay: ${index * 150}ms`}>
            <div class="w-full h-48 bg-gradient-to-br from-slate-100 to-slate-200 rounded-lg mb-4 overflow-hidden">
              <img 
                src={industry.image} 
                alt={`${industry.name} industry`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-teal-100 to-cyan-200 absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500" style="display: none;">
                <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            </div>
            <div class="text-center">
              <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-teal-600 transition-colors duration-300">{industry.name}</h3>
              <p class="text-sm text-slate-600">{industry.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">What Our Clients Say</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          We consistently deliver on our promises with exceptional results.
        </p>
      </div>
      
      <div class="flex justify-center">
        <div class="bg-slate-50 p-8 rounded-xl border border-slate-200 max-w-2xl">
          <blockquote class="text-slate-700 mb-6 italic text-lg">
            "Working with this cybersecurity team was essential for our global compliance strategy. They helped us achieve ISO 27001 certification while maintaining our rapid international expansion across 160+ countries."
          </blockquote>
          <div class="flex items-center">
            <div>
              <div class="font-semibold text-slate-900">Margus Pala</div>
              <div class="text-sm text-slate-600">CPO, eID Easy</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Resources Section -->
  <section class="py-20 bg-slate-50 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Free Resources & Knowledge Hub</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Stay ahead with our latest cybersecurity insights, guides, and regulatory updates.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestResources.map((resource, index) => (
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-slate-200" style={`animation-delay: ${index * 150}ms`}>
            <div class="mb-4">
              <span class="inline-block px-3 py-1 text-sm font-semibold text-teal-600 bg-teal-100 rounded-full">
                {resource.category}
              </span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-teal-600 transition-colors duration-300">{resource.title}</h3>
            <p class="text-slate-600 mb-6 leading-relaxed">{resource.excerpt}</p>
            <a href={resource.href} class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
              Read more 
              <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <Button href="/resources" variant="secondary">
          View All Resources
        </Button>
      </div>
    </div>
  </section>

  <!-- Webinars Section -->
  <section class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-6">Upcoming Webinars</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Stay informed with our expert-led educational sessions
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-slate-50 p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <span class="inline-block px-3 py-1 text-sm font-semibold text-teal-600 bg-teal-100 rounded-full">
              September 15, 2025
            </span>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-4">NIS2 Implementation: What Finnish Companies Need to Know</h3>
          <p class="text-slate-600 mb-6">Essential guidance for organizations preparing for NIS2 compliance requirements.</p>
          <a href="/webinars" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Register 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="bg-slate-50 p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <span class="inline-block px-3 py-1 text-sm font-semibold text-teal-600 bg-teal-100 rounded-full">
              September 22, 2025
            </span>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-4">DORA Compliance for Financial Services</h3>
          <p class="text-slate-600 mb-6">Preparing financial institutions for digital operational resilience requirements.</p>
          <a href="/webinars" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Register 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="bg-slate-50 p-8 rounded-xl border border-slate-200 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <span class="inline-block px-3 py-1 text-sm font-semibold text-teal-600 bg-teal-100 rounded-full">
              September 29, 2025
            </span>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-4">ISO 27001:2022 Changes and Impact</h3>
          <p class="text-slate-600 mb-6">Understanding the latest updates and their implications for your organization.</p>
          <a href="/webinars" class="inline-flex items-center text-teal-600 hover:text-teal-800 font-semibold group/link transition-colors duration-300">
            Register 
            <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-slate-900 via-teal-900 to-slate-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to Secure Your Compliance?</h2>
      <p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto">
        Don't wait for a security incident or regulatory deadline to catch you unprepared.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="primary" className="text-lg px-8 py-3 hover:scale-105 transition-transform duration-300 bg-teal-600 hover:bg-teal-700 text-white border-0">
          Start Today
        </Button>
        <Button href="/contact?assessment=true" variant="secondary" className="text-lg px-8 py-3 hover:scale-105 transition-transform duration-300 bg-white hover:bg-gray-100 text-slate-900 border border-slate-300">
          Get Free Assessment
        </Button>
      </div>
    </div>
  </section>

  <!-- Simplified CSS for clean animations -->
  <style>
    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Simple card hover effects */
    .hover\:shadow-lg:hover {
