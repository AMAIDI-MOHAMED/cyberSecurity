---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const title = "Resources";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "Free Cybersecurity Resources & Knowledge Hub",
  subtitle: "Expert insights, practical guides, and proven tools for cybersecurity success.",
  description: "Access our comprehensive library of resources designed to help you understand, implement, and maintain robust security and compliance programs.",
  primaryCTA: { text: "Browse Resources", href: "#resources" },
  secondaryCTA: { text: "Download Featured Guides", href: "/downloads" }
};

const resourceCategories = [
  {
    title: "Featured Guides & Toolkits",
    description: "Complete implementation guides and practical toolkits for major compliance frameworks.",
    icon: "bookOpen",
    href: "/downloads",
    count: "5+ Guides",
    resources: [
      "ISO 27001 Complete Implementation Guide - 45 pages • Updated January 2024",
      "NIS2 Directive Compliance Handbook - 38 pages • Updated October 2024",
      "GDPR Privacy Implementation Toolkit - 52 pages • Updated March 2024",
      "SOC 2 Readiness Accelerator - 31 pages • Updated November 2024"
    ]
  },
  {
    title: "Templates & Toolkits",
    description: "Ready-to-use templates and tools for immediate implementation.",
    icon: "library",
    href: "/downloads",
    count: "50+ Templates",
    resources: [
      "ISO 27001 Policy Library (50+ documents)",
      "GDPR Privacy Policy Templates (15+ documents)",
      "Risk Assessment Toolkit (Excel-based)",
      "Compliance Dashboard Templates (Excel & PowerBI)"
    ]
  },
  {
    title: "Quick Reference Materials",
    description: "Essential checklists and quick reference guides for compliance frameworks.",
    icon: "document",
    href: "/downloads",
    count: "10+ Checklists",
    resources: [
      "ISO 27001 Quick Start Guide - 25-page implementation roadmap",
      "NIS2 Compliance Checklist - Complete requirement assessment tool", 
      "GDPR Privacy Impact Assessment Template - Ready-to-use PIA framework",
      "Cybersecurity Policy Library - 15 essential policy templates"
    ]
  },
  {
    title: "Whitepapers",
    description: "In-depth analysis and thought leadership on cybersecurity topics.",
    icon: "document-text",
    href: "/resources/whitepapers",
    count: "15+ Papers",
    resources: [
      "The Future of Cybersecurity Compliance",
      "Zero Trust Architecture Implementation",
      "Cybersecurity ROI Measurement",
      "Incident Response Best Practices"
    ]
  },
  {
    title: "Case Studies",
    description: "Real-world success stories and implementation examples.",
    icon: "briefcase",
    href: "/resources/case-studies",
    count: "25+ Studies",
    resources: [
      "ISO 27001 Implementation in 90 Days",
      "NIS2 Compliance for Energy Sector",
      "GDPR Implementation for SaaS Company",
      "Financial Services DORA Readiness"
    ]
  },
  {
    title: "Trust Center",
    description: "Information about our security practices, certifications, and compliance.",
    icon: "shield",
    href: "/resources/trust-center",
    count: "Security Info",
    resources: [
      "Our Security Certifications",
      "Data Protection Practices",
      "Third-Party Assessments",
      "Compliance Attestations"
    ]
  },
  {
    title: "Readiness Checks",
    description: "Interactive assessment tools to evaluate your cybersecurity posture.",
    icon: "checkCircle",
    href: "/resources/readiness-checks",
    count: "10+ Tools",
    resources: [
      "ISO 27001 Readiness Assessment",
      "NIS2 Compliance Checker",
      "GDPR Privacy Assessment",
      "Cybersecurity Maturity Evaluation"
    ]
  }
];

const featuredResources = [
  {
    title: "NIS2 Directive Compliance Guide",
    type: "Whitepaper",
    description: "Complete guide to understanding and implementing NIS2 directive requirements.",
    downloadLink: "/downloads/nis2-compliance-guide.pdf",
    date: "March 2024"
  },
  {
    title: "ISO 27001 Fast-Track Implementation",
    type: "Case Study",
    description: "How a tech startup achieved ISO 27001 certification in just 90 days.",
    downloadLink: "/downloads/iso-27001-case-study.pdf",
    date: "February 2024"
  },
  {
    title: "Cybersecurity ROI Calculator",
    type: "Tool",
    description: "Interactive tool to calculate the return on investment for cybersecurity initiatives.",
    downloadLink: "/tools/roi-calculator",
    date: "January 2024"
  }
];
---

<Layout title={title}>
  <HeroSection content={heroContent} />
  
  <section id="resources" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Resource Categories</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Explore our comprehensive collection of cybersecurity resources organized by category.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {resourceCategories.map(category => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6 hover:shadow-xl transition-shadow">
            <div class="mb-4">
              <h3 class="text-xl font-semibold text-slate-900 mb-2">{category.title}</h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800 mb-2">
                {category.count}
              </span>
              <p class="text-slate-600 mb-4">{category.description}</p>
            </div>
            
            <div class="mb-6">
              <h4 class="text-sm font-medium text-slate-900 mb-2">Featured Resources:</h4>
              <ul class="space-y-1">
                {category.resources.map(resource => (
                  <li class="text-sm text-slate-700">• {resource}</li>
                ))}
              </ul>
            </div>
            
            <a 
              href={category.href}
              class="block w-full text-center bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 transition-colors"
            >
              Explore {category.title}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Featured Resources</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Our most popular and recently updated resources to help you stay ahead of cybersecurity challenges.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredResources.map(resource => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6">
            <div class="mb-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mb-2">
                {resource.type}
              </span>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">{resource.title}</h3>
              <p class="text-slate-600 mb-2">{resource.description}</p>
              <p class="text-sm text-slate-500">{resource.date}</p>
            </div>
            
            <a 
              href={resource.downloadLink}
              class="inline-flex items-center text-teal-600 hover:text-teal-700 font-medium"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m-4 8a9 9 0 100-18 9 9 0 000 18z"></path>
              </svg>
              {resource.type === 'Tool' ? 'Access Tool' : 'Download'}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Knowledge Hub Benefits</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Always Updated</h3>
          <p class="text-slate-600">Content regularly updated to reflect latest regulations and best practices.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Expert Validated</h3>
          <p class="text-slate-600">All content reviewed and validated by our cybersecurity experts.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Practical Focus</h3>
          <p class="text-slate-600">Actionable guidance that you can implement in your organization.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Community Driven</h3>
          <p class="text-slate-600">Resources enhanced by feedback from our cybersecurity community.</p>
        </div>
      </div>
    </div>
  </section>

  <CTA 
    title="Stay Updated with Latest Resources"
    description="Subscribe to our newsletter to receive the latest cybersecurity resources, insights, and updates directly in your inbox."
    primaryCTA={{ text: "Subscribe Now", href: "/contact?newsletter=true" }}
    secondaryCTA={{ text: "Contact Our Experts", href: "/contact" }}
  />
</Layout>

