---
import Layout from '@/layouts/Layout.astro';
const title = 'ISO 27001 Updates Webinar Registration Moved';
const description = 'Registration has moved to the simplified webinar page.';
---
<Layout title={title} description={description}>
  <section class="py-24">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h1 class="text-3xl font-bold mb-6">{title}</h1>
      <p class="text-slate-600 mb-8">Visit the updated webinar page for current details.</p>
      <a href="/webinars/iso27001-updates" class="inline-flex items-center justify-center px-6 py-3 text-center font-medium text-white bg-teal-800 hover:bg-teal-700 rounded-lg transition-colors">Go to Webinar</a>
    </div>
  </section>
</Layout>
