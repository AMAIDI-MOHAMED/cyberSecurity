---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-teal-50 via-white to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          {currentContent.title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          {currentContent.description}
        </p>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900 mb-4">
            {lang === 'fi' ? 'Kelle tämä on tarkoitettu?' : 'Who is this for?'}
          </h2>
          <p class="text-slate-600 mb-4">{currentContent.whoFor}</p>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {lang === 'fi' ? 'Mitä saavutat?' : 'What will you achieve?'}
          </h3>
          <p class="text-slate-600">{currentContent.whatYouAchieve}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What is GDPR Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.gdprTitle}</h2>
        <p class="text-xl text-slate-600 max-w-4xl mx-auto">{currentContent.gdprDescription}</p>
      </div>
      
      <div class="bg-slate-50 rounded-xl p-8">
      <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-semibold text-slate-900 mb-4">EU Regulation</h3>
            <ul class="space-y-3 text-slate-700">
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Comprehensive data protection law
              </li>
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Applies to EU residents' data
              </li>
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Enforceable since May 2018
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-slate-900 mb-4">Key Objectives</h3>
            <ul class="space-y-3 text-slate-700">
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Protect personal data rights
              </li>
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Ensure data processing transparency
              </li>
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-teal-600 mr-3 flex-shrink-0 mt-1" />
                Strengthen data security
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Principles Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.principlesTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.principlesSubtitle}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.principles.map((principle) => (
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-sm">
            <Icon name="check" class="w-6 h-6 text-teal-600 flex-shrink-0 mt-1" />
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">{principle.title}</h3>
              <p class="text-slate-600 text-sm">{principle.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Compliance Requirements Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.complianceTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.complianceSubtitle}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.complianceAreas.map((area) => (
          <div class="flex items-start gap-4 p-6 bg-slate-50 rounded-xl">
            <Icon name="check" class="w-6 h-6 text-teal-600 flex-shrink-0 mt-1" />
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">{area.title}</h3>
              <p class="text-slate-600 text-sm">{area.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Implementation Steps Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.implementationTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.implementationSubtitle}</p>
      </div>
      
      <div class="space-y-8">
        {currentContent.steps.map((step, index) => (
          <div class="flex gap-8 items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-teal-600 text-white rounded-full flex items-center justify-center font-bold">
              {index + 1}
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">{step.title}</h3>
              <p class="text-slate-600">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
        </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.whyChooseTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.whyChooseSubtitle}</p>
        </div>
        
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <div class="space-y-6">
            {currentContent.whyChoosePoints.map((point) => (
              <div class="flex items-start">
                <Icon name="check" class="w-6 h-6 text-teal-600 mr-4 mt-1" />
                <p class="text-lg text-slate-700">{point}</p>
              </div>
            ))}
          </div>
        </div>
        <div class="bg-teal-50 p-8 rounded-xl">
          <h3 class="text-2xl font-bold text-teal-900 mb-6">Our Privacy Expertise</h3>
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-teal-600 rounded-full mr-3"></div>
              <span class="text-teal-800">Data protection specialists</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-teal-600 rounded-full mr-3"></div>
              <span class="text-teal-800">GDPR implementation experience</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-teal-600 rounded-full mr-3"></div>
              <span class="text-teal-800">Proven methodologies</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-teal-600 rounded-full mr-3"></div>
              <span class="text-teal-800">Ongoing support</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.benefitsTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.benefitsSubtitle}</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.benefitsList.map((benefit) => (
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-sm">
            <Icon name="check" class="w-6 h-6 text-teal-600 flex-shrink-0 mt-1" />
            <p class="text-slate-700">{benefit}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">{currentContent.ctaTitle}</h2>
      <p class="text-xl text-slate-300 mb-8">{currentContent.ctaSubtitle}</p>
      <p class="text-lg text-slate-300 mb-8 max-w-2xl mx-auto">{currentContent.ctaDescription}</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href={lang === 'fi' ? '/fi/contact?consultation=true' : '/contact?consultation=true'} variant="primary" className="text-lg px-8 py-4">
          {lang === 'fi' ? 'Varaa konsultaatio' : 'Book consultation'}
      </Button>
        <Button href={lang === 'fi' ? '/fi/contact?proposal=true' : '/contact?proposal=true'} variant="secondary" className="text-lg px-8 py-4">
          {lang === 'fi' ? 'Pyydä tarjous' : 'Request proposal'}
            </Button>
      </div>
    </div>
  </section>
</Layout>
