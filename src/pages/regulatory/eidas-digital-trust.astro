              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Components Section -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">{currentContent.componentsTitle}</h2>
        <p class="text-xl text-slate-600">{currentContent.componentsSubtitle}</p>
        </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {currentContent.components.map((component) => (
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-sm">
            <Icon name="check" class="w-6 h-6 text-teal-600 flex-shrink-0 mt-1" />
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-2">{component.title}</h3>
              <p class="text-slate-600 text-sm">{component.description}</p>
          </div>
        </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Compliance Requirements Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
