const currentContent = content[lang];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-teal-50 via-white to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {currentContent.title}
      </h1>
      <p class="text-2xl font-light text-slate-600 mb-8">
        {currentContent.subtitle}
      </p>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto">
        {currentContent.heroDescription}
      </p>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {currentContent.contactInfo.title}
      </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {currentContent.contactInfo.description}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {currentContent.contactInfo.phone}
          </h3>
          <p class="text-slate-600">+358 9 123 4567</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {currentContent.contactInfo.email}
          </h3>
          <p class="text-slate-600">info@cybersecurity.fi</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">
            {currentContent.contactInfo.address}
          </h3>
          <p class="text-slate-600">Helsinki, Finland</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Locations Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {currentContent.locations.title}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {currentContent.locations.description}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-sm">
          <h3 class="text-2xl font-bold text-slate-900 mb-4">
            {currentContent.locations.helsinki.city}
          </h3>
          <p class="text-slate-600 mb-4">{currentContent.locations.helsinki.country}</p>
          <div class="space-y-3">
            <p class="text-slate-600">{currentContent.locations.helsinki.address}</p>
            <p class="text-slate-600">{currentContent.locations.helsinki.phone}</p>
            <p class="text-slate-600">{currentContent.locations.helsinki.email}</p>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-sm">
          <h3 class="text-2xl font-bold text-slate-900 mb-4">
            {currentContent.locations.tampere.city}
          </h3>
          <p class="text-slate-600 mb-4">{currentContent.locations.tampere.country}</p>
          <div class="space-y-3">
            <p class="text-slate-600">{currentContent.locations.tampere.address}</p>
            <p class="text-slate-600">{currentContent.locations.tampere.phone}</p>
            <p class="text-slate-600">{currentContent.locations.tampere.email}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Department Contacts Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {currentContent.departments.title}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {currentContent.departments.description}
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-slate-50 p-6 rounded-xl">
          <h3 class="text-xl font-semibold text-slate-900 mb-3">
            {currentContent.departments.sales.title}
          </h3>
          <p class="text-slate-600 mb-4">
            {currentContent.departments.sales.description}
          </p>
          <div class="space-y-2">
            <p class="text-slate-600">{currentContent.departments.sales.email}</p>
            <p class="text-slate-600">{currentContent.departments.sales.phone}</p>
          </div>
        </div>

        <div class="bg-slate-50 p-6 rounded-xl">
          <h3 class="text-xl font-semibold text-slate-900 mb-3">
            {currentContent.departments.support.title}
          </h3>
          <p class="text-slate-600 mb-4">
            {currentContent.departments.support.description}
          </p>
          <div class="space-y-2">
            <p class="text-slate-600">{currentContent.departments.support.email}</p>
            <p class="text-slate-600">{currentContent.departments.support.phone}</p>
          </div>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-xl">
          <h3 class="text-xl font-semibold text-slate-900 mb-3">
            {currentContent.departments.compliance.title}
          </h3>
          <p class="text-slate-600 mb-4">
            {currentContent.departments.compliance.description}
          </p>
          <div class="space-y-2">
            <p class="text-slate-600">{currentContent.departments.compliance.email}</p>
            <p class="text-slate-600">{currentContent.departments.compliance.phone}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          {currentContent.form.title}
        </h2>
        <p class="text-xl text-slate-600">
          {currentContent.form.description}
        </p>
  </div>

      <div class="bg-white p-8 rounded-xl shadow-sm">
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                {currentContent.form.name} *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                placeholder={currentContent.form.name}
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                {currentContent.form.email} *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                placeholder={currentContent.form.email}
              />
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="company" class="block text-sm font-medium text-slate-700 mb-2">
                {currentContent.form.company}
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                placeholder={currentContent.form.company}
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                {currentContent.form.phone}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                placeholder={currentContent.form.phone}
              />
            </div>
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-slate-700 mb-2">
              {currentContent.form.service}
            </label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
            >
              <option value="">{lang === 'fi' ? 'Valitse palvelu' : 'Select a service'}</option>
              <option value="iso27001">ISO 27001 Certification</option>
              <option value="nis2">NIS2 Compliance</option>
              <option value="dora">DORA Compliance</option>
              <option value="gdpr">GDPR Compliance</option>
              <option value="eidas">eIDAS Services</option>
              <option value="other">{lang === 'fi' ? 'Muu' : 'Other'}</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
              {currentContent.form.message} *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
              placeholder={currentContent.form.message}
            ></textarea>
          </div>
          
          <div class="text-sm text-slate-500">
            * {currentContent.form.required}
          </div>
          
          <div class="text-center">
            <button
              type="submit"
              class="bg-teal-600 hover:bg-teal-700 text-white font-semibold py-3 px-8 rounded-lg text-lg transition duration-300"
            >
              {currentContent.form.submit}
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-slate-900 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">
        {currentContent.cta.title}
      </h2>
      <p class="text-xl text-slate-300 mb-8">
        {currentContent.cta.subtitle}
      </p>
      <a
        href={currentContent.cta.link}
        class="bg-teal-600 hover:bg-teal-700 text-white font-semibold py-3 px-8 rounded-lg text-lg transition duration-300 inline-block"
      >
        {currentContent.cta.button}
      </a>
    </div>
  </section>
</Layout>
