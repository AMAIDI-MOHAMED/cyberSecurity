---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const title = "About Us";
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

const heroContent = {
  title: "About CyberSecurity.fi",
  subtitle: "Leading cybersecurity consultancy helping organizations build resilient security programs and achieve compliance.",
  description: "We are a team of experienced cybersecurity professionals dedicated to protecting organizations from cyber threats while ensuring regulatory compliance and business continuity.",
  primaryCTA: { text: "Meet Our Team", href: "#team" },
  secondaryCTA: { text: "Our Story", href: "#story" }
};

const teamMembers = [
  {
    name: "Dr. Sarah Johnson",
    role: "Chief Executive Officer & Founder",
    expertise: "ISO 27001, Risk Management, Strategy",
    bio: "15+ years in cybersecurity with expertise in compliance frameworks and risk management.",
    certifications: ["CISSP", "CISA", "ISO 27001 Lead Auditor"]
  },
  {
    name: "Michael Chen",
    role: "Chief Technology Officer",
    expertise: "Technical Security, Penetration Testing",
    bio: "Former CISO with deep technical expertise in security architecture and threat assessment.",
    certifications: ["CISSP", "CEH", "OSCP"]
  },
  {
    name: "Anna Virtanen",
    role: "Compliance Director",
    expertise: "NIS2, GDPR, DORA Compliance",
    bio: "Legal and compliance expert specializing in EU cybersecurity regulations.",
    certifications: ["CIPP/E", "CIPM", "ISO 27001 Lead Implementer"]
  },
  {
    name: "Robert Martinez",
    role: "Senior Security Consultant",
    expertise: "SOC 2, Audit Preparation",
    bio: "Former Big 4 auditor with extensive experience in security assessments.",
    certifications: ["CISA", "CRISC", "SOC 2 Practitioner"]
  }
];

const values = [
  {
    title: "Excellence",
    description: "We strive for excellence in every engagement, delivering high-quality solutions that exceed expectations.",
    icon: "star"
  },
  {
    title: "Integrity",
    description: "We operate with the highest ethical standards and maintain complete transparency in all our interactions.",
    icon: "shield"
  },
  {
    title: "Innovation",
    description: "We continuously innovate our approaches to stay ahead of evolving cybersecurity challenges.",
    icon: "lightbulb"
  },
  {
    title: "Partnership",
    description: "We build long-term partnerships with our clients, supporting their cybersecurity journey every step of the way.",
    icon: "users"
  }
];

const certifications = [
  { name: "ISO 27001 Certified Organization", logo: "/certifications/iso27001.png" },
  { name: "SOC 2 Type II Compliant", logo: "/certifications/soc2.png" },
  { name: "GDPR Compliant", logo: "/certifications/gdpr.png" },
  { name: "Cyber Essentials Plus", logo: "/certifications/cyber-essentials.png" }
];
---

<Layout title={title}>
  <HeroSection content={heroContent} />
  
  <section id="story" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Story</h2>
        </div>
        
        <div class="prose prose-lg mx-auto">
          <p class="text-lg text-slate-600 mb-6">
            Founded in 2018, CyberSecurity.fi emerged from a simple yet powerful vision: to make enterprise-grade 
            cybersecurity accessible to organizations of all sizes. Our founders, seasoned cybersecurity professionals 
            with decades of combined experience, recognized the growing gap between complex regulatory requirements 
            and practical implementation capabilities.
          </p>
          
          <p class="text-lg text-slate-600 mb-6">
            Based in Helsinki, Finland, we've grown from a small consultancy to a recognized leader in cybersecurity 
            compliance and risk management. Our expertise spans across multiple frameworks including ISO 27001, NIS2, 
            GDPR, DORA, and SOC 2, helping over 200+ organizations achieve their cybersecurity goals.
          </p>
          
          <p class="text-lg text-slate-600 mb-6">
            What sets us apart is our commitment to practical, implementable solutions. We don't just provide 
            recommendations â€“ we work alongside our clients to implement, monitor, and continuously improve their 
            cybersecurity posture. Our approach combines deep technical expertise with business acumen, ensuring 
            that security measures align with business objectives.
          </p>
          
          <p class="text-lg text-slate-600">
            Today, we continue to evolve and adapt to the changing cybersecurity landscape, always with our core 
            mission in mind: protecting organizations from cyber threats while enabling business growth and innovation.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="team" class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Leadership Team</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Meet the experienced professionals leading our cybersecurity practice and driving innovation in the field.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {teamMembers.map(member => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6 text-center">
            <div class="mb-4">
              <div class="w-24 h-24 bg-slate-200 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-slate-900 mb-1">{member.name}</h3>
              <p class="text-sm text-teal-600 mb-2">{member.role}</p>
              <p class="text-sm text-slate-600 mb-3">{member.expertise}</p>
            </div>
            
            <p class="text-sm text-slate-700 mb-4">{member.bio}</p>
            
            <div class="border-t border-slate-200 pt-4">
              <p class="text-xs text-slate-500 mb-2">Certifications:</p>
              <div class="flex flex-wrap justify-center gap-1">
                {member.certifications.map(cert => (
                  <span class="inline-block bg-slate-100 text-slate-700 text-xs px-2 py-1 rounded">
                    {cert}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Values</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          The principles that guide our work and define our commitment to our clients and the cybersecurity community.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map(value => (
          <div class="text-center">
            <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">{value.title}</h3>
            <p class="text-slate-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Certifications</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          We maintain the highest industry standards and certifications to ensure the quality and reliability of our services.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {certifications.map(cert => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6 text-center">
            <div class="w-16 h-16 bg-slate-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-sm font-semibold text-slate-900">{cert.name}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Why Choose Us</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2">Proven Track Record</h3>
          <p class="text-slate-600">200+ successful implementations across multiple industries and frameworks.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2">Expert Team</h3>
          <p class="text-slate-600">Certified professionals with deep expertise in cybersecurity and compliance.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-slate-900 mb-2">Practical Approach</h3>
          <p class="text-slate-600">Implementation-focused solutions that work in real-world business environments.</p>
        </div>
      </div>
    </div>
  </section>

  <CTA 
    title="Ready to Work with Us?"
    description="Join over 200 organizations that trust us with their cybersecurity and compliance needs."
    primaryCTA={{ text: "Schedule Consultation", href: "/contact?consultation=true" }}
    secondaryCTA={{ text: "View Our Services", href: "/services" }}
  />
</Layout>
