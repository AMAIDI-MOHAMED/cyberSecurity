---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import CTA from '@/components/sections/CTA.astro';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fi') ? 'fi' : 'en';

// SEO Configuration
const seoConfig = {
  title: lang === 'fi' 
    ? "Tietoa meist√§ | Kyberturvallisuuden asiantuntijat Suomessa"
    : "About Us | Cybersecurity Experts in Finland",
  description: lang === 'fi'
    ? "Cyber Security Finland on johtava kyberturvallisuuden ja vaatimustenmukaisuuden asiantuntijayritys. Kokemusta ISO 27001, NIS2 ja GDPR -toteutuksista."
    : "Cyber Security Finland is a leading cybersecurity and compliance consulting firm. Experienced in ISO 27001, NIS2, and GDPR implementations across industries.",
  keywords: lang === 'fi'
    ? "kyberturvallisuusyritys suomi, ISO 27001 konsultit, vaatimustenmukaisuus asiantuntijat, tietoturva konsultointi suomi"
    : "cybersecurity company finland, ISO 27001 consultants, compliance experts, information security consulting finland",
  type: "website" as const,
  schema: {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "About Cyber Security Finland",
    "description": "Learn about our cybersecurity and compliance expertise, team, and commitment to protecting Finnish businesses.",
    "mainEntity": {
      "@type": "Organization",
      "name": "Cyber Security Finland",
      "foundingDate": "2020",
      "description": "Expert cybersecurity and compliance services for Finnish businesses",
      "knowsAbout": ["ISO 27001", "NIS2 Directive", "GDPR Compliance", "Information Security", "Risk Management"]
    }
  }
};

const heroContent = {
  title: "About Cybersecurity.fi",
  subtitle: "Finland's premier cybersecurity and compliance consultancy.",
  description: "We help Finnish organizations and international companies operating in the EU navigate complex cybersecurity regulations while building robust, resilient security programs.",
  primaryCTA: { text: "Meet Our Team", href: "#team" },
  secondaryCTA: { text: "Our Story", href: "#story" }
};

const teamMembers = [
  {
    role: "Chief Executive Officer & Founder",
    description: "Our Chief Executive Officer brings over 15 years of cybersecurity expertise with deep knowledge in compliance frameworks and risk management. Having served as CISO at major financial institutions, they lead our organization with strategic vision in ISO 27001 implementation, enterprise risk management, and cybersecurity strategy development. Their certifications include CISSP, CISA, ISO 27001 Lead Auditor, and CRISC, ensuring our clients receive guidance from proven industry expertise."
  },
  {
    role: "Chief Technology Officer",
    description: "Our Chief Technology Officer is a former CISO with exceptional technical expertise in security architecture and threat assessment. They specialize in cloud security, incident response, and penetration testing methodologies. With certifications including CISSP, CEH, OSCP, AWS Security, and Azure Security, they ensure our technical solutions remain at the forefront of cybersecurity innovation."
  },
  {
    role: "Compliance Director",
    description: "Our Compliance Director is a legal and compliance expert specializing in EU cybersecurity regulations. Having served as legal counsel at European cybersecurity agencies, they bring invaluable expertise in NIS2, GDPR, and DORA compliance frameworks. Their certifications include CIPP/E, CIPM, ISO 27001 Lead Implementer, and NIS2 Expert, ensuring comprehensive regulatory compliance guidance."
  },
  {
    role: "Senior Security Consultant",
    description: "Our Senior Security Consultant is a former Big 4 auditor with extensive experience in security assessments and compliance audits across multiple industries. They specialize in SOC 2 preparations and audit readiness, bringing certifications including CISA, CRISC, SOC 2 Practitioner, and ISO 27001 Lead Auditor to deliver thorough and reliable audit support."
  },
  {
    role: "Head of Risk Management",
    description: "Our Head of Risk Management specializes in enterprise risk management and business continuity planning. As an expert in ISO 31000 and ISO 22301 frameworks, they provide comprehensive risk assessment and business continuity solutions. Their certifications include CRISC, ISO 31000 Risk Manager, and ISO 22301 Lead Implementer, ensuring robust risk management strategies."
  },
  {
    role: "Technical Security Lead",
    description: "Our Technical Security Lead is a cloud security specialist with expertise across AWS, Azure, and Google Cloud platforms. Having served as a senior security engineer at major technology companies, they bring deep knowledge in DevSecOps and cloud security architectures. Their certifications include CCSP, AWS Security, Azure Security, and Google Cloud Security, ensuring comprehensive cloud security solutions."
  }
];

const values = [
  {
    title: "Excellence",
    description: "We strive for excellence in every engagement, delivering high-quality solutions that exceed expectations.",
    icon: "star"
  },
  {
    title: "Integrity",
    description: "We operate with the highest ethical standards and maintain complete transparency in all our interactions.",
    icon: "shield"
  },
  {
    title: "Innovation",
    description: "We continuously innovate our approaches to stay ahead of evolving cybersecurity challenges.",
    icon: "lightbulb"
  },
  {
    title: "Partnership",
    description: "We build long-term partnerships with our clients, supporting their cybersecurity journey every step of the way.",
    icon: "users"
  }
];

const certifications = [
  { 
    name: "ISO 27001 Certified Organization", 
    logo: "iso27001",
    description: "Information Security Management" 
  },
  { 
    name: "SOC 2 Type II Compliant", 
    logo: "soc2",
    description: "Service Organization Controls" 
  },
  { 
    name: "GDPR Compliant", 
    logo: "gdpr",
    description: "General Data Protection Regulation" 
  },
  { 
    name: "Cyber Essentials Plus", 
    logo: "cyber-essentials",
    description: "UK Cyber Security Standard" 
  }
];
---

<Layout {...seoConfig}>
  <HeroSection content={heroContent} />
  
  <section id="story" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Story</h2>
        </div>
        
        <div class="prose prose-lg mx-auto">
          <p class="text-lg text-slate-600 mb-6">
            Cybersecurity.fi was founded with a vision to make cybersecurity compliance simple and accessible for Finnish businesses. 
            Our team of experienced professionals combines deep technical expertise with practical business understanding to deliver 
            solutions that protect organizations while enabling growth.
          </p>
          
          <p class="text-lg text-slate-600 mb-6">
            Based in Finland with expertise across EU regulations, we specialize in fast-track implementation programs that achieve 
            compliance in 90-120 days rather than traditional 12-18 month approaches. We've helped 200+ organizations achieve their 
            cybersecurity goals with a 95% first-time certification success rate.
          </p>
          
          <p class="text-lg text-slate-600 mb-6">
            Our approach focuses on building genuine security capabilities rather than just checking compliance boxes. We work as 
            true partners, providing ongoing support and guidance to ensure long-term success. Our services span ISO 27001, NIS2, 
            DORA, SOC 2, and GDPR compliance, along with specialized risk management and governance services.
          </p>
          
          <p class="text-lg text-slate-600">
            Today, we continue to lead the market in cybersecurity innovation, helping organizations transform regulatory requirements 
            into competitive advantages while building resilient security programs that protect against evolving cyber threats.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="team" class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Leadership Team</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Meet the experienced professionals leading our cybersecurity practice and driving innovation in the field.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {teamMembers.map(member => (
          <div class="bg-white rounded-lg shadow-lg border border-slate-200 p-6">
            <div class="mb-4">
              <div class="w-16 h-16 bg-teal-100 rounded-lg mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-teal-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 mb-2 text-center">{member.role}</h3>
            </div>
            
            <p class="text-sm text-slate-700 leading-relaxed">{member.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Values</h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          The principles that guide our work and define our commitment to our clients and the cybersecurity community.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map(value => (
          <div class="text-center">
            <div class="bg-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">{value.title}</h3>
            <p class="text-slate-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Professional Certifications Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-extrabold text-slate-900 mb-6 tracking-tight">Professional Certifications</h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          Our team maintains the highest industry standards
        </p>
      </div>
      <!-- Information Security -->
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-slate-900 mb-8 text-center tracking-tight">Information Security</h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-10">
          <div class="bg-slate-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
            <div class="w-28 h-28 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-24 h-24" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#1e40af" stroke="#1e3a8a" stroke-width="2"/>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="18" font-weight="bold">CISSP</text>
                <path d="M25 45 L35 52 L55 32" stroke="white" stroke-width="4" fill="none"/>
              </svg>
            </div>
            <p class="text-base font-semibold text-slate-800">CISSP</p>
          </div>
          <div class="bg-slate-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
            <div class="w-28 h-28 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-24 h-24" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#059669" stroke="#047857" stroke-width="2"/>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="18" font-weight="bold">CISM</text>
                <rect x="25" y="50" width="30" height="10" rx="2" fill="white"/>
              </svg>
            </div>
            <p class="text-base font-semibold text-slate-800">CISM</p>
          </div>
          <div class="bg-slate-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
            <div class="w-28 h-28 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-24 h-24" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#dc2626" stroke="#b91c1c" stroke-width="2"/>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="18" font-weight="bold">CISA</text>
                <polygon points="30,45 50,45 45,55 35,55" fill="white"/>
              </svg>
            </div>
            <p class="text-base font-semibold text-slate-800">CISA</p>
          </div>
          <div class="bg-slate-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
            <div class="w-28 h-28 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-24 h-24" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#7c3aed" stroke="#6d28d9" stroke-width="2"/>
                <text x="40" y="40" text-anchor="middle" fill="white" font-size="16" font-weight="bold">CCSP</text>
                <circle cx="40" cy="55" r="12" stroke="white" stroke-width="3" fill="none"/>
              </svg>
            </div>
            <p class="text-base font-semibold text-slate-800">CCSP</p>
          </div>
          <div class="bg-slate-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
            <div class="w-28 h-28 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-24 h-24" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#0891b2" stroke="#0e7490" stroke-width="2"/>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="18" font-weight="bold">SSCP</text>
                <rect x="30" y="50" width="20" height="10" rx="2" stroke="white" stroke-width="2" fill="none"/>
              </svg>
            </div>
            <p class="text-base font-semibold text-slate-800">SSCP</p>
          </div>
        </div>
      </div>

      <!-- Risk Management -->
      <div class="mb-12">
        <h3 class="text-xl font-semibold text-slate-900 mb-6 text-center">Risk Management</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#ea580c" stroke="#c2410c" stroke-width="2"/>
                <text x="40" y="32" text-anchor="middle" fill="white" font-size="7" font-weight="bold">CRISC</text>
                <path d="M25 50 L40 35 L55 50" stroke="white" stroke-width="3" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">CRISC</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#0f172a" stroke="#334155" stroke-width="2"/>
                <text x="40" y="28" text-anchor="middle" fill="white" font-size="5" font-weight="bold">ISO 31000</text>
                <text x="40" y="38" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Risk</text>
                <text x="40" y="48" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Manager</text>
                <circle cx="40" cy="55" r="5" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">ISO 31000 Risk Manager</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#374151" stroke="#1f2937" stroke-width="2"/>
                <text x="40" y="28" text-anchor="middle" fill="white" font-size="5" font-weight="bold">ISO 27005</text>
                <text x="40" y="38" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Risk</text>
                <text x="40" y="48" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Manager</text>
                <rect x="30" y="52" width="20" height="6" rx="1" fill="white"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">ISO 27005 Risk Manager</p>
          </div>
        </div>
      </div>

      <!-- Compliance & Audit -->
      <div class="mb-12">
        <h3 class="text-xl font-semibold text-slate-900 mb-6 text-center">Compliance & Audit</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#166534" stroke="#15803d" stroke-width="2"/>
                <text x="40" y="25" text-anchor="middle" fill="white" font-size="5" font-weight="bold">ISO 27001</text>
                <text x="40" y="35" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Lead</text>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Auditor</text>
                <rect x="28" y="50" width="24" height="8" rx="2" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">ISO 27001 Lead Auditor</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#059669" stroke="#047857" stroke-width="2"/>
                <text x="40" y="25" text-anchor="middle" fill="white" font-size="4" font-weight="bold">ISO 27001</text>
                <text x="40" y="35" text-anchor="middle" fill="white" font-size="4" font-weight="bold">Lead</text>
                <text x="40" y="45" text-anchor="middle" fill="white" font-size="4" font-weight="bold">Implementer</text>
                <polygon points="30,50 50,50 45,58 35,58" fill="white"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">ISO 27001 Lead Implementer</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#1d4ed8" stroke="#1e40af" stroke-width="2"/>
                <text x="40" y="30" text-anchor="middle" fill="white" font-size="6" font-weight="bold">SOC 2</text>
                <text x="40" y="42" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Practitioner</text>
                <circle cx="40" cy="52" r="6" stroke="white" stroke-width="2" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">SOC 2 Practitioner</p>
          </div>
        </div>
      </div>

      <!-- Privacy & Data Protection -->
      <div class="mb-12">
        <h3 class="text-xl font-semibold text-slate-900 mb-6 text-center">Privacy & Data Protection</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#0066cc" stroke="#0052a3" stroke-width="2"/>
                <text x="40" y="32" text-anchor="middle" fill="white" font-size="6" font-weight="bold">CIPP/E</text>
                <circle cx="25" cy="50" r="3" fill="#ffcc00"/>
                <circle cx="40" cy="50" r="3" fill="#ffcc00"/>
                <circle cx="55" cy="50" r="3" fill="#ffcc00"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">CIPP/E</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#7c2d12" stroke="#92400e" stroke-width="2"/>
                <text x="40" y="35" text-anchor="middle" fill="white" font-size="7" font-weight="bold">CIPM</text>
                <rect x="28" y="45" width="24" height="10" rx="2" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">CIPM</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#7c3aed" stroke="#6d28d9" stroke-width="2"/>
                <text x="40" y="35" text-anchor="middle" fill="white" font-size="7" font-weight="bold">CIPT</text>
                <path d="M30 45 L40 52 L50 45" stroke="white" stroke-width="2" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">CIPT</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#0066cc" stroke="#0052a3" stroke-width="2"/>
                <text x="40" y="28" text-anchor="middle" fill="white" font-size="5" font-weight="bold">GDPR</text>
                <text x="40" y="38" text-anchor="middle" fill="white" font-size="5" font-weight="bold">Practitioner</text>
                <circle cx="25" cy="50" r="2" fill="#ffcc00"/>
                <circle cx="35" cy="50" r="2" fill="#ffcc00"/>
                <circle cx="45" cy="50" r="2" fill="#ffcc00"/>
                <circle cx="55" cy="50" r="2" fill="#ffcc00"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">GDPR Practitioner</p>
          </div>
        </div>
      </div>

      <!-- Technical Security -->
      <div class="mb-12">
        <h3 class="text-xl font-semibold text-slate-900 mb-6 text-center">Technical Security</h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
                <circle cx="40" cy="40" r="38" fill="#dc2626" stroke="#b91c1c" stroke-width="2"/>
                <text x="40" y="35" text-anchor="middle" fill="white" font-size="8" font-weight="bold">CEH</text>
                <path d="M25 50 Q40 35 55 50" stroke="white" stroke-width="2" fill="none"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-700">CEH</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4 text-center hover:shadow-md transition-shadow">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-12 h-12" viewBox="0 0 80 80" fill="none">
