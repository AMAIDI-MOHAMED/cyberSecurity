---
import Button from "@ui/Button.astro";

interface Props {
  title?: string;
  description?: string;
  primaryCTA?: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
  showPromoBranding?: boolean;
}

const { 
  title, 
  description, 
  primaryCTA,
  secondaryCTA,
  showPromoBranding = false 
} = Astro.props;

// Default content for the section title and subtitle
const defaultTitle = showPromoBranding
  ? 'Transform Your Cybersecurity Today. <br /> Get started with <span class="font-medium text-teal-700">Cyber</span><span class="font-light text-slate-400">Security Finland</span>.'
  : 'Transform Your Cybersecurity Today. <br /> Get started with our <span class="font-medium text-teal-700">security</span> <span class="font-light text-slate-400">solutions</span>.';

const defaultSubTitle = showPromoBranding
  ? "Begin your cybersecurity journey and discover how CyberSecurity Finland's powerful security platform can revolutionize your digital protection and compliance."
  : "Begin your cybersecurity journey and discover how our powerful security platform can revolutionize your digital protection and compliance.";

// Use provided content or defaults
const finalTitle = title || defaultTitle;
const finalSubTitle = description || defaultSubTitle;
const finalPrimaryCTA = primaryCTA || { text: "Get Started", href: "#contact" };
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
>
  <div class="mx-auto mb-10 max-w-3xl text-center lg:mb-14">
    <h2
      class="text-balance text-4xl text-slate-800 sm:text-5xl"
    >
      <Fragment set:html={finalTitle} />
    </h2>
    <p class="text-lg\/8 mt-5 text-pretty text-slate-600">
      {finalSubTitle}
    </p>
    <Button
      href={finalPrimaryCTA.href}
      variant="primary"
      className="mt-7 inline-flex border-none px-3.5!">{finalPrimaryCTA.text}</Button
    >
  </div>
</section>

